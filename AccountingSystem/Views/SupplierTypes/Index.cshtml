@model IEnumerable<AccountingSystem.ViewModels.SupplierTypeListItemViewModel>
@{
    ViewData["Title"] = "أنواع الموردين";
    var statusMessage = ViewBag.StatusMessage as string;
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">أنواع الموردين</h2>
        <a class="btn btn-primary" asp-action="Create" asp-require-permission="suppliertypes.create">
            <i class="fas fa-plus"></i> إضافة نوع مورد
        </a>
    </div>

    @if (!string.IsNullOrWhiteSpace(statusMessage))
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @statusMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="إغلاق"></button>
        </div>
    }

    <div class="card shadow-sm">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-striped mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>الاسم</th>
                            <th class="text-center">عدد الموردين</th>
                            <th class="text-center">الحالة</th>
                            <th class="text-end">الإجراءات</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td class="fw-semibold">@item.Name</td>
                                    <td class="text-center">@item.SuppliersCount</td>
                                    <td class="text-center">
                                        @if (item.IsActive)
                                        {
                                            <span class="badge bg-success">نشط</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">غير نشط</span>
                                        }
                                    </td>
                                    <td class="text-end">
                                        <a class="btn btn-outline-primary btn-sm"
                                           asp-action="Edit"
                                           asp-route-id="@item.Id"
                                           asp-require-permission="suppliertypes.edit">
                                            <i class="fas fa-edit"></i> تعديل
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="4" class="text-center text-muted py-4">لا توجد أنواع مورّدين مضافة حالياً.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
