@model AccountingSystem.ViewModels.EmployeeDeductionFormViewModel
@{
    ViewData["Title"] = "تعديل خصم موظف";
}

<div class="container-fluid">
    <div class="card shadow-sm">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h3 class="mb-0">تعديل خصم موظف</h3>
            <a class="btn btn-outline-secondary" asp-action="Index"><i class="fas fa-arrow-right"></i> رجوع</a>
        </div>
        <div class="card-body">
            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="Id" />
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                <div class="mb-3">
                    <label asp-for="EmployeeId" class="form-label"></label>
                    <select asp-for="EmployeeId" class="form-select" asp-items="Model.Employees">
                        <option value="">اختر الموظف</option>
                    </select>
                    <span asp-validation-for="EmployeeId" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="DeductionTypeId" class="form-label"></label>
                    <select asp-for="DeductionTypeId" class="form-select" asp-items="Model.DeductionTypes">
                        <option value="">اختر نوع الخصم</option>
                    </select>
                    <span asp-validation-for="DeductionTypeId" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Amount" class="form-label"></label>
                    <input asp-for="Amount" class="form-control" type="number" step="0.01" min="0" />
                    <span asp-validation-for="Amount" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="form-label"></label>
                    <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="form-check form-switch mb-3">
                    <input asp-for="IsActive" class="form-check-input" />
                    <label asp-for="IsActive" class="form-check-label"></label>
                </div>

                <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i> حفظ التعديلات</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
