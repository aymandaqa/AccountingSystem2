@model AccountingSystem.ViewModels.PaginatedListViewModel<AccountingSystem.ViewModels.ReceiptVoucherListItemViewModel>
@using AccountingSystem.Models
@{
    ViewData["Title"] = "سندات القبض";
    var pageSizeOptions = new[] { 10, 25, 50, 100 };
}

<div class="container-fluid">
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }
    @if (TempData["InfoMessage"] != null)
    {
        <div class="alert alert-info">@TempData["InfoMessage"]</div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
    }

    <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-end gap-2 mb-3">
        <a asp-action="Create" class="btn btn-primary" asp-require-permission="receiptvouchers.create">سند قبض جديد</a>
        <a asp-action="ExportExcel"
           class="btn btn-success"
           asp-route-fromDate="@Model.FromDate?.ToString("yyyy-MM-dd")"
           asp-route-toDate="@Model.ToDate?.ToString("yyyy-MM-dd")"
           asp-route-searchTerm="@Model.SearchTerm"
           asp-require-permission="receiptvouchers.view">تصدير Excel</a>
    </div>

    <form method="get" class="row g-3 mb-3 align-items-end">
        <div class="col-md-3">
            <label for="fromDate" class="form-label">من تاريخ</label>
            <input type="date" id="fromDate" name="fromDate" class="form-control" value="@Model.FromDate?.ToString("yyyy-MM-dd")" />
        </div>
        <div class="col-md-3">
            <label for="toDate" class="form-label">إلى تاريخ</label>
            <input type="date" id="toDate" name="toDate" class="form-control" value="@Model.ToDate?.ToString("yyyy-MM-dd")" />
        </div>
        <div class="col-md-3">
            <label for="searchTerm" class="form-label">بحث في جميع الأعمدة</label>
            <input type="text" id="searchTerm" name="searchTerm" class="form-control" value="@Model.SearchTerm" placeholder="ابحث في السندات" />
        </div>
        <div class="col-md-2">
            <label for="pageSize" class="form-label">عدد السجلات في الصفحة</label>
            <select id="pageSize" name="pageSize" class="form-select">
                @foreach (var option in pageSizeOptions)
                {
                    <option value="@option" @(Model.PageSize == option ? "selected" : null)>@option</option>
                }
            </select>
        </div>
        <div class="col-md-1 d-grid">
            <input type="hidden" name="page" value="1" />
            <button type="submit" class="btn btn-secondary">بحث</button>
        </div>
        <div class="col-12 d-flex justify-content-end">
            <a asp-action="Index" class="btn btn-outline-secondary">مسح</a>
        </div>
    </form>

    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>التاريخ والوقت</th>
                <th>المورد</th>
                <th>حساب الدفع</th>
                <th>حساب المورد</th>
                <th>العملة</th>
                <th>سعر الصرف</th>
                <th>المبلغ</th>
                <th>المبلغ بالعملة الأساسية</th>
                <th>المرفق</th>
                <th>الحالة</th>
                <th>اعتماد الحركة</th>
                <th>مرجع القيد</th>
                <th>الفرع</th>
                <th class="text-end">إجراءات</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Items)
            {
                var v = item.Voucher;
                <tr>
                    <td>@v.Date.ToString("dd/MM/yyyy HH:mm")</td>
                    <td>@(v.Supplier?.NameAr ?? "-")</td>
                    <td>@(v.PaymentAccount?.NameAr ?? "-")</td>
                    <td>@v.Account.NameAr</td>
                    <td>@v.Currency.Code</td>
                    <td>@v.ExchangeRate.ToString("N6")</td>
                    <td>@v.Amount.ToString("N2")</td>
                    <td>@((v.Amount * v.ExchangeRate).ToString("N2"))</td>
                    <td>
                        @if (!string.IsNullOrWhiteSpace(v.AttachmentFilePath))
                        {
                            <a href="@Url.Content(v.AttachmentFilePath)" target="_blank" rel="noopener">
                                @(string.IsNullOrWhiteSpace(v.AttachmentFileName) ? "عرض المرفق" : v.AttachmentFileName)
                            </a>
                        }
                        else
                        {
                            <span class="text-muted">-</span>
                        }
                    </td>
                    <td>
                        @switch (v.Status)
                        {
                            case ReceiptVoucherStatus.PendingApproval:
                                <span class="badge bg-warning text-dark">بإنتظار الموافقة</span>
                                break;
                            case ReceiptVoucherStatus.Approved:
                                <span class="badge bg-success">معتمد</span>
                                break;
                            case ReceiptVoucherStatus.Rejected:
                                <span class="badge bg-danger">مرفوض</span>
                                break;
                        }
                    </td>
                    <td>
                        @if (v.ApprovedAt.HasValue)
                        {
                            <div>@v.ApprovedAt.Value.ToString("dd/MM/yyyy HH:mm")</div>
                            <small class="text-muted">@((v.ApprovedBy?.FullName) ?? v.ApprovedById ?? "-")</small>
                        }
                        else
                        {
                            <span class="text-muted">غير معتمد</span>
                        }
                    </td>
                    <td>
                        @if (item.JournalEntryId.HasValue)
                        {
                            <div class="d-flex flex-column align-items-start gap-1">
                                <span class="fw-semibold">@item.JournalEntryReference</span>
                                <small class="text-muted">رقم القيد: @item.JournalEntryNumber</small>
                                <a asp-controller="JournalEntries"
                                   asp-action="Details"
                                   asp-route-id="@item.JournalEntryId.Value"
                                   asp-require-permission="journal.view"
                                   class="btn btn-sm btn-outline-primary">
                                    <i class="fas fa-book-open me-1"></i>
                                    عرض القيد
                                </a>
                            </div>
                        }
                        else
                        {
                            <span class="text-muted">لا يوجد قيد</span>
                        }
                    </td>
                    <td>@(v.CreatedBy?.PaymentBranch?.NameAr ?? "-")</td>
                    <td class="text-end">
                        <form asp-action="Delete"
                              asp-route-id="@v.Id"
                              method="post"
                              class="d-inline"
                              asp-require-permission="receiptvouchers.delete"
                              onsubmit="return confirm('هل أنت متأكد من حذف سند القبض؟');">
                            <input type="hidden" name="fromDate" value="@Model.FromDate?.ToString("yyyy-MM-dd")" />
                            <input type="hidden" name="toDate" value="@Model.ToDate?.ToString("yyyy-MM-dd")" />
                            <input type="hidden" name="searchTerm" value="@Model.SearchTerm" />
                            <input type="hidden" name="page" value="@Model.PageIndex" />
                            <input type="hidden" name="pageSize" value="@Model.PageSize" />
                            <button type="submit" class="btn btn-sm btn-danger">حذف</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    @if (Model.TotalPages > 1)
    {
        var fromDateValue = Model.FromDate?.ToString("yyyy-MM-dd");
        var toDateValue = Model.ToDate?.ToString("yyyy-MM-dd");
        var startPage = Math.Max(1, Model.PageIndex - 2);
        var endPage = Math.Min(Model.TotalPages, Model.PageIndex + 2);
        <nav aria-label="صفحات سندات القبض">
            <ul class="pagination justify-content-center flex-wrap">
                <li class="page-item @(Model.PageIndex == 1 ? "disabled" : null)">
                    <a class="page-link" href="@Url.Action("Index", new { page = Model.PageIndex - 1, pageSize = Model.PageSize, fromDate = fromDateValue, toDate = toDateValue, searchTerm = Model.SearchTerm })">السابق</a>
                </li>
                @for (var pageNumber = startPage; pageNumber <= endPage; pageNumber++)
                {
                    <li class="page-item @(pageNumber == Model.PageIndex ? "active" : null)">
                        <a class="page-link" href="@Url.Action("Index", new { page = pageNumber, pageSize = Model.PageSize, fromDate = fromDateValue, toDate = toDateValue, searchTerm = Model.SearchTerm })">@pageNumber</a>
                    </li>
                }
                <li class="page-item @(Model.PageIndex == Model.TotalPages ? "disabled" : null)">
                    <a class="page-link" href="@Url.Action("Index", new { page = Model.PageIndex + 1, pageSize = Model.PageSize, fromDate = fromDateValue, toDate = toDateValue, searchTerm = Model.SearchTerm })">التالي</a>
                </li>
            </ul>
        </nav>
    }
</div>
