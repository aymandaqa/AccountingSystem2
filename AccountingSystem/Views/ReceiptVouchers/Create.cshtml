@model AccountingSystem.Models.ReceiptVoucher
@{
    ViewData["Title"] = "سند قبض جديد";
    Layout = "~/Views/Shared/_AccountingLayout.cshtml";
}

<div class="container-fluid">
    <form asp-action="Create" method="post" class="row g-3">
        <div class="col-md-6">
            <label class="form-label">العملة</label>
            <select asp-for="CurrencyId" class="form-select" asp-items="ViewBag.Currencies"></select>
        </div>
        <div class="col-md-6">
            <label class="form-label">الحساب</label>
            <select asp-for="AccountId" class="form-select" id="accountSelect">
                @foreach (var a in ViewBag.Accounts)
                {
                    <option value="@a.Id" data-currency="@a.CurrencyId">@a.Code - @a.NameAr</option>
                }
            </select>
        </div>
        <div class="col-md-6">
            <label class="form-label">المبلغ</label>
            <input asp-for="Amount" class="form-control" />
        </div>
        <div class="col-md-6">
            <label class="form-label">التاريخ</label>
            <input asp-for="Date" type="date" class="form-control" />
        </div>
        <div class="col-md-6">
            <label class="form-label">ملاحظات</label>
            <textarea asp-for="Notes" class="form-control"></textarea>
        </div>
        <div class="col-12">
            <button type="submit" class="btn btn-primary">حفظ</button>
        </div>
    </form>
</div>
