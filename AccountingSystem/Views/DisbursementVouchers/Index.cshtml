@model AccountingSystem.ViewModels.PaginatedListViewModel<AccountingSystem.ViewModels.DisbursementVoucherListItemViewModel>
@using AccountingSystem.Models
@using Microsoft.AspNetCore.Mvc.Rendering
@using System.Globalization
@using System.Linq

@{
    ViewData["Title"] = "سندات الدفع";
    var pageSizeOptions = new[] { 10, 25, 50, 100 };
    var branches = ViewBag.UserBranches as IEnumerable<SelectListItem> ?? Enumerable.Empty<SelectListItem>();
    int? selectedBranchId = ViewBag.SelectedBranchId as int?;
    var fromDateValue = Model.FromDate?.ToString("yyyy-MM-dd");
    var toDateValue = Model.ToDate?.ToString("yyyy-MM-dd");
    var searchTerm = Model.SearchTerm ?? string.Empty;
    var branchSelectList = branches.ToList();
    var statusFilters = new List<(DisbursementVoucherStatus Status, string Text)>
    {
        (DisbursementVoucherStatus.PendingApproval, "بإنتظار الموافقة"),
        (DisbursementVoucherStatus.Approved, "معتمد"),
        (DisbursementVoucherStatus.Rejected, "مرفوض")
    };
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="إغلاق"></button>
    </div>
}
@if (TempData["InfoMessage"] != null)
{
    <div class="alert alert-info alert-dismissible fade show" role="alert">
        @TempData["InfoMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="إغلاق"></button>
    </div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="إغلاق"></button>
    </div>
}

<div class="card shadow-sm">
    <div class="card-header bg-white py-3 d-flex flex-column flex-lg-row justify-content-between align-items-lg-center gap-3">
        <div>
            <h1 class="h4 mb-1">سندات الدفع (الصندوق)</h1>
            <p class="text-muted mb-0">تابع حركات الدفع النقدي بدقة مع مرشحات لكل عمود.</p>
        </div>
        <div class="d-flex flex-wrap gap-2">
            <a asp-action="Create" class="btn btn-primary" asp-require-permission="disbursementvouchers.create">
                <i class="fas fa-plus-circle ms-1"></i> سند دفع جديد
            </a>
            <a asp-action="ExportExcel"
               class="btn btn-success"
               asp-route-fromDate="@fromDateValue"
               asp-route-toDate="@toDateValue"
               asp-route-searchTerm="@searchTerm"
               asp-route-branchId="@selectedBranchId"
               asp-require-permission="disbursementvouchers.view">
                <i class="fas fa-file-excel ms-1"></i> تصدير Excel
            </a>
        </div>
    </div>
    <div class="card-body">
        <form method="get" class="row g-3 align-items-end mb-4" asp-action="Index">
            <div class="col-12 col-md-3">
                <label for="fromDate" class="form-label">من تاريخ</label>
                <input type="date" id="fromDate" name="fromDate" class="form-control" value="@fromDateValue" />
            </div>
            <div class="col-12 col-md-3">
                <label for="toDate" class="form-label">إلى تاريخ</label>
                <input type="date" id="toDate" name="toDate" class="form-control" value="@toDateValue" />
            </div>
            <div class="col-12 col-md-3">
                <label for="branchId" class="form-label">فرع الحركة</label>
                <select id="branchId" name="branchId" class="form-select">
                    <option value="">كل الفروع المسموح بها</option>
                    @foreach (var branch in branchSelectList)
                    {
                        <option value="@branch.Value" selected="@(selectedBranchId.HasValue && branch.Value == selectedBranchId?.ToString() ? "selected" : null)">@branch.Text</option>
                    }
                </select>
            </div>
            <div class="col-12 col-md-3">
                <label for="searchTerm" class="form-label">بحث عام</label>
                <input type="text" id="searchTerm" name="searchTerm" class="form-control" value="@searchTerm" placeholder="ابحث في كل الأعمدة" />
            </div>
            <div class="col-12 col-md-2">
                <label for="pageSize" class="form-label">عدد السجلات</label>
                <select id="pageSize" name="pageSize" class="form-select">
                    @foreach (var option in pageSizeOptions)
                    {
                        <option value="@option" selected="@(Model.PageSize == option ? "selected" : null)">@option</option>
                    }
                </select>
            </div>
            <div class="col-12 d-flex flex-wrap gap-2 justify-content-end">
                <input type="hidden" name="page" value="1" />
                <button type="submit" class="btn btn-secondary"><i class="fas fa-filter ms-1"></i> تطبيق</button>
                <a asp-action="Index" class="btn btn-outline-secondary"><i class="fas fa-undo ms-1"></i> إعادة تعيين</a>
            </div>
        </form>

        <div class="table-responsive">
            <table class="table table-striped table-hover align-middle">
                <thead class="table-light align-middle">
                    <tr>
                        <th scope="col">رقم السند</th>
                        <th scope="col">رقم القيد</th>
                        <th scope="col">التاريخ والوقت</th>
                        <th scope="col">المورد</th>
                        <th scope="col">العملة</th>
                        <th scope="col">المبلغ</th>
                        <th scope="col">المبلغ بالعملة الأساسية</th>
                        <th scope="col">المرفق</th>
                        <th scope="col">الحالة</th>
                        <th scope="col">اعتماد الحركة</th>
                        <th scope="col">الفرع</th>
                        <th scope="col">الملاحظات</th>
                        <th scope="col" class="text-end">إجراءات</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Items)
                    {
                        var voucher = item.Voucher;
                        var supplierName = voucher.Supplier?.NameAr ?? "-";
                        var currencyCode = voucher.Currency?.Code ?? "-";
                        var amount = voucher.Amount;
                        var baseAmount = voucher.Amount * voucher.ExchangeRate;
                        var attachmentText = string.IsNullOrWhiteSpace(voucher.AttachmentFilePath)
                            ? "-"
                            : (string.IsNullOrWhiteSpace(voucher.AttachmentFileName) ? "عرض المرفق" : voucher.AttachmentFileName);
                        var statusText = voucher.Status switch
                        {
                            DisbursementVoucherStatus.PendingApproval => "بإنتظار الموافقة",
                            DisbursementVoucherStatus.Approved => "معتمد",
                            DisbursementVoucherStatus.Rejected => "مرفوض",
                            _ => voucher.Status.ToString()
                        };
                        var approvalInfo = voucher.ApprovedAt.HasValue
                            ? string.Format(CultureInfo.CurrentCulture, "{0:dd/MM/yyyy HH:mm} - {1}", voucher.ApprovedAt.Value, voucher.ApprovedBy?.FullName ?? voucher.ApprovedById ?? "-")
                            : "غير معتمد";
                        var branchName = voucher.CreatedBy?.PaymentBranch?.NameAr ?? "-";
                        var notes = string.IsNullOrWhiteSpace(voucher.Notes) ? "-" : voucher.Notes;
                        var dateValue = voucher.Date.ToString("yyyy-MM-dd");
                        var amountNumeric = amount.ToString("G17", CultureInfo.InvariantCulture);
                        var baseAmountNumeric = baseAmount.ToString("G17", CultureInfo.InvariantCulture);
                        var rejectionReason = item.RejectionReason;
                    <tr>
                        <td data-filter-value="@voucher.Id">@voucher.Id</td>
                        <td data-filter-value="@item.JournalEntryNumber">
                            @if (item.JournalEntryId.HasValue)
                            {
                                <div class="d-flex flex-column align-items-start gap-1">
                                    <span class="fw-semibold">@item.JournalEntryNumber</span>
                                    <a asp-controller="JournalEntries"
                                       asp-action="Details"
                                       asp-route-id="@item.JournalEntryId.Value"
                                       asp-require-permission="journal.view"
                                       class="btn btn-sm btn-outline-primary">
                                        <i class="fas fa-book-open me-1"></i>
                                        عرض القيد
                                    </a>
                                </div>
                            }
                            else
                            {
                                <span class="text-muted">لا يوجد قيد</span>
                            }
                        </td>
                        <td data-filter-value="@voucher.Date.ToString("dd/MM/yyyy HH:mm")" data-filter-date="@dateValue">@voucher.Date.ToString("dd/MM/yyyy HH:mm")</td>
                        <td data-filter-value="@supplierName">@supplierName</td>
                        <td data-filter-value="@currencyCode">@currencyCode</td>
                        <td data-filter-value="@amount.ToString("N2")" data-filter-numeric="@amountNumeric">@amount.ToString("N2")</td>
                        <td data-filter-value="@baseAmount.ToString("N2")" data-filter-numeric="@baseAmountNumeric">@baseAmount.ToString("N2")</td>
                        <td data-filter-value="@attachmentText">
                            @if (!string.IsNullOrWhiteSpace(voucher.AttachmentFilePath))
                            {
                                <a href="@Url.ContentFromAttachmentPath(voucher.AttachmentFilePath)" target="_blank" rel="noopener">@attachmentText</a>
                            }
                            else
                            {
                                <span class="text-muted">-</span>
                            }
                        </td>
                        <td data-filter-value="@statusText">
                            @switch (voucher.Status)
                            {
                                case DisbursementVoucherStatus.PendingApproval:
                                    <span class="badge bg-warning text-dark">بإنتظار الموافقة</span>
                                    break;
                                case DisbursementVoucherStatus.Approved:
                                    <span class="badge bg-success">معتمد</span>
                                    break;
                                case DisbursementVoucherStatus.Rejected:
                                    <div class="d-flex flex-column gap-1">
                                        <span class="badge bg-danger">مرفوض</span>
                                        @if (!string.IsNullOrWhiteSpace(rejectionReason))
                                        {
                                            <small class="text-danger">سبب الرفض: @rejectionReason</small>
                                        }
                                    </div>
                                    break;
                            }
                        </td>
                        <td data-filter-value="@approvalInfo">
                            @if (voucher.ApprovedAt.HasValue)
                            {
                                <div>@voucher.ApprovedAt.Value.ToString("dd/MM/yyyy HH:mm")</div>
                                <small class="text-muted">@((voucher.ApprovedBy?.FullName) ?? voucher.ApprovedById ?? "-")</small>
                            }
                            else
                            {
                                <span class="text-muted">غير معتمد</span>
                            }
                        </td>
                        <td data-filter-value="@branchName">@branchName</td>
                        <td data-filter-value="@notes">@notes</td>
                        <td class="text-end">
                            <form asp-action="Delete"
                                  asp-route-id="@voucher.Id"
                                  method="post"
                                  class="d-inline"
                                  asp-require-permission="disbursementvouchers.delete"
                                  onsubmit="return confirm('هل أنت متأكد من حذف سند لدفع؟');">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="fromDate" value="@fromDateValue" />
                                <input type="hidden" name="toDate" value="@toDateValue" />
                                <input type="hidden" name="searchTerm" value="@searchTerm" />
                                <input type="hidden" name="branchId" value="@selectedBranchId" />
                                <input type="hidden" name="page" value="@Model.PageIndex" />
                                <input type="hidden" name="pageSize" value="@Model.PageSize" />
                                <button type="submit" class="btn btn-sm btn-danger">حذف</button>
                            </form>
                        </td>
                    </tr>
                    }
                    <tr class="no-results @(Model.Items.Any() ? "d-none" : string.Empty)">
                        <td colspan="13" class="text-center text-muted">لا توجد نتائج مطابقة للمرشحات الحالية.</td>
                    </tr>
                </tbody>
            </table>
        </div>

        @if (Model.TotalPages > 1)
        {
            var startPage = Math.Max(1, Model.PageIndex - 2);
            var endPage = Math.Min(Model.TotalPages, Model.PageIndex + 2);
            <nav aria-label="صفحات سندات الدفع" class="mt-3">
                <ul class="pagination justify-content-center flex-wrap mb-0">
                    <li class="page-item @(Model.PageIndex == 1 ? "disabled" : null)">
                        <a class="page-link" href="@Url.Action("Index", new { page = Model.PageIndex - 1, pageSize = Model.PageSize, fromDate = fromDateValue, toDate = toDateValue, searchTerm = searchTerm, branchId = selectedBranchId })">السابق</a>
                    </li>
                    @for (var pageNumber = startPage; pageNumber <= endPage; pageNumber++)
                    {
                        <li class="page-item @(pageNumber == Model.PageIndex ? "active" : null)">
                            <a class="page-link" href="@Url.Action("Index", new { page = pageNumber, pageSize = Model.PageSize, fromDate = fromDateValue, toDate = toDateValue, searchTerm = searchTerm, branchId = selectedBranchId })">@pageNumber</a>
                        </li>
                    }
                    <li class="page-item @(Model.PageIndex == Model.TotalPages ? "disabled" : null)">
                        <a class="page-link" href="@Url.Action("Index", new { page = Model.PageIndex + 1, pageSize = Model.PageSize, fromDate = fromDateValue, toDate = toDateValue, searchTerm = searchTerm, branchId = selectedBranchId })">التالي</a>
                    </li>
                </ul>
            </nav>
        }
    </div>
</div>

