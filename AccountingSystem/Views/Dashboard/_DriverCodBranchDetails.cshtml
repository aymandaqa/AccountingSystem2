@model IReadOnlyList<AccountingSystem.ViewModels.DriverCodBranchDetailViewModel>

@if (Model == null || !Model.Any())
{
    <div class="alert alert-light border text-center my-2">
        لا توجد بيانات للسائقين في هذا الفرع.
    </div>
}
else
{
    @foreach (var detail in Model)
    {
        <div class="tree-node level-1" data-has-children="false">
            <div class="tree-node-content">
                <div class="tree-node-info">
                    <span style="width: 20px; display: inline-block;"></span>
                    <span class="account-name">@detail.DriverName</span>
                    <small class="text-muted ms-2">رقم السائق: @detail.DriverId</small>
                </div>
                <div class="tree-node-metrics text-end ms-auto">
                    <div class="metric">
                        <span class="metric-label">إجمالي الشحنات</span>
                        <span class="metric-value">@detail.ShipmentTotal.ToString("N2")</span>
                    </div>
                    <div class="metric">
                        <span class="metric-label">مبالغ الـ COD</span>
                        <span class="metric-value text-success">@detail.ShipmentCod.ToString("N2")</span>
                    </div>
                </div>
            </div>
        </div>
    }
}
