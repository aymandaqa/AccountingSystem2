@model IReadOnlyList<AccountingSystem.ViewModels.DriverCodBranchDetailViewModel>

@if (Model == null || !Model.Any())
{
    <div class="alert alert-light border text-center my-2">
        لا توجد بيانات للسائقين في هذا الفرع.
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table table-sm table-striped mb-0">
            <thead class="table-light">
                <tr>
                    <th style="width: 40%;">السائق</th>
                    <th class="text-end">إجمالي الشحنات</th>
                    <th class="text-end">مبالغ الـ COD</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var detail in Model.OrderBy(d => d.DriverName))
                {
                    <tr>
                        <td>
                            <div class="fw-semibold">@detail.DriverName</div>
                            <div class="text-muted small">رقم السائق: @detail.DriverId</div>
                        </td>
                        <td class="text-end">@detail.ShipmentTotal.ToString("N2")</td>
                        <td class="text-end text-success">@detail.ShipmentCod.ToString("N2")</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
