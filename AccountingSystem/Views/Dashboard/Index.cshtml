@using System.Globalization
@using Microsoft.AspNetCore.Authorization
@using AccountingSystem.Models
@model AccountingSystem.ViewModels.Dashboard.CashPerformanceDashboardViewModel
@inject IAuthorizationService AuthorizationService

@{
    ViewData["Title"] = "لوحة التحكم";

    var canWorkflowDefinitionsManage = (await AuthorizationService.AuthorizeAsync(User, "dashboard.companyperformance")).Succeeded;
    var canManageTransfers = (await AuthorizationService.AuthorizeAsync(User, "transfers.manage")).Succeeded;
    var canApproveTransfers = (await AuthorizationService.AuthorizeAsync(User, "transfers.approve")).Succeeded;
    var canCreateTransfers = (await AuthorizationService.AuthorizeAsync(User, "transfers.create")).Succeeded;
    var canJournalView = (await AuthorizationService.AuthorizeAsync(User, "journal.view")).Succeeded;
    var canJournalCreate = (await AuthorizationService.AuthorizeAsync(User, "journal.create")).Succeeded;
    var transferReturnUrl = Url.Action("Index", "Dashboard");
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-3 flex-wrap gap-2">
        <h2 class="mb-0">لوحة التحكم</h2>
        <a asp-controller="Dashboard" asp-action="ProfitabilityReport" class="btn btn-outline-primary">تقرير الربحية</a>
    </div>
    @if (canWorkflowDefinitionsManage)
    {
        <div class="row g-4 mb-4">
            <div class="col-12 col-md-6 col-xl-3">
                <div class="card shadow-sm border-0 h-100">
                    <div class="card-body">
                        <div class="text-muted small mb-2">مستحقات العملاء في الطريق</div>
                        <div class="fs-4 fw-semibold"> @Model.TotalCustomerDuesOnRoad </div>
                    </div>
                </div>
            </div>
            <div class="col-12 col-md-6 col-xl-3">
                <div class="card shadow-sm border-0 h-100">
                    <div class="card-body">
                        <div class="text-muted small mb-2">النقد مع السائقين في الطريق</div>
                        <div class="fs-4 fw-semibold">@Model.TotalCashWithDriverOnRoad</div>
                    </div>
                </div>
            </div>
            <div class="col-12 col-md-6 col-xl-3">
                <div class="card shadow-sm border-0 h-100">
                    <div class="card-body">
                        <div class="text-muted small mb-2">مستحقات العملاء</div>
                        <div class="fs-4 fw-semibold">@Model.TotalCustomerDues</div>
                    </div>
                </div>
            </div>
            <div class="col-12 col-md-6 col-xl-3">
                <div class="card shadow-sm border-0 h-100">
                    <div class="card-body">
                        <div class="text-muted small mb-2">النقد في خزنة الفرع</div>
                        <div class="fs-4 fw-semibold">@Model.TotalCashOnBranchBox</div>
                    </div>
                </div>
            </div>
        </div>

        <div class="card shadow-sm border-0 mb-4">
            <div class="card-body">
                <h5 class="card-title mb-4">تقرير أداء السيولة حسب الفروع</h5>

                @if (!Model.HasRecords && Model.TransfersBalance == 0)
                {
                    <div class="alert alert-info mb-0">لا توجد بيانات للعرض.</div>
                }
                else
                {
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered align-middle text-center">
                            <thead class="table-light">
                                <tr>
                                    <th scope="col">اسم الفرع</th>
                                    <th scope="col">مستحقات العملاء في الطريق</th>
                                    <th scope="col">النقد مع السائقين في الطريق</th>
                                    <th scope="col">مستحقات العملاء</th>
                                    <th scope="col">النقد في خزنة الفرع</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var record in Model.Records)
                                {
                                    <tr>
                                        <td class="text-start">@record.BranchName</td>
                                        <td>@record.CustomerDuesOnRoad</td>
                                        <td>@record.CashWithDriverOnRoad</td>
                                        <td>@record.CustomerDues</td>
                                        <td>@record.CashOnBranchBox</td>
                                    </tr>
                                }

                                <tr class="table-secondary">
                                    <td class="text-start fw-semibold">الحوالات</td>
                                    <td>-</td>
                                    <td>-</td>
                                    <td>-</td>
                                    <td>@Model.TransfersBalance</td>
                                </tr>
                            </tbody>
                            <tfoot class="table-light fw-semibold">
                                <tr>
                                    <td colspan="1" class="text-center">الإجمالي</td>
                                    <td>@Model.TotalCustomerDuesOnRoad</td>
                                    <td>@Model.TotalCashWithDriverOnRoad</td>
                                    <td>@Model.TotalCustomerDues</td>
                                    <td>@Model.TotalCashOnBranchBox</td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                }
            </div>
        </div>
        <div class="card shadow-sm border-0 mb-4">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-start mb-3">
                    <div>
                        <h5 class="card-title mb-1">أرصدة الحسابات</h5>
                        <div class="text-muted small">الحساب الرئيسي: @(string.IsNullOrWhiteSpace(Model.DashboardParentAccountName) ? "غير معرف" : Model.DashboardParentAccountName)</div>
                    </div>
                    @if (!string.IsNullOrWhiteSpace(Model.DashboardBaseCurrencyCode))
                    {
                        <span class="badge bg-light text-dark">@Model.DashboardBaseCurrencyCode</span>
                    }
                </div>

                @if (!Model.HasDashboardAccounts)
                {
                    <div class="alert alert-info mb-0">لا توجد حسابات لعرضها.</div>
                }
                else
                {
                    <div class="dashboard-account-tree">
                        <div class="dashboard-account-tree-header px-3 py-2 d-flex text-muted small">
                            <div class="flex-grow-1">الحساب</div>
                            <div class="text-end" style="width: 180px;">الرصيد (@Model.DashboardBaseCurrencyCode)</div>
                            <div class="text-center" style="width: 150px;">إجراءات</div>
                        </div>
                        <ul class="list-unstyled mb-0 dashboard-account-tree-list">
                            @await Html.PartialAsync("_DashboardAccountSubTable", Model.DashboardAccountTree, new ViewDataDictionary(ViewData)
                            {
                            ["DashboardBaseCurrencyCode"] = Model.DashboardBaseCurrencyCode
                                        })
                </ul>
            </div>
                        }
            </div>
        </div>
    }

    @if (Model.HasPaymentAccount && (canJournalView || canJournalCreate))
    {
        <div class="row g-4 mb-4">
            <div class="col-12">
                <div class="card shadow-sm border-0 h-100">
                    <div class="card-body d-flex flex-column flex-lg-row align-items-start align-items-lg-center justify-content-between gap-3">
                        <div>
                            <h5 class="card-title mb-2">القيود اليومية</h5>
                            <p class="text-muted mb-0">الوصول السريع لعرض وإدارة حركاتك اليومية المرتبطة بحساب الدفع الخاص بك.</p>
                        </div>
                        <div class="d-flex flex-wrap gap-2">
                            @if (canJournalCreate)
                            {
                                <a class="btn btn-primary" asp-controller="JournalEntries" asp-action="Create">
                                    <i class="fa fa-plus ms-1"></i>
                                    إضافة قيد يومي
                                </a>
                            }

                            @if (canJournalView)
                            {
                                <a class="btn btn-outline-primary" asp-controller="Reports" asp-action="UserDailyJournalEntries">
                                    <i class="fa fa-list ms-1"></i>
                                    عرض الحركات اليومية
                                </a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    <div class="row g-4">
        <div class="col-12 col-xl-6">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center justify-content-between mb-3">
                        <h5 class="card-title mb-0">طلباتي المعلقة للموافقة</h5>
                        <span class="badge bg-primary rounded-pill">@Model.MyPendingRequests.Count()</span>
                    </div>

                    @if (!Model.MyPendingRequests.Any())
                    {
                        <div class="alert alert-info mb-0">لا توجد طلبات قيد انتظار الموافقات.</div>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-hover align-middle">
                                <thead class="table-light">
                                    <tr>
                                        <th scope="col">عنوان الطلب</th>
                                        <th scope="col">تاريخ الإنشاء</th>
                                        <th scope="col" class="text-end">المبلغ</th>
                                        <th scope="col">العملة</th>
                                        <th scope="col">بانتظار</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var request in Model.MyPendingRequests)
                                    {
                                        <tr>
                                            <td>
                                                <div class="fw-semibold">@request.Title</div>
                                                <div class="text-muted small">@request.Description</div>
                                            </td>
                                            <td class="text-nowrap">@request.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                                            <td class="text-end">@request.Amount.ToString("N2")</td>
                                            <td>@(string.IsNullOrWhiteSpace(request.CurrencyCode) ? "-" : request.CurrencyCode)</td>
                                            <td>@request.PendingWith</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>
        </div>
        <div class="col-12 col-xl-6">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center justify-content-between mb-3">
                        <h5 class="card-title mb-0">الطلبات المحتاجة لاعتمادك</h5>
                        <span class="badge bg-danger rounded-pill">@Model.PendingApprovals.Count()</span>
                    </div>

                    @if (!Model.PendingApprovals.Any())
                    {
                        <div class="alert alert-success mb-0">لا توجد طلبات بانتظار اعتمادك حالياً.</div>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-hover align-middle">
                                <thead class="table-light">
                                    <tr>
                                        <th scope="col">عنوان الطلب</th>
                                        <th scope="col">مقدم الطلب</th>
                                        <th scope="col">تاريخ الإنشاء</th>
                                        <th scope="col" class="text-end">المبلغ</th>
                                        <th scope="col">العملة</th>
                                        <th scope="col" class="text-end">إجراءات</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var approval in Model.PendingApprovals.OrderByDescending(a => a.CreatedAt))
                                    {
                                        var detailId = $"approval-details-{approval.ActionId}";
                                        <tr>
                                            <td>
                                                <div class="fw-semibold">@approval.Title</div>
                                                <div class="text-muted small">@approval.Description</div>
                                            </td>
                                            <td>@(string.IsNullOrWhiteSpace(approval.CreatedByName) ? "غير معروف" : approval.CreatedByName)</td>
                                            <td class="text-nowrap">@approval.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                                            <td class="text-end">@approval.Amount.ToString("N2")</td>
                                            <td>@(string.IsNullOrWhiteSpace(approval.CurrencyCode) ? "-" : approval.CurrencyCode)</td>
                                            <td class="text-end">
                                                <div class="d-flex flex-wrap gap-1 justify-content-end">
                                                    <form asp-controller="WorkflowApprovals" asp-action="Approve" method="post" class="d-inline">
                                                        @Html.AntiForgeryToken()
                                                        <input type="hidden" name="actionId" value="@approval.ActionId" />
                                                        <button type="submit" class="btn btn-success btn-sm">
                                                            <i class="fa fa-check ms-1"></i> موافقة
                                                        </button>
                                                    </form>
                                                    <button class="btn btn-outline-primary btn-sm" type="button" data-bs-toggle="collapse" data-bs-target="#@detailId" aria-expanded="false" aria-controls="@detailId">
                                                        <i class="fa fa-info-circle ms-1"></i> تفاصيل
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                        <tr class="collapse" id="@detailId">
                                            <td colspan="6" class="p-0">
                                                <div class="card rounded-0 border-top">
                                                    <div class="card-body">
                                                        <partial name="_ApprovalRequestDetails" model="approval" />
                                                    </div>
                                                    <div class="card-footer bg-white">
                                                        <div class="d-flex flex-wrap gap-2">
                                                            <button class="btn btn-outline-danger btn-sm" type="button" data-bs-toggle="collapse" data-bs-target="#reject-@approval.ActionId" aria-expanded="false" aria-controls="reject-@approval.ActionId">
                                                                <i class="fa fa-times ms-1"></i> رفض
                                                            </button>
                                                        </div>
                                                    </div>
                                                    <div class="collapse border-top" id="reject-@approval.ActionId" data-bs-parent="#@detailId">
                                                        <div class="card-body">
                                                            <form asp-controller="WorkflowApprovals" asp-action="Reject" method="post">
                                                                @Html.AntiForgeryToken()
                                                                <input type="hidden" name="actionId" value="@approval.ActionId" />
                                                                <div class="mb-3">
                                                                    <label class="form-label">سبب الرفض</label>
                                                                    <textarea name="notes" class="form-control" rows="3"></textarea>
                                                                </div>
                                                                <button type="submit" class="btn btn-danger">
                                                                    <i class="fa fa-times ms-1"></i> تأكيد الرفض
                                                                </button>
                                                            </form>
                                                        </div>
                                                    </div>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4 mt-1">
        <div class="col-12">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center justify-content-between mb-3">
                        <div>
                            <h5 class="card-title mb-1">الحوالات المعلقة</h5>
                            <div class="text-muted small">إدارة الحوالات التي بانتظار الاستلام أو المراجعة.</div>
                        </div>
                        <span class="badge bg-warning text-dark rounded-pill">@Model.PendingTransfers.Count()</span>
                    </div>

                    @if (!Model.PendingTransfers.Any())
                    {
                        <div class="alert alert-info mb-0">لا توجد حوالات معلقة حالياً.</div>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-hover align-middle">
                                <thead class="table-light">
                                    <tr>
                                        <th scope="col">المرسل</th>
                                        <th scope="col">المستلم</th>
                                        <th scope="col">الفروع</th>
                                        <th scope="col" class="text-end">المبلغ</th>
                                        <th scope="col">تاريخ الإنشاء</th>
                                        <th scope="col" class="text-end">إجراءات</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var transfer in Model.PendingTransfers)
                                    {
                                        var canApprove = canManageTransfers || (canApproveTransfers && transfer.ReceiverId == Model.CurrentUserId);
                                        var canEdit = canManageTransfers || (canCreateTransfers && transfer.SenderId == Model.CurrentUserId);
                                        var approvePermission = canManageTransfers ? "transfers.manage" : "transfers.approve";
                                        var editPermission = canManageTransfers ? "transfers.manage" : "transfers.create";

                                        <tr>
                                            <td>
                                                <div class="fw-semibold">@(transfer.Sender?.FullName ?? transfer.SenderId)</div>
                                                <div class="text-muted small">@(transfer.FromBranch?.NameAr ?? "-")</div>
                                            </td>
                                            <td>
                                                <div class="fw-semibold">@(transfer.Receiver?.FullName ?? transfer.ReceiverId)</div>
                                                <div class="text-muted small">@(transfer.ToBranch?.NameAr ?? "-")</div>
                                            </td>
                                            <td>
                                                <div class="small">@(transfer.FromBranch?.NameAr ?? "-")</div>
                                                <div class="text-muted small"><i class="fa fa-arrow-down mx-1"></i>@(transfer.ToBranch?.NameAr ?? "-")</div>
                                            </td>
                                            <td class="text-end">@transfer.Amount.ToString("N2", CultureInfo.InvariantCulture)</td>
                                            <td class="text-nowrap">@transfer.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                                            <td class="text-end">
                                                <div class="d-flex flex-wrap gap-2 justify-content-end">
                                                    @if (canApprove)
                                                    {
                                                        <a class="btn btn-success btn-sm" asp-controller="Transfers" asp-action="Approve" asp-route-id="@transfer.Id" asp-route-accept="true" asp-route-returnUrl="@transferReturnUrl" asp-require-permission="@approvePermission">
                                                            <i class="fa fa-check ms-1"></i> استلام
                                                        </a>
                                                        <a class="btn btn-outline-danger btn-sm" asp-controller="Transfers" asp-action="Approve" asp-route-id="@transfer.Id" asp-route-accept="false" asp-route-returnUrl="@transferReturnUrl" asp-require-permission="@approvePermission">
                                                            <i class="fa fa-times ms-1"></i> رفض
                                                        </a>
                                                    }

                                                    @if (canEdit)
                                                    {
                                                        <a class="btn btn-outline-primary btn-sm" asp-controller="Transfers" asp-action="Edit" asp-route-id="@transfer.Id" asp-route-returnUrl="@transferReturnUrl" asp-require-permission="@editPermission">
                                                            <i class="fa fa-pen ms-1"></i> تعديل
                                                        </a>
                                                    }
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .dashboard-account-tree {
            border: 1px solid #dee2e6;
            border-radius: 0.5rem;
            overflow: hidden;
        }

        .dashboard-account-tree-header {
            border-bottom: 1px solid #dee2e6;
            background-color: #f8f9fa;
        }

        .dashboard-account-tree-list {
            margin: 0;
            padding: 0;
        }

        .dashboard-account-node {
            padding: 0.75rem 1rem;
            border-bottom: 1px solid #f1f3f5;
        }

            .dashboard-account-node:last-child {
                border-bottom: none;
            }

        .dashboard-toggle {
            width: 32px;
            height: 32px;
        }

        .dashboard-toggle-placeholder {
            width: 32px;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            color: #adb5bd;
        }

        .dashboard-account-children {
            margin-top: 0.5rem;
        }

            .dashboard-account-children .dashboard-account-node {
                border-bottom: 1px solid #edf0f2;
            }
    </style>
}

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const toggleIcon = (button, isOpen) => {
                const icon = button.querySelector('i');
                if (!icon) {
                    return;
                }

                icon.classList.toggle('fa-chevron-right', !isOpen);
                icon.classList.toggle('fa-chevron-down', isOpen);
            };

            document.querySelectorAll('.dashboard-account-table .dashboard-toggle').forEach(button => {
                const targetSelector = button.getAttribute('data-bs-target');
                if (!targetSelector) {
                    return;
                }

                const target = document.querySelector(targetSelector);
                if (!target) {
                    return;
                }

                target.addEventListener('show.bs.collapse', () => toggleIcon(button, true));
                target.addEventListener('hide.bs.collapse', () => toggleIcon(button, false));
            });
        });
    </script>
}
