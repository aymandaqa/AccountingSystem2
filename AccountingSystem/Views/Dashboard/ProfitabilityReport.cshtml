@model AccountingSystem.ViewModels.Dashboard.ProfitabilityReportViewModel

@{
    ViewData["Title"] = "تقرير الربحية";
}

<div class="container-fluid py-4">
    <div class="d-flex flex-wrap justify-content-between align-items-center mb-3 gap-2">
        <h2 class="mb-0">تقرير الربحية</h2>
        <form method="get" class="d-flex flex-wrap align-items-end gap-2">
            <div>
                <label class="form-label mb-1" for="startDate">من</label>
                <input class="form-control" type="date" id="startDate" name="startDate" value="@Model.StartDate.ToString("yyyy-MM-dd")" />
            </div>
            <div>
                <label class="form-label mb-1" for="endDate">إلى</label>
                <input class="form-control" type="date" id="endDate" name="endDate" value="@Model.EndDate.ToString("yyyy-MM-dd")" />
            </div>
            <button class="btn btn-primary" type="submit">تحديث</button>
        </form>
    </div>

    <div class="accordion" id="profitabilityAccordion">
        <div class="accordion-item mb-3 shadow-sm">
            <h2 class="accordion-header" id="headingOverview">
                <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOverview" aria-expanded="true" aria-controls="collapseOverview">
                    نظرة عامة: مقارنة المصاريف مع صافي الأرباح
                </button>
            </h2>
            <div id="collapseOverview" class="accordion-collapse collapse show" aria-labelledby="headingOverview" data-bs-parent="#profitabilityAccordion">
                <div class="accordion-body">
                    <div class="row g-4">
                        <div class="col-12 col-lg-6">
                            <div class="card h-100 border-0 shadow-sm">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between align-items-center mb-2">
                                        <div>
                                            <div class="text-muted">صافي الربح</div>
                                            <div class="fs-3 fw-bold text-@((Model.IsNetProfitPositive ? "success" : "danger"))">
                                                @Model.NetProfit.ToString("N2")
                                                <span class="ms-2 trend-arrow @(Model.IsNetProfitPositive ? "text-success" : "text-danger")">
                                                    <i class="bi @(Model.IsNetProfitPositive ? "bi-arrow-up" : "bi-arrow-down")"></i>
                                                </span>
                                            </div>
                                        </div>
                                        <div class="text-end">
                                            <div class="text-muted">التغير عن الفترة السابقة</div>
                                            <div class="fw-semibold">@Model.NetProfitChangePercent.ToString("N2")%</div>
                                        </div>
                                    </div>
                                    <p class="mb-0 text-muted">المصروفات: @Model.TotalExpenses.ToString("N2") | التغير: @Model.ExpensesChangePercent.ToString("N2")%</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6">
                            <div class="card h-100 border-0 shadow-sm">
                                <div class="card-body">
                                    <div class="text-muted mb-2">مقارنة أسبوعية للمصاريف مع صافي الربح</div>
                                    <div class="table-responsive">
                                        <table class="table table-sm align-middle mb-0">
                                            <thead class="table-light">
                                                <tr>
                                                    <th>الأسبوع</th>
                                                    <th class="text-end">المصاريف</th>
                                                    <th class="text-end">صافي الربح</th>
                                                    <th class="text-end">التغير</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var week in Model.WeeklyComparisons)
                                                {
                                                    var isPositive = week.NetProfit >= 0;
                                                    <tr>
                                                        <td>@week.Label</td>
                                                        <td class="text-end">@week.Expenses.ToString("N2")</td>
                                                        <td class="text-end text-@(isPositive ? "success" : "danger")">
                                                            @week.NetProfit.ToString("N2")
                                                            <i class="bi @(isPositive ? "bi-arrow-up" : "bi-arrow-down") ms-1"></i>
                                                        </td>
                                                        <td class="text-end">@week.ProfitChangePercent.ToString("N2")%</td>
                                                    </tr>
                                                }
                                                @if (!Model.WeeklyComparisons.Any())
                                                {
                                                    <tr><td colspan="4" class="text-center text-muted">لا توجد بيانات للفترة المحددة.</td></tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="accordion-item mb-3 shadow-sm">
            <h2 class="accordion-header" id="headingTargets">
                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseTargets" aria-expanded="false" aria-controls="collapseTargets">
                    التارجت المطلوب للشحنات لتغطية المصاريف
                </button>
            </h2>
            <div id="collapseTargets" class="accordion-collapse collapse" aria-labelledby="headingTargets" data-bs-parent="#profitabilityAccordion">
                <div class="accordion-body">
                    <div class="row g-4">
                        <div class="col-12 col-lg-4">
                            <div class="card h-100 border-0 shadow-sm">
                                <div class="card-body">
                                    <div class="text-muted">عدد الشحنات المطلوب</div>
                                    <div class="fs-2 fw-bold">@Model.ShipmentTarget.TargetShipments</div>
                                    <p class="text-muted mb-0">متوسط العائد للشحنة: @Model.ShipmentTarget.AverageRevenuePerShipment.ToString("N2")</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-4">
                            <div class="card h-100 border-0 shadow-sm">
                                <div class="card-body">
                                    <div class="text-muted">نقطة التعادل</div>
                                    <div class="fs-2 fw-bold text-info">@Model.ShipmentTarget.BreakEvenRevenue.ToString("N2")</div>
                                    <p class="text-muted mb-0">إجمالي المصاريف للفترة المحددة</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-4">
                            <div class="card h-100 border-0 shadow-sm">
                                <div class="card-body">
                                    <div class="text-muted">أكثر السائقين والأصول جذباً للربح</div>
                                    <div class="table-responsive">
                                        <table class="table table-sm mb-0 align-middle">
                                            <tbody>
                                                @foreach (var driver in Model.TopDrivers)
                                                {
                                                    <tr>
                                                        <td>@driver.Name</td>
                                                        <td class="text-end">@driver.Value.ToString("N2")</td>
                                                        <td class="text-muted">@driver.Descriptor</td>
                                                    </tr>
                                                }
                                                @if (!Model.TopDrivers.Any())
                                                {
                                                    <tr><td colspan="3" class="text-center text-muted">لا توجد بيانات مرتبطة بالسائقين لهذه الفترة.</td></tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="accordion-item mb-3 shadow-sm">
            <h2 class="accordion-header" id="headingUsers">
                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseUsers" aria-expanded="false" aria-controls="collapseUsers">
                    نشاط المستخدمين وأعلى الأداء
                </button>
            </h2>
            <div id="collapseUsers" class="accordion-collapse collapse" aria-labelledby="headingUsers" data-bs-parent="#profitabilityAccordion">
                <div class="accordion-body">
                    <div class="row g-4">
                        <div class="col-12 col-lg-6">
                            <div class="card h-100 border-0 shadow-sm">
                                <div class="card-body">
                                    <div class="text-muted mb-2">أكثر 10 مستخدمين نشاطاً</div>
                                    <div class="table-responsive">
                                        <table class="table table-sm align-middle mb-0">
                                            <thead class="table-light">
                                                <tr><th>المستخدم</th><th class="text-end">النشاط</th><th class="text-muted">وصف</th></tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var user in Model.TopUsers)
                                                {
                                                    <tr>
                                                        <td>@user.Name</td>
                                                        <td class="text-end">@user.Value</td>
                                                        <td class="text-muted">@user.Descriptor</td>
                                                    </tr>
                                                }
                                                @if (!Model.TopUsers.Any())
                                                {
                                                    <tr><td colspan="3" class="text-center text-muted">لا توجد جلسات مسجلة للفترة المحددة.</td></tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6">
                            <div class="card h-100 border-0 shadow-sm">
                                <div class="card-body">
                                    <div class="text-muted">تارجت الفروع لتغطية المصاريف</div>
                                    <div class="table-responsive">
                                        <table class="table table-sm align-middle mb-0">
                                            <thead class="table-light">
                                                <tr><th>الفرع</th><th class="text-end">المصاريف</th><th class="text-end">تغطية حالية %</th></tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var branch in Model.BranchTargets)
                                                {
                                                    <tr>
                                                        <td>@branch.BranchName</td>
                                                        <td class="text-end">@branch.RequiredTarget.ToString("N2")</td>
                                                        <td class="text-end">@branch.CurrentCoverage.ToString("N2")%</td>
                                                    </tr>
                                                }
                                                @if (!Model.BranchTargets.Any())
                                                {
                                                    <tr><td colspan="3" class="text-center text-muted">لا توجد بيانات للفروع.</td></tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="accordion-item shadow-sm">
            <h2 class="accordion-header" id="headingProjection">
                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseProjection" aria-expanded="false" aria-controls="collapseProjection">
                    صافي الربح المتوقع لنهاية السنة المالية
                </button>
            </h2>
            <div id="collapseProjection" class="accordion-collapse collapse" aria-labelledby="headingProjection" data-bs-parent="#profitabilityAccordion">
                <div class="accordion-body">
                    <div class="row g-4">
                        <div class="col-12 col-lg-4">
                            <div class="card h-100 border-0 shadow-sm">
                                <div class="card-body">
                                    <div class="text-muted">صافي الربح المتوقع</div>
                                    <div class="fs-2 fw-bold text-primary">@Model.AnnualProjection.ProjectedNetProfit.ToString("N2")</div>
                                    <p class="mb-0 text-muted">بالاعتماد على أداء الفترة الحالية.</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-4">
                            <div class="card h-100 border-0 shadow-sm">
                                <div class="card-body">
                                    <div class="text-muted">إيرادات سنوية متوقعة</div>
                                    <div class="fs-2 fw-bold text-success">@Model.AnnualProjection.AnnualizedRevenue.ToString("N2")</div>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-4">
                            <div class="card h-100 border-0 shadow-sm">
                                <div class="card-body">
                                    <div class="text-muted">مصاريف سنوية متوقعة</div>
                                    <div class="fs-2 fw-bold text-danger">@Model.AnnualProjection.AnnualizedExpenses.ToString("N2")</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .trend-arrow {
        font-size: 1.25rem;
    }
</style>
