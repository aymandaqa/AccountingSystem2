@model AccountingSystem.ViewModels.DriverRevenueReportViewModel
@{
    ViewData["Title"] = "تقرير عوائد السائقين";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h4 class="mb-0"><i class="fas fa-truck me-2"></i>تقرير عوائد السائقين</h4>
                    <span class="small">استعرض إجمالي الإيرادات المرتبطة بحسابات السائقين</span>
                </div>
                <div class="card-body">
                    <form method="get" class="row g-3 mb-4">
                        <div class="col-md-3">
                            <label class="form-label">من تاريخ</label>
                            <input type="date" name="fromDate" class="form-control" value="@Model.FromDate.ToString("yyyy-MM-dd")" />
                        </div>
                        <div class="col-md-3">
                            <label class="form-label">إلى تاريخ</label>
                            <input type="date" name="toDate" class="form-control" value="@Model.ToDate.ToString("yyyy-MM-dd")" />
                        </div>
                        <div class="col-md-3">
                            <label class="form-label">بحث عن السائق</label>
                            <input type="text" name="driverSearch" class="form-control" value="@Model.SearchTerm" placeholder="ادخل اسم السائق أو الحساب" />
                        </div>
                        <div class="col-md-3 align-self-end">
                            <div class="d-flex gap-2 justify-content-end justify-content-md-start">
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-search me-1"></i>عرض التقرير
                                </button>
                                <a asp-action="DriverRevenueReport" class="btn btn-outline-secondary">
                                    <i class="fas fa-undo me-1"></i>إعادة تعيين
                                </a>
                                <a asp-action="DriverRevenueReportExcel"
                                   asp-route-fromDate="@Model.FromDate.ToString("yyyy-MM-dd")"
                                   asp-route-toDate="@Model.ToDate.ToString("yyyy-MM-dd")"
                                   asp-route-driverSearch="@Model.SearchTerm"
                                   class="btn btn-success">
                                    <i class="fas fa-file-excel me-1"></i>تصدير Excel
                                </a>
                            </div>
                        </div>
                    </form>

                    @if (Model.HasResults)
                    {
                        <div class="alert alert-info d-flex align-items-center gap-3">
                            <i class="fas fa-info-circle fa-lg"></i>
                            <div>
                                <div>الفترة من <strong>@Model.FromDate.ToString("dd/MM/yyyy")</strong> إلى <strong>@Model.ToDate.ToString("dd/MM/yyyy")</strong></div>
                                <div>الإجمالي الكلي: <strong>@Model.GrandTotal.ToString("N2") @Model.BaseCurrencyCode</strong></div>
                            </div>
                        </div>

                        <div class="table-responsive">
                            <table class="table table-striped table-bordered align-middle">
                                <thead class="table-light">
                                    <tr>
                                        <th>اسم السائق</th>
                                        <th>الفرع</th>
                                        <th>الحساب</th>
                                        <th>الأصول المرتبطة</th>
                                        <th class="text-end">إجمالي العائد (@Model.BaseCurrencyCode)</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var row in Model.Rows)
                                    {
                                        <tr>
                                            <td>@row.DriverName</td>
                                            <td>@(string.IsNullOrWhiteSpace(row.BranchName) ? "-" : row.BranchName)</td>
                                            <td>
                                                @if (string.IsNullOrWhiteSpace(row.AccountCode))
                                                {
                                                    @row.AccountName
                                                }
                                                else
                                                {
                                                    @($"{row.AccountCode} - {row.AccountName}")
                                                }
                                            </td>
                                            <td>
                                                @if (row.AssetNames.Any())
                                                {
                                                    <span>@row.AssetsDisplay</span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">لا يوجد</span>
                                                }
                                            </td>
                                            <td class="text-end">@row.TotalRevenue.ToString("N2")</td>
                                        </tr>
                                    }
                                </tbody>
                                <tfoot class="table-secondary">
                                    <tr class="fw-bold">
                                        <td colspan="4">الإجمالي</td>
                                        <td class="text-end">@Model.GrandTotal.ToString("N2")</td>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    }
                    else if (Model.FiltersApplied)
                    {
                        <div class="text-center text-muted py-5">
                            <i class="fas fa-inbox fa-2x mb-3"></i>
                            <p class="mb-0">لا توجد بيانات ضمن الفترة المحددة.</p>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-secondary">استخدم المرشحات أعلاه لعرض التقرير.</div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
