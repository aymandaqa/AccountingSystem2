@model AccountingSystem.ViewModels.UserDailyTransactionReportViewModel
@using System.Linq
@{
    ViewData["Title"] = "تقرير الحركات اليومية للمستخدم";
    var totalDebit = Model.Items.Sum(i => i.TotalDebit);
    var totalCredit = Model.Items.Sum(i => i.TotalCredit);
}

<div class="container-fluid">
    <div class="card">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0 d-flex align-items-center justify-content-between">
                <span>
                    <i class="fas fa-history me-2"></i>
                    تقرير الحركات اليومية للمستخدم
                </span>
            </h5>
        </div>
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-4">
                    <label for="date" class="form-label">تاريخ الحركات</label>
                    <input type="date" id="date" name="date" class="form-control" value="@Model.SelectedDate.ToString("yyyy-MM-dd")" />
                </div>
                <div class="col-md-3 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="fas fa-search me-1"></i>
                        عرض التقرير
                    </button>
                </div>
            </form>

            <div class="alert alert-secondary d-flex justify-content-between align-items-center mt-4">
                <div>
                    <strong>عدد الحركات:</strong> @Model.Items.Count
                </div>
                <div class="text-nowrap">
                    <span class="me-3"><strong>إجمالي المدين:</strong> @totalDebit.ToString("N2")</span>
                    <span><strong>إجمالي الدائن:</strong> @totalCredit.ToString("N2")</span>
                </div>
            </div>

            <div class="table-responsive">
                <table class="table table-striped table-hover align-middle">
                    <thead class="table-dark">
                        <tr>
                            <th style="width: 12%;">الوقت</th>
                            <th style="width: 18%;">نوع الحركة</th>
                            <th style="width: 20%;">المرجع</th>
                            <th>الوصف</th>
                            <th style="width: 15%;" class="text-end">إجمالي المدين</th>
                            <th style="width: 15%;" class="text-end">إجمالي الدائن</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (!Model.Items.Any())
                        {
                            <tr>
                                <td colspan="6" class="text-center text-muted py-4">
                                    لا توجد حركات مسجلة للمستخدم في هذا التاريخ.
                                </td>
                            </tr>
                        }
                        else
                        {
                            for (var index = 0; index < Model.Items.Count; index++)
                            {
                                var item = Model.Items[index];
                                var collapseId = $"transaction-details-{index}";
                                var referenceDisplay = string.IsNullOrWhiteSpace(item.Reference) ? "بدون مرجع" : item.Reference;

                                <tr data-bs-toggle="collapse" data-bs-target="#@collapseId" aria-expanded="false" aria-controls="@collapseId" role="button" style="cursor: pointer;">
                                    <td>@item.CreatedAt.ToString("HH:mm")</td>
                                    <td>
                                        <span class="badge bg-primary-subtle text-primary fw-semibold">
                                            @item.TypeDisplay
                                        </span>
                                    </td>
                                    <td>@referenceDisplay</td>
                                    <td>@item.Description</td>
                                    <td class="text-end text-success">@item.TotalDebit.ToString("N2")</td>
                                    <td class="text-end text-danger">@item.TotalCredit.ToString("N2")</td>
                                </tr>
                                <tr class="collapse" id="@collapseId">
                                    <td colspan="6">
                                        <div class="bg-light border rounded p-3">
                                            @if (item.Document != null)
                                            {
                                                <div class="mb-3">
                                                    <h6 class="fw-bold mb-3">
                                                        <i class="fas fa-file-invoice me-2 text-primary"></i>
                                                        @item.Document.Title
                                                    </h6>
                                                    <div class="row g-3">
                                                        @foreach (var field in item.Document.Fields)
                                                        {
                                                            <div class="col-md-4">
                                                                <div class="p-3 bg-white border rounded h-100">
                                                                    <div class="text-muted small">@field.Label</div>
                                                                    <div class="fw-semibold">@field.Value</div>
                                                                </div>
                                                            </div>
                                                        }
                                                    </div>
                                                    @if (!string.IsNullOrWhiteSpace(item.Document.Notes))
                                                    {
                                                        <div class="alert alert-info mt-3 mb-0">
                                                            <strong>ملاحظات:</strong>
                                                            <span class="ms-1">@item.Document.Notes</span>
                                                        </div>
                                                    }
                                                </div>
                                            }

                                            @foreach (var entry in item.Entries)
                                            {
                                                <div class="card mb-3">
                                                    <div class="card-header d-flex flex-column flex-md-row align-items-md-center justify-content-between">
                                                        <div class="mb-2 mb-md-0">
                                                            <span class="fw-bold">قيد رقم @entry.Number</span>
                                                            <span class="text-muted ms-2">@entry.Date.ToString("dd/MM/yyyy")</span>
                                                        </div>
                                                        <div class="d-flex align-items-center gap-2">
                                                            <span class="badge bg-success-subtle text-success">مدين: @entry.TotalDebit.ToString("N2")</span>
                                                            <span class="badge bg-danger-subtle text-danger">دائن: @entry.TotalCredit.ToString("N2")</span>
                                                            <a asp-controller="JournalEntries"
                                                               asp-action="Details"
                                                               asp-route-id="@entry.JournalEntryId"
                                                               asp-require-permission="journal.view"
                                                               class="btn btn-sm btn-outline-primary">
                                                                <i class="fas fa-eye me-1"></i>
                                                                عرض القيد
                                                            </a>
                                                        </div>
                                                    </div>
                                                    <div class="card-body">
                                                        <p class="mb-3 text-muted">@entry.Description</p>
                                                        <div class="table-responsive">
                                                            <table class="table table-sm table-bordered align-middle mb-0">
                                                                <thead class="table-light">
                                                                    <tr>
                                                                        <th>الحساب</th>
                                                                        <th class="text-end">مدين</th>
                                                                        <th class="text-end">دائن</th>
                                                                        <th>مركز التكلفة</th>
                                                                        <th>ملاحظات</th>
                                                                    </tr>
                                                                </thead>
                                                                <tbody>
                                                                    @foreach (var line in entry.Lines)
                                                                    {
                                                                        <tr>
                                                                            <td>
                                                                                <div class="fw-semibold">@line.AccountName</div>
                                                                                <div class="text-muted small">@line.AccountCode</div>
                                                                            </td>
                                                                            <td class="text-end text-success">@line.Debit.ToString("N2")</td>
                                                                            <td class="text-end text-danger">@line.Credit.ToString("N2")</td>
                                                                            <td>@(string.IsNullOrWhiteSpace(line.CostCenter) ? "-" : line.CostCenter)</td>
                                                                            <td>@(string.IsNullOrWhiteSpace(line.Notes) ? "-" : line.Notes)</td>
                                                                        </tr>
                                                                    }
                                                                </tbody>
                                                            </table>
                                                        </div>
                                                    </div>
                                                </div>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
