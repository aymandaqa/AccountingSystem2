@model AccountingSystem.ViewModels.IncomeStatementViewModel
@{
    ViewData["Title"] = "قائمة الدخل";
    Layout = "~/Views/Shared/_AccountingLayout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header bg-success text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-chart-line me-2"></i>
                        قائمة الدخل
                    </h4>
                </div>
                <div class="card-body">
                    <!-- فلاتر التقرير -->
                    <form method="get" class="row g-3 mb-4">
                        <div class="col-md-3">
                            <label for="branchId" class="form-label">الفرع:</label>
                            <select name="branchId" id="branchId" class="form-select">
                                <option value="">جميع الفروع</option>
                                @foreach (var branch in Model.Branches)
                                {
                                    <option value="@branch.Value" selected="@(branch.Value == Model.BranchId?.ToString())">@branch.Text</option>
                                }
                            </select>
                        </div>
                        <div class="col-md-3">
                            <label for="fromDate" class="form-label">من تاريخ:</label>
                            <input type="date" name="fromDate" id="fromDate" class="form-control" value="@Model.FromDate.ToString("yyyy-MM-dd")" />
                        </div>
                        <div class="col-md-3">
                            <label for="toDate" class="form-label">إلى تاريخ:</label>
                            <input type="date" name="toDate" id="toDate" class="form-control" value="@Model.ToDate.ToString("yyyy-MM-dd")" />
                        </div>
                        <div class="col-md-3">
                            <label class="form-label">&nbsp;</label>
                            <div>
                                <button type="submit" class="btn btn-success">
                                    <i class="fas fa-search me-1"></i>
                                    عرض التقرير
                                </button>
                            </div>
                        </div>
                    </form>

                    <div class="row">
                        <div class="col-12">
                            <!-- الإيرادات -->
                            <div class="card border-success mb-4">
                                <div class="card-header bg-success text-white">
                                    <h5 class="mb-0">الإيرادات</h5>
                                </div>
                                <div class="card-body">
                                    @foreach (var revenue in Model.Revenues)
                                    {
                                        <div class="d-flex justify-content-between border-bottom py-2">
                                            <span>@revenue.AccountName</span>
                                            <span class="fw-bold">@revenue.Amount.ToString("N2") </span>
                                        </div>
                                    }
                                    <div class="d-flex justify-content-between border-top pt-3 mt-3">
                                        <strong>إجمالي الإيرادات:</strong>
                                        <strong class="text-success">@Model.TotalRevenues.ToString("N2") </strong>
                                    </div>
                                </div>
                            </div>

                            <!-- المصروفات -->
                            <div class="card border-danger mb-4">
                                <div class="card-header bg-danger text-white">
                                    <h5 class="mb-0">المصروفات</h5>
                                </div>
                                <div class="card-body">
                                    @foreach (var expense in Model.Expenses)
                                    {
                                        <div class="d-flex justify-content-between border-bottom py-2">
                                            <span>@expense.AccountName</span>
                                            <span class="fw-bold">@expense.Amount.ToString("N2") </span>
                                        </div>
                                    }
                                    <div class="d-flex justify-content-between border-top pt-3 mt-3">
                                        <strong>إجمالي المصروفات:</strong>
                                        <strong class="text-danger">@Model.TotalExpenses.ToString("N2") </strong>
                                    </div>
                                </div>
                            </div>

                            <!-- صافي الدخل -->
                            <div class="card border-primary">
                                <div class="card-header bg-primary text-white">
                                    <h5 class="mb-0">النتيجة النهائية</h5>
                                </div>
                                <div class="card-body">
                                    <div class="d-flex justify-content-between py-2">
                                        <span>إجمالي الإيرادات</span>
                                        <span class="fw-bold text-success">@Model.TotalRevenues.ToString("N2") </span>
                                    </div>
                                    <div class="d-flex justify-content-between py-2">
                                        <span>إجمالي المصروفات</span>
                                        <span class="fw-bold text-danger">@Model.TotalExpenses.ToString("N2") </span>
                                    </div>
                                    <hr>
                                    <div class="d-flex justify-content-between">
                                        <strong class="fs-5">صافي الدخل:</strong>
                                        <strong class="fs-5 text-primary">@Model.NetIncome.ToString("N2") </strong>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
