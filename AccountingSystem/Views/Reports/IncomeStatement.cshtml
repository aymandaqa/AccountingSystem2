@model AccountingSystem.ViewModels.IncomeStatementViewModel
@{
    ViewData["Title"] = "قائمة الدخل";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header bg-success text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-chart-line me-2"></i>
                        قائمة الدخل
                    </h4>
                </div>
                <div class="card-body">
                    <!-- فلاتر التقرير -->
                    <form method="get" class="row g-3 mb-4">
                        <div class="col-md-3">
                            <label for="branchId" class="form-label">الفرع:</label>
                            <select name="branchId" id="branchId" class="form-select">
                                <option value="">جميع الفروع</option>
                                @if (Model?.Branches != null)
                                {
                                    @foreach (var branch in Model.Branches)
                                    {
                                        <option value="@branch.Value">@branch.Text</option>
                                    }
                                }
                            </select>
                        </div>
                        <div class="col-md-3">
                            <label for="fromDate" class="form-label">من تاريخ:</label>
                            <input type="date" name="fromDate" id="fromDate" class="form-control" value="@DateTime.Now.AddMonths(-1).ToString("yyyy-MM-dd")" />
                        </div>
                        <div class="col-md-3">
                            <label for="toDate" class="form-label">إلى تاريخ:</label>
                            <input type="date" name="toDate" id="toDate" class="form-control" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
                        </div>
                        <div class="col-md-3">
                            <label class="form-label">&nbsp;</label>
                            <div>
                                <button type="submit" class="btn btn-success">
                                    <i class="fas fa-search me-1"></i>
                                    عرض التقرير
                                </button>
                            </div>
                        </div>
                    </form>

                    <div class="row">
                        <div class="col-12">
                            <!-- الإيرادات -->
                            <div class="card border-success mb-4">
                                <div class="card-header bg-success text-white">
                                    <h5 class="mb-0">الإيرادات</h5>
                                </div>
                                <div class="card-body">
                                    <div class="d-flex justify-content-between border-bottom py-2">
                                        <span>إيرادات المبيعات</span>
                                        <span class="fw-bold">0.00 </span>
                                    </div>
                                    <div class="d-flex justify-content-between border-bottom py-2">
                                        <span>إيرادات أخرى</span>
                                        <span class="fw-bold">0.00 </span>
                                    </div>
                                    <div class="d-flex justify-content-between border-top pt-3 mt-3">
                                        <strong>إجمالي الإيرادات:</strong>
                                        <strong class="text-success">0.00 </strong>
                                    </div>
                                </div>
                            </div>

                            <!-- المصروفات -->
                            <div class="card border-danger mb-4">
                                <div class="card-header bg-danger text-white">
                                    <h5 class="mb-0">المصروفات</h5>
                                </div>
                                <div class="card-body">
                                    <div class="d-flex justify-content-between border-bottom py-2">
                                        <span>تكلفة البضاعة المباعة</span>
                                        <span class="fw-bold">0.00 </span>
                                    </div>
                                    <div class="d-flex justify-content-between border-bottom py-2">
                                        <span>مصروفات التشغيل</span>
                                        <span class="fw-bold">0.00 </span>
                                    </div>
                                    <div class="d-flex justify-content-between border-bottom py-2">
                                        <span>مصروفات إدارية</span>
                                        <span class="fw-bold">0.00 </span>
                                    </div>
                                    <div class="d-flex justify-content-between border-top pt-3 mt-3">
                                        <strong>إجمالي المصروفات:</strong>
                                        <strong class="text-danger">0.00 </strong>
                                    </div>
                                </div>
                            </div>

                            <!-- صافي الدخل -->
                            <div class="card border-primary">
                                <div class="card-header bg-primary text-white">
                                    <h5 class="mb-0">النتيجة النهائية</h5>
                                </div>
                                <div class="card-body">
                                    <div class="d-flex justify-content-between py-2">
                                        <span>إجمالي الإيرادات</span>
                                        <span class="fw-bold text-success">0.00 </span>
                                    </div>
                                    <div class="d-flex justify-content-between py-2">
                                        <span>إجمالي المصروفات</span>
                                        <span class="fw-bold text-danger">(0.00) </span>
                                    </div>
                                    <hr>
                                    <div class="d-flex justify-content-between">
                                        <strong class="fs-5">صافي الدخل:</strong>
                                        <strong class="fs-5 text-primary">0.00 </strong>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
