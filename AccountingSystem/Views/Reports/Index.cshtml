@{
    ViewData["Title"] = "التقارير المالية";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title mb-0">
                        <i class="fas fa-chart-bar me-2"></i>
                        التقارير المالية
                    </h3>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <div class="card h-100 border-primary">
                                <div class="card-body text-center">
                                    <i class="fas fa-balance-scale fa-3x text-primary mb-3"></i>
                                    <h5 class="card-title">ميزان المراجعة</h5>
                                    <p class="card-text">عرض أرصدة جميع الحسابات في فترة محددة</p>
                                    <a asp-action="TrialBalance" class="btn btn-primary">
                                        <i class="fas fa-eye me-1"></i>
                                        عرض التقرير
                                    </a>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4 mb-3">
                            <div class="card h-100 border-success">
                                <div class="card-body text-center">
                                    <i class="fas fa-chart-pie fa-3x text-success mb-3"></i>
                                    <h5 class="card-title">الميزانية العمومية</h5>
                                    <p class="card-text">عرض الأصول والخصوم وحقوق الملكية</p>
                                    <a asp-action="BalanceSheet" class="btn btn-success">
                                        <i class="fas fa-eye me-1"></i>
                                        عرض التقرير
                                    </a>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4 mb-3">
                            <div class="card h-100 border-info">
                                <div class="card-body text-center">
                                    <i class="fas fa-chart-line fa-3x text-info mb-3"></i>
                                    <h5 class="card-title">قائمة الدخل</h5>
                                    <p class="card-text">عرض الإيرادات والمصاريف وصافي الدخل</p>
                                    <a asp-action="IncomeStatement" class="btn btn-info">
                                        <i class="fas fa-eye me-1"></i>
                                        عرض التقرير
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-md-4 mb-3">
                            <div class="card h-100 border-info">
                                <div class="card-body text-center">
                                    <i class="fas fa-tachometer-alt fa-3x text-info mb-3"></i>
                                    <h5 class="card-title">لوحة التقارير التنفيذية</h5>
                                    <p class="card-text">استعرض مؤشرات الأداء الشهرية والتراكمية مع تحليل المخزون والذمم.</p>
                                    <a asp-action="ExecutiveDashboard" class="btn btn-info">
                                        <i class="fas fa-chart-area me-1"></i>
                                        فتح اللوحة التنفيذية
                                    </a>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4 mb-3">
                            <div class="card h-100 border-warning">
                                <div class="card-body text-center">
                                    <i class="fas fa-book fa-3x text-warning mb-3"></i>
                                    <h5 class="card-title">دفتر الأستاذ العام</h5>
                                    <p class="card-text">عرض جميع المعاملات المالية مرتبة حسب الحساب</p>
                                    <a asp-action="GeneralLedger" class="btn btn-warning">
                                        <i class="fas fa-eye me-1"></i>
                                        عرض التقرير
                                    </a>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4 mb-3">
                            <div class="card h-100 border-secondary">
                                <div class="card-body text-center">
                                    <i class="fas fa-list-alt fa-3x text-secondary mb-3"></i>
                                    <h5 class="card-title">تفاصيل قيود اليومية</h5>
                                    <p class="card-text">استعرض سطور القيود مع خيارات التصفية والتصدير إلى Excel</p>
                                    <a asp-action="JournalEntryLines" class="btn btn-secondary">
                                        <i class="fas fa-eye me-1"></i>
                                        عرض التقرير
                                    </a>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4 mb-3">
                            <div class="card h-100 border-secondary">
                                <div class="card-body text-center">
                                    <i class="fas fa-file-alt fa-3x text-secondary mb-3"></i>
                                    <h5 class="card-title">كشف حساب</h5>
                                    <p class="card-text">عرض تفاصيل الحساب لفترة محددة</p>
                                    <a asp-action="AccountStatement" class="btn btn-secondary">
                                        <i class="fas fa-eye me-1"></i>
                                        عرض التقرير
                                    </a>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4 mb-3">
                            <div class="card h-100 border-danger">
                                <div class="card-body text-center">
                                    <i class="fas fa-hourglass-half fa-3x text-danger mb-3"></i>
                                    <h5 class="card-title">حركات غير مرحلة</h5>
                                    <p class="card-text">معرفة الأثر المالي للحركات غير المرحلة</p>
                                    <a asp-action="PendingTransactions" class="btn btn-danger">
                                        <i class="fas fa-eye me-1"></i>
                                        عرض التقرير
                                    </a>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4 mb-3">
                            <div class="card h-100 border-danger">
                                <div class="card-body text-center">
                                    <i class="fas fa-exclamation-triangle fa-3x text-danger mb-3"></i>
                                    <h5 class="card-title">فروقات أرصدة الحسابات</h5>
                                    <p class="card-text">تحديد الحسابات التي لا تتطابق أرصدتها مع القيود المرحلة وعرض القيود المرتبطة</p>
                                    <a asp-action="AccountBalanceDiscrepancies" class="btn btn-danger">
                                        <i class="fas fa-eye me-1"></i>
                                        عرض التقرير
                                    </a>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4 mb-3">
                            <div class="card h-100 border-success">
                                <div class="card-body text-center">
                                    <i class="fas fa-code-branch fa-3x text-success mb-3"></i>
                                    <h5 class="card-title">مصروفات الفروع</h5>
                                    <p class="card-text">تحليل المصروفات لكل فرع ومقارنتها حسب الفترة الزمنية</p>
                                    <a asp-action="BranchExpenses" class="btn btn-success">
                                        <i class="fas fa-eye me-1"></i>
                                        عرض التقرير
                                    </a>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4 mb-3">
                            <div class="card h-100 border-info">
                                <div class="card-body text-center">
                                    <i class="fas fa-sitemap fa-3x text-info mb-3"></i>
                                    <h5 class="card-title">قائمة الدخل للفروع</h5>
                                    <p class="card-text">تابع إيرادات ومصروفات وصافي دخل كل فرع حسب الفترة أو الربع</p>
                                    <a asp-action="BranchIncomeStatement" class="btn btn-info">
                                        <i class="fas fa-eye me-1"></i>
                                        عرض التقرير
                                    </a>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4 mb-3">
                            <div class="card h-100 border-primary">
                                <div class="card-body text-center">
                                    <i class="fas fa-network-wired fa-3x text-primary mb-3"></i>
                                    <h5 class="card-title">ملخص أداء الفروع</h5>
                                    <p class="card-text">استعرض الأصول والخصوم والإيرادات لكل فرع مع إمكانية التصدير إلى Excel</p>
                                    <a asp-action="BranchPerformanceSummary" class="btn btn-primary">
                                        <i class="fas fa-eye me-1"></i>
                                        عرض التقرير
                                    </a>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4 mb-3">
                            <div class="card h-100 border-primary">
                                <div class="card-body text-center">
                                    <i class="fas fa-table fa-3x text-primary mb-3"></i>
                                    <h5 class="card-title">التقارير التفاعلية</h5>
                                    <p class="card-text">أنشئ تقارير Pivot مخصصة واحفظها للاستخدام لاحقاً</p>
                                    <a asp-action="DynamicPivot" class="btn btn-primary">
                                        <i class="fas fa-magic me-1"></i>
                                        إنشاء تقرير تفاعلي
                                    </a>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4 mb-3">
                            <div class="card h-100 border-info">
                                <div class="card-body text-center">
                                    <i class="fas fa-project-diagram fa-3x text-info mb-3"></i>
                                    <h5 class="card-title">مصمم الاستعلامات</h5>
                                    <p class="card-text">استخدم Query Builder لربط الجداول وحفظ الاستعلامات المخصصة</p>
                                    <a asp-action="QueryBuilder" class="btn btn-info">
                                        <i class="fas fa-filter me-1"></i>
                                        إنشاء تقرير Query Builder
                                    </a>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4 mb-3">
                            <div class="card h-100 border-dark">
                                <div class="card-body text-center">
                                    <i class="fas fa-wallet fa-3x text-dark mb-3"></i>
                                    <h5 class="card-title">حركات المستخدم النقدية</h5>
                                    <p class="card-text">استعرض سندات القبض والدفع حسب الحساب والنوع مع الوصول للقيد المحاسبي المرتبط</p>
                                    <a asp-action="UserCashTransactions" class="btn btn-dark">
                                        <i class="fas fa-eye me-1"></i>
                                        عرض التقرير
                                    </a>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4 mb-3">
                            <div class="card h-100 border-primary">
                                <div class="card-body text-center">
                                    <i class="fas fa-history fa-3x text-primary mb-3"></i>
                                    <h5 class="card-title">حركات المستخدم اليومية</h5>
                                    <p class="card-text">عرض جميع الحركات المالية التي قمت بها خلال اليوم مع تفاصيل السندات والقيود المرتبطة</p>
                                    <a asp-action="UserDailyTransactions" class="btn btn-primary">
                                        <i class="fas fa-eye me-1"></i>
                                        عرض التقرير
                                    </a>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4 mb-3">
                            <div class="card h-100 border-secondary">
                                <div class="card-body text-center">
                                    <i class="fas fa-book-open fa-3x text-secondary mb-3"></i>
                                    <h5 class="card-title">التقرير اليومي لقيود الموظف</h5>
                                    <p class="card-text">تابع القيود التي قمت بإنشائها يومياً مجمعة حسب المرجع مع تفاصيل القيود المرتبطة</p>
                                    <a asp-action="UserDailyJournalEntries" class="btn btn-secondary">
                                        <i class="fas fa-calendar-day me-1"></i>
                                        عرض التقرير
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
