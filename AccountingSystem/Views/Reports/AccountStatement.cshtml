@model AccountingSystem.ViewModels.AccountStatementViewModel
@using System.Linq
@{
    ViewData["Title"] = "كشف الحساب";
}

@section Styles {
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header bg-info text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-file-alt me-2"></i>
                        كشف الحساب
                    </h4>
                </div>
                <div class="card-body">
                    <!-- فلاتر التقرير -->
                    <form method="get" class="row g-3 mb-4">
                        <div class="col-md-3">
                            <label for="accountId" class="form-label">الحساب:</label>
                            <select name="accountId" id="accountId" class="form-select account-select" required>
                                <option value="">اختر الحساب</option>
                                @if (Model?.Accounts != null)
                                {
                                    @foreach (var account in Model.Accounts)
                                    {
                                        <option value="@account.Value" selected="@(account.Selected ? "selected" : null)">@account.Text</option>
                                    }
                                }
                            </select>
                        </div>
                        <div class="col-md-2">
                            <label for="branchId" class="form-label">الفرع:</label>
                            <select name="branchId" id="branchId" class="form-select">
                                <option value="">جميع الفروع</option>
                                @if (Model?.Branches != null)
                                {
                                    @foreach (var branch in Model.Branches)
                                    {
                                        <option value="@branch.Value" selected="@(branch.Selected ? "selected" : null)">@branch.Text</option>
                                    }
                                }
                            </select>
                        </div>
                        <div class="col-md-2">
                            <label for="fromDate" class="form-label">من تاريخ:</label>
                            <input type="date" name="fromDate" id="fromDate" class="form-control" value="@(Model != null ? Model.FromDate.ToString("yyyy-MM-dd") : DateTime.Now.AddMonths(-1).ToString("yyyy-MM-dd"))" />
                        </div>
                        <div class="col-md-2">
                            <label for="toDate" class="form-label">إلى تاريخ:</label>
                            <input type="date" name="toDate" id="toDate" class="form-control" value="@(Model != null ? Model.ToDate.ToString("yyyy-MM-dd") : DateTime.Now.ToString("yyyy-MM-dd"))" />
                        </div>
                        <div class="col-md-3">
                            <label class="form-label">&nbsp;</label>
                            <div>
                                <button type="submit" class="btn btn-info">
                                    <i class="fas fa-search me-1"></i>
                                    عرض الكشف
                                </button>
                            </div>
                        </div>
                    </form>

                    @if (Model?.AccountName != null)
                    {
                        var showBaseCurrency = !string.Equals(Model?.CurrencyCode, Model?.BaseCurrencyCode, System.StringComparison.OrdinalIgnoreCase);
                        var branchLabel = string.IsNullOrWhiteSpace(Model?.SelectedBranchName)
                            ? "جميع الفروع"
                            : Model!.SelectedBranchName!;
                        var transactionsCount = Model?.Transactions?.Count ?? 0;
                        <!-- معلومات الحساب -->
                        <div class="card border-info mb-4">
                            <div class="card-header bg-light">
                                <div class="row">
                                    <div class="col-md-6">
                                        <h5 class="mb-0">@Model.AccountName</h5>
                                        <small class="text-muted">رقم الحساب: @Model.AccountCode</small>
                                        <div class="mt-2 d-flex flex-wrap gap-2">
                                            <span class="badge bg-info text-dark">
                                                <i class="fas fa-code-branch ms-1"></i>
                                                @branchLabel
                                            </span>
                                            <span class="badge bg-secondary">
                                                <i class="fas fa-list-ol ms-1"></i>
                                                @transactionsCount حركة
                                            </span>
                                        </div>
                                    </div>
                                    <div class="col-md-6 text-end">
                                        <h6 class="mb-0">
                                            الرصيد الافتتاحي:
                                            <span class="badge bg-secondary">@Model.OpeningBalance.ToString("N2") @Model.CurrencyCode</span>
                                            @if (showBaseCurrency)
                                            {
                                                <small class="text-muted">(@Model.OpeningBalanceBase.ToString("N2") @Model.BaseCurrencyCode)</small>
                                            }
                                        </h6>
                                        <h6 class="mb-0">
                                            الرصيد الختامي:
                                            <span class="badge bg-primary">@Model.ClosingBalance.ToString("N2") @Model.CurrencyCode</span>
                                            @if (showBaseCurrency)
                                            {
                                                <small class="text-muted">(@Model.ClosingBalanceBase.ToString("N2") @Model.BaseCurrencyCode)</small>
                                            }
                                        </h6>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-end mb-3">
                            <a class="btn btn-outline-primary" target="_blank" href="@Url.Action("PrintAccountStatement", "Reports", new { accountId = Model.AccountId, branchId = Model.BranchId, fromDate = Model.FromDate.ToString("yyyy-MM-dd"), toDate = Model.ToDate.ToString("yyyy-MM-dd") })">
                                <i class="fas fa-print me-1"></i>
                                طباعة A4
                            </a>
                        </div>

                        <!-- جدول الحركات -->
                        <div class="card border-light mb-4">
                            <div class="card-header bg-light fw-bold">
                                <i class="fas fa-balance-scale me-2"></i>
                                الرصيد الافتتاحي (@Model.FromDate.ToString("yyyy/MM/dd"))
                            </div>
                            <div class="card-body p-0">
                                <div class="table-responsive mb-0">
                                    <table class="table table-sm table-bordered mb-0">
                                        <thead class="table-secondary">
                                            <tr>
                                                <th class="text-center">البيان</th>
                                                <th class="text-end">الرصيد (@Model.CurrencyCode)</th>
                                                @if (showBaseCurrency)
                                                {
                                                    <th class="text-end">الرصيد (@Model.BaseCurrencyCode)</th>
                                                }
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr>
                                                <td class="fw-bold text-center">الرصيد الافتتاحي</td>
                                                <td class="text-end fw-bold">@Model.OpeningBalance.ToString("N2") @Model.CurrencyCode</td>
                                                @if (showBaseCurrency)
                                                {
                                                    <td class="text-end text-muted">@Model.OpeningBalanceBase.ToString("N2") @Model.BaseCurrencyCode</td>
                                                }
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>

                        @if (Model.Transactions != null && Model.Transactions.Any())
                        {
                            var groupedTransactions = Model.Transactions
                                .GroupBy(t => string.IsNullOrWhiteSpace(t.MovementType) ? "بدون تصنيف" : t.MovementType)
                                .OrderBy(g => g.Key)
                                .ToList();

                            <div class="accordion" id="movementTypeAccordion">
                                @for (int i = 0; i < groupedTransactions.Count; i++)
                                {
                                    var grouping = groupedTransactions[i];
                                    var transactions = grouping.ToList();
                                    var collapseId = $"movementTypeCollapse{i}";
                                    var headingId = $"movementTypeHeading{i}";
                                    var totalDebit = transactions.Sum(t => t.DebitAmount);
                                    var totalCredit = transactions.Sum(t => t.CreditAmount);
                                    var totalDebitBase = transactions.Sum(t => t.DebitAmountBase);
                                    var totalCreditBase = transactions.Sum(t => t.CreditAmountBase);
                                    var lastBalance = transactions.Last().RunningBalance;
                                    var lastBalanceBase = transactions.Last().RunningBalanceBase;

                                    <div class="accordion-item mb-3">
                                        <h2 class="accordion-header" id="@headingId">
                                            <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#@collapseId" aria-expanded="true" aria-controls="@collapseId">
                                                <div class="d-flex w-100 flex-column flex-md-row align-items-md-center justify-content-md-between gap-2">
                                                    <div>
                                                        <span class="fw-bold">
                                                            <i class="fas fa-folder-open me-2"></i>
                                                            @grouping.Key
                                                        </span>
                                                        <span class="badge bg-secondary ms-2">@transactions.Count حركة</span>
                                                    </div>
                                                    <div class="d-flex flex-wrap align-items-center gap-4">
                                                        <div class="d-flex flex-column text-nowrap">
                                                            <span class="badge bg-success text-white">مدين: @totalDebit.ToString("N2") @Model.CurrencyCode</span>
                                                            @if (showBaseCurrency)
                                                            {
                                                                <small class="text-muted">(@totalDebitBase.ToString("N2") @Model.BaseCurrencyCode)</small>
                                                            }
                                                        </div>
                                                        <div class="d-flex flex-column text-nowrap">
                                                            <span class="badge bg-danger text-white">دائن: @totalCredit.ToString("N2") @Model.CurrencyCode</span>
                                                            @if (showBaseCurrency)
                                                            {
                                                                <small class="text-muted">(@totalCreditBase.ToString("N2") @Model.BaseCurrencyCode)</small>
                                                            }
                                                        </div>
                                                        <div class="d-flex flex-column text-nowrap">
                                                            <span class="badge bg-primary">الرصيد: @lastBalance.ToString("N2") @Model.CurrencyCode</span>
                                                            @if (showBaseCurrency)
                                                            {
                                                                <small class="text-muted">(@lastBalanceBase.ToString("N2") @Model.BaseCurrencyCode)</small>
                                                            }
                                                        </div>
                                                    </div>
                                                </div>
                                            </button>
                                        </h2>
                                        <div id="@collapseId" class="accordion-collapse collapse show" aria-labelledby="@headingId">
                                            <div class="accordion-body p-0">
                                                <div class="table-responsive">
                                                    <table class="table table-striped table-hover mb-0">
                                                        <thead class="table-dark">
                                                            <tr>
                                                                <th>التاريخ</th>
                                                                <th>رقم القيد</th>
                                                                <th>المرجع</th>
                                                                <th>الفرع</th>
                                                                <th>المستخدم</th>
                                                                <th>البيان</th>
                                                                <th class="text-end">مدين (@Model.CurrencyCode)</th>
                                                                <th class="text-end">دائن (@Model.CurrencyCode)</th>
                                                                <th class="text-end">الرصيد (@Model.CurrencyCode)</th>
                                                            </tr>
                                                        </thead>
                                                        <tbody>
                                                            @foreach (var transaction in transactions)
                                                            {
                                                                <tr>
                                                                    <td>@transaction.Date.ToString("dd/MM/yyyy")</td>
                                                                    <td>
                                                                        <a href="@Url.Action("Details", "JournalEntries", new { id = transaction.JournalEntryId })" class="text-decoration-none" target="_blank">
                                                                            @transaction.JournalEntryNumber
                                                                        </a>
                                                                    </td>
                                                                    <td>
                                                                        <a href="@Url.Action("Details", "JournalEntries", new { id = transaction.JournalEntryId })" class="btn btn-sm btn-outline-secondary" target="_blank">
                                                                            <i class="fas fa-link me-1"></i>
                                                                            @(string.IsNullOrWhiteSpace(transaction.Reference) ? "عرض القيد" : transaction.Reference)
                                                                        </a>
                                                                    </td>
                                                                    <td>@(string.IsNullOrWhiteSpace(transaction.BranchName) ? "-" : transaction.BranchName)</td>
                                                                    <td>@(string.IsNullOrWhiteSpace(transaction.CreatedByName) ? "-" : transaction.CreatedByName)</td>
                                                                    <td>
                                                                        <div class="fw-semibold">@transaction.MovementType</div>
                                                                        @if (!string.IsNullOrWhiteSpace(transaction.Description))
                                                                        {
                                                                            <div class="text-muted small">@transaction.Description</div>
                                                                        }
                                                                    </td>
                                                                    <td class="text-end">
                                                                        @if (transaction.DebitAmount > 0)
                                                                        {
                                                                            <span class="text-success fw-bold">@transaction.DebitAmount.ToString("N2") @Model.CurrencyCode</span>
                                                                            @if (showBaseCurrency)
                                                                            {
                                                                                <small class="text-muted d-block">@transaction.DebitAmountBase.ToString("N2") @Model.BaseCurrencyCode</small>
                                                                            }
                                                                        }
                                                                        else
                                                                        {
                                                                            <span class="text-muted">-</span>
                                                                        }
                                                                    </td>
                                                                    <td class="text-end">
                                                                        @if (transaction.CreditAmount > 0)
                                                                        {
                                                                            <span class="text-danger fw-bold">@transaction.CreditAmount.ToString("N2") @Model.CurrencyCode</span>
                                                                            @if (showBaseCurrency)
                                                                            {
                                                                                <small class="text-muted d-block">@transaction.CreditAmountBase.ToString("N2") @Model.BaseCurrencyCode</small>
                                                                            }
                                                                        }
                                                                        else
                                                                        {
                                                                            <span class="text-muted">-</span>
                                                                        }
                                                                    </td>
                                                                    <td class="text-end">
                                                                        <span class="fw-bold">@transaction.RunningBalance.ToString("N2") @Model.CurrencyCode</span>
                                                                        @if (showBaseCurrency)
                                                                        {
                                                                            <small class="text-muted d-block">@transaction.RunningBalanceBase.ToString("N2") @Model.BaseCurrencyCode</small>
                                                                        }
                                                                    </td>
                                                                </tr>
                                                            }
                                                        </tbody>
                                                    </table>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                        else
                        {
                            <div class="text-center text-muted py-4">
                                <i class="fas fa-inbox fa-2x mb-2"></i>
                                <p class="mb-0">لا توجد حركات في الفترة المحددة</p>
                            </div>
                        }

                        <!-- ملخص الحركات -->
                        <div class="row mt-4">
                            <div class="col-md-4">
                                <div class="card border-success">
                                    <div class="card-body text-center">
                                        <h6 class="card-title">إجمالي المدين</h6>
                                        <h4 class="text-success">
                                            (@Model.TotalDebit.ToString("N2") @Model.CurrencyCode)
                                            @if (showBaseCurrency)
                                            {
                                                <small class="text-muted">(@Model.TotalDebitBase.ToString("N2") @Model.BaseCurrencyCode)</small>
                                            }
                                        </h4>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="card border-danger">
                                    <div class="card-body text-center">
                                        <h6 class="card-title">إجمالي الدائن</h6>
                                        <h4 class="text-danger">
                                            (@Model.TotalCredit.ToString("N2") @Model.CurrencyCode)
                                            @if (showBaseCurrency)
                                            {
                                                <small class="text-muted">(@Model.TotalCreditBase.ToString("N2") @Model.BaseCurrencyCode)</small>
                                            }
                                        </h4>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="card border-primary">
                                    <div class="card-body text-center">
                                        <h6 class="card-title">صافي الحركة</h6>
                                        <h4 class="text-primary">
                                            (@((Model.TotalDebit - Model.TotalCredit).ToString("N2")) @Model.CurrencyCode)
                                            @if (showBaseCurrency)
                                            {
                                                <small class="text-muted">(@((Model.TotalDebitBase - Model.TotalCreditBase).ToString("N2")) @Model.BaseCurrencyCode)</small>
                                            }
                                        </h4>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-search fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">اختر الحساب لعرض الكشف</h5>
                            <p class="text-muted">يرجى اختيار الحساب والفترة الزمنية المطلوبة</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <script>
        $('#accountId').select2({
            placeholder: 'اختر الحساب',
            width: '100%'
        });
    </script>
}
