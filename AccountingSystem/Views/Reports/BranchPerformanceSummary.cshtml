@model AccountingSystem.ViewModels.BranchPerformanceSummaryViewModel
@{
    ViewData["Title"] = "ملخص أداء الفروع";
    var branchCount = Model.Branches.Count;
    var headerColspan = Math.Max(2, branchCount + 2);
}

@section Styles {
    <style>
        .branch-report-label {
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            padding-inline-start: calc(var(--level) * 1.5rem);
        }

        .branch-report-code {
            font-weight: 600;
            color: #6c757d;
        }

        .branch-toggle {
            background: none;
            border: none;
            color: inherit;
            padding: 0;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            width: 1.5rem;
            height: 1.5rem;
            cursor: pointer;
        }

            .branch-toggle:focus {
                outline: 2px solid rgba(13, 110, 253, 0.4);
                outline-offset: 2px;
            }

        .branch-toggle-placeholder {
            display: inline-block;
            width: 1.5rem;
            height: 1.5rem;
        }

        .branch-row-child {
            display: none;
        }

        .branch-toggle .fas {
            transition: transform 0.2s ease;
        }

        .branch-toggle.expanded .fas {
            transform: rotate(90deg);
        }
    </style>
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <div>
                        <h4 class="mb-0"><i class="fas fa-network-wired me-2"></i>ملخص أداء الفروع</h4>
                        <small class="text-white-50">تابع أصول وخصوم وإيرادات كل فرع مع إمكانية التصدير إلى Excel</small>
                    </div>
                    <a class="btn btn-outline-light" asp-action="BranchPerformanceSummaryExcel" asp-route-fromDate="@Model.FromDate.ToString("yyyy-MM-dd")" asp-route-toDate="@Model.ToDate.ToString("yyyy-MM-dd")">
                        <i class="fas fa-file-excel me-1"></i>تصدير Excel
                    </a>
                </div>
                <div class="card-body">
                    <form method="get" class="row g-3 mb-4">
                        <div class="col-md-3 col-sm-6">
                            <label class="form-label">من تاريخ</label>
                            <input type="date" class="form-control" name="fromDate" value="@Model.FromDate.ToString("yyyy-MM-dd")" />
                        </div>
                        <div class="col-md-3 col-sm-6">
                            <label class="form-label">إلى تاريخ</label>
                            <input type="date" class="form-control" name="toDate" value="@Model.ToDate.ToString("yyyy-MM-dd")" />
                        </div>
                        <div class="col-md-6 col-sm-12 align-self-end">
                            <div class="d-flex gap-2 justify-content-end">
                                <button type="submit" class="btn btn-primary flex-grow-1 flex-md-grow-0">
                                    <i class="fas fa-search me-1"></i>عرض التقرير
                                </button>
                                <a asp-action="BranchPerformanceSummary" class="btn btn-outline-secondary">
                                    <i class="fas fa-undo me-1"></i>إعادة تعيين
                                </a>
                            </div>
                        </div>
                    </form>

                    @if (Model.HasResults)
                    {
                        <div class="alert alert-info d-flex align-items-center gap-3">
                            <i class="fas fa-info-circle fa-lg"></i>
                            <div>
                                <div>الفترة: من <strong>@Model.FromDate.ToString("yyyy-MM-dd")</strong> إلى <strong>@Model.ToDate.ToString("yyyy-MM-dd")</strong></div>
                                <div>العملة الأساسية: <strong>@Model.BaseCurrencyCode</strong></div>
                            </div>
                        </div>

                        <div class="table-responsive">
                            <table class="table table-bordered table-hover align-middle">
                                <thead class="table-light">
                                    <tr>
                                        <th style="min-width: 220px;">البند</th>
                                        @foreach (var branch in Model.Branches)
                                        {
                                            <th class="text-end">@branch.BranchName</th>
                                        }
                                        <th class="text-end">الإجمالي</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var reportSection in Model.Sections)
                                    {
                                        <tr class="table-primary fw-bold">
                                            <td colspan="@headerColspan">@reportSection.Title</td>
                                        </tr>

                                        var sectionPrefix = $"section-{(int)reportSection.AccountType}";
                                        var parentAccountIds = reportSection.Rows
                                        .Where(r => r.ParentAccountId.HasValue)
                                        .Select(r => r.ParentAccountId!.Value)
                                        .ToHashSet();

                                        @foreach (var row in reportSection.Rows)
                                        {
                                            var indentLevel = Math.Max(row.Level - 1, 0);
                                            var hasCode = !string.IsNullOrWhiteSpace(row.AccountCode);
                                            var hasChildren = parentAccountIds.Contains(row.AccountId);
                                            var rowKey = $"{sectionPrefix}-row-{row.AccountId}";
                                            var parentKey = row.ParentAccountId.HasValue ? $"{sectionPrefix}-row-{row.ParentAccountId.Value}" : string.Empty;
                                            <tr class="branch-row@(row.ParentAccountId.HasValue ? " branch-row-child" : string.Empty)" data-row-id="@rowKey" data-level="@row.Level" @if (row.ParentAccountId.HasValue) {
                                                                                                                                                        <text>data-parent-id="@parentKey"</text>
                                                                                                                                                        ;
                                                                                                                }
                                                                                >
                                                                                                                                <td>
                                                                                                                                    <span class="branch-report-label" style="--level:@indentLevel;">
                                                                                                                                        @if (hasChildren)
                                                                                                                                        {
                                                                                                                                                                                    <button type="button"
                                                                                                                                                                                            class="branch-toggle collapsed"
                                                                                                                                                                                            data-row-id="@rowKey"
                                                                                                                                                                                            aria-expanded="false"
                                                                                                                                                                                            title="تبديل عرض التفاصيل">
                                                                                                                                                                                        <i class="fas fa-chevron-right"></i>
                                                                                                                                                                                    </button>
                                                                                                                                        }
                                                                                                                                        else
                                                                                                                                        {
                                                                                                                                                                                    <span class="branch-toggle-placeholder"></span>
                                                                                                                                        }
                                                                                                                                        @if (hasCode)
                                                                                                                                        {
                                                                                                                                                                                    <span class="branch-report-code">@row.AccountCode</span>
                                                                                                                                        }
                                                                                                                                        <span>@row.Label</span>
                                                                                                                                    </span>
                                                                                                                                </td>
                                                                                                                                @foreach (var branch in Model.Branches)
                                                                                                                                {
                                                                                                                                                                            var value = row.Values.TryGetValue(branch.BranchId, out var amount) ? amount : 0m;
                                                                                                                                                                            var cellClass = value < 0 ? "text-end text-danger" : "text-end";
                                                                                                                                                                            <td class="@cellClass">@value.ToString("N2")</td>
                                                                                                                                }
                                                                                                                                @{
                                                                                                                                                                            var rowTotal = row.Total;
                                                                                                                                                                            var totalClass = rowTotal < 0 ? "text-end text-danger fw-bold" : "text-end fw-bold";
                                                                                                                                }
                                                                                                                                <td class="@totalClass">@rowTotal.ToString("N2")</td>
                                                                                                                            </tr>
                                    }
                                    <tr class="table-secondary fw-bold">
                                        <td>إجمالي @reportSection.Title</td>
                                        @foreach (var branch in Model.Branches)
                                        {
                                            var total = reportSection.TotalsByBranch.TryGetValue(branch.BranchId, out var amount) ? amount : 0m;
                                            var cellClass = total < 0 ? "text-end text-danger" : "text-end";
                                            <td class="@cellClass">@total.ToString("N2")</td>
                                        }
                                        @{
                                            var sectionTotal = reportSection.OverallTotal;
                                            var sectionClass = sectionTotal < 0 ? "text-end text-danger" : "text-end";
                                        }
                                        <td class="@sectionClass">@sectionTotal.ToString("N2")</td>
                                    </tr>
                                }

                                @if (Model.SummaryRows.Any())
                                {
                                    <tr class="table-dark text-white fw-bold">
                                        <td colspan="@headerColspan">مؤشرات الأداء</td>
                                    </tr>

                                    var summaryParentAccountIds = Model.SummaryRows
                                    .Where(r => r.ParentAccountId.HasValue)
                                    .Select(r => r.ParentAccountId!.Value)
                                    .ToHashSet();

                                    @foreach (var row in Model.SummaryRows)
                                    {
                                        var indentLevel = Math.Max(row.Level - 1, 0);
                                        var hasCode = !string.IsNullOrWhiteSpace(row.AccountCode);
                                        var hasChildren = summaryParentAccountIds.Contains(row.AccountId);
                                        var rowKey = $"summary-row-{row.AccountId}";
                                        var parentKey = row.ParentAccountId.HasValue ? $"summary-row-{row.ParentAccountId.Value}" : string.Empty;
                                        <tr class="branch-row@(row.ParentAccountId.HasValue ? " branch-row-child" : string.Empty)" data-row-id="@rowKey" data-level="@row.Level" @if (row.ParentAccountId.HasValue) {
                                                                                                                <text>data-parent-id="@parentKey"</text>
                                                                                                                ;
                                                                        }
                                        >
                                                                                        <td>
                                                                                            <span class="branch-report-label" style="--level:@indentLevel;">
                                                                                                @if (hasChildren)
                                                                                                {
                                                                                                                                            <button type="button"
                                                                                                                                                    class="branch-toggle collapsed"
                                                                                                                                                    data-row-id="@rowKey"
                                                                                                                                                    aria-expanded="false"
                                                                                                                                                    title="تبديل عرض التفاصيل">
                                                                                                                                                <i class="fas fa-chevron-right"></i>
                                                                                                                                            </button>
                                                                                                }
                                                                                                else
                                                                                                {
                                                                                                                                            <span class="branch-toggle-placeholder"></span>
                                                                                                }
                                                                                                @if (hasCode)
                                                                                                {
                                                                                                                                            <span class="branch-report-code">@row.AccountCode</span>
                                                                                                }
                                                                                                <span>@row.Label</span>
                                                                                            </span>
                                                                                        </td>
                                                                                        @foreach (var branch in Model.Branches)
                                                                                        {
                                                                                                                                    var value = row.Values.TryGetValue(branch.BranchId, out var amount) ? amount : 0m;
                                                                                                                                    var cellClass = value < 0 ? "text-end text-danger" : "text-end";
                                                                                                                                    <td class="@cellClass">@value.ToString("N2")</td>
                                                                                        }
                                                                                        @{
                                                                                                                                    var rowTotal = row.Total;
                                                                                                                                    var totalClass = rowTotal < 0 ? "text-end text-danger fw-bold" : "text-end fw-bold";
                                                                                        }
                                                                                        <td class="@totalClass">@rowTotal.ToString("N2")</td>
                                                                                    </tr>
                                }
                                                                }
                            </tbody>
                        </table>
                    </div>
                                        }
                                        else if (Model.FiltersApplied)
                    {
                        <div class="text-center text-muted py-5">
                            <i class="fas fa-chart-bar fa-2x mb-3"></i>
                            <p class="mb-0">لا توجد بيانات ضمن الفترة المحددة. حاول تغيير نطاق التاريخ.</p>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-secondary">استخدم المرشحات أعلاه لتحديد الفترة الزمنية لعرض ملخص الأداء.</div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const toggles = document.querySelectorAll('.branch-toggle');

            toggles.forEach(toggle => {
                toggle.addEventListener('click', function () {
                    const rowId = this.dataset.rowId;
                    const isExpanded = this.getAttribute('aria-expanded') === 'true';
                    setRowExpansion(rowId, !isExpanded, this);
                });
            });

            function setRowExpansion(rowId, expand, button) {
                button.setAttribute('aria-expanded', expand);
                button.classList.toggle('expanded', expand);
                button.classList.toggle('collapsed', !expand);
                const icon = button.querySelector('i');
                if (icon) {
                    icon.classList.toggle('fa-chevron-right', !expand);
                    icon.classList.toggle('fa-chevron-down', expand);
                }
                toggleChildren(rowId, expand);
            }

            function toggleChildren(parentId, show) {
                const childRows = document.querySelectorAll(`tr[data-parent-id="${parentId}"]`);
                childRows.forEach(child => {
                    if (show) {
                        child.style.display = 'table-row';
                        const childToggle = child.querySelector('.branch-toggle');
                        if (childToggle && childToggle.getAttribute('aria-expanded') === 'true') {
                            toggleChildren(child.dataset.rowId, true);
                        } else {
                            toggleChildren(child.dataset.rowId, false);
                        }
                    } else {
                        child.style.display = 'none';
                        const childToggle = child.querySelector('.branch-toggle');
                        if (childToggle) {
                            childToggle.setAttribute('aria-expanded', 'false');
                            childToggle.classList.remove('expanded');
                            childToggle.classList.add('collapsed');
                            const icon = childToggle.querySelector('i');
                            if (icon) {
                                icon.classList.add('fa-chevron-right');
                                icon.classList.remove('fa-chevron-down');
                            }
                        }
                        toggleChildren(child.dataset.rowId, false);
                    }
                });
            }
        });
    </script>
}
