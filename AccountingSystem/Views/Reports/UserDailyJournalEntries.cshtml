@using System.Linq
@model AccountingSystem.ViewModels.UserJournalEntryDailyReportViewModel
@{
    ViewData["Title"] = "تقرير الحركات اليومية للقيود";
    var totalDebit = Model.Items.Sum(i => i.TotalDebit);
    var totalCredit = Model.Items.Sum(i => i.TotalCredit);
}

<div class="container-fluid">
    <div class="card">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">
                <i class="fas fa-book-open me-2"></i>
                تقرير يومي لحركات القيود حسب المرجع
            </h5>
        </div>
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-3">
                    <label for="fromDate" class="form-label">من تاريخ</label>
                    <input type="date" id="fromDate" name="fromDate" class="form-control" value="@Model.FromDate.ToString("yyyy-MM-dd")" />
                </div>
                <div class="col-md-3">
                    <label for="toDate" class="form-label">إلى تاريخ</label>
                    <input type="date" id="toDate" name="toDate" class="form-control" value="@Model.ToDate.ToString("yyyy-MM-dd")" />
                </div>
                <div class="col-md-4">
                    <label for="reference" class="form-label">المرجع</label>
                    <input type="text" id="reference" name="reference" class="form-control" value="@Model.ReferenceFilter" placeholder="ابحث باستخدام المرجع" />
                </div>
                <div class="col-md-2 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="fas fa-search me-1"></i>
                        عرض التقرير
                    </button>
                </div>
            </form>

            <div class="mt-4">
                <div class="alert alert-secondary d-flex justify-content-between align-items-center">
                    <div>
                        <strong>إجمالي الحركات:</strong>
                        @Model.Items.Count مجموعة
                    </div>
                    <div>
                        <span class="me-3"><strong>إجمالي المدين:</strong> @totalDebit.ToString("N2")</span>
                        <span><strong>إجمالي الدائن:</strong> @totalCredit.ToString("N2")</span>
                    </div>
                </div>
            </div>

            <div class="table-responsive mt-3">
                <table class="table table-striped table-hover align-middle">
                    <thead class="table-dark">
                        <tr>
                            <th style="width: 12%;">التاريخ</th>
                            <th style="width: 18%;">المرجع</th>
                            <th style="width: 15%;" class="text-end">إجمالي المدين</th>
                            <th style="width: 15%;" class="text-end">إجمالي الدائن</th>
                            <th>القيود</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Items.Count == 0)
                        {
                            <tr>
                                <td colspan="5" class="text-center text-muted py-4">
                                    لا توجد قيود مطابقة لمعايير البحث المحددة.
                                </td>
                            </tr>
                        }
                        else
                        {
                            foreach (var group in Model.Items)
                            {
                                <tr>
                                    <td>@group.Date.ToString("dd/MM/yyyy")</td>
                                    <td>@group.Reference</td>
                                    <td class="text-end">@group.TotalDebit.ToString("N2")</td>
                                    <td class="text-end">@group.TotalCredit.ToString("N2")</td>
                                    <td>
                                        <ul class="list-unstyled mb-0">
                                            @foreach (var entry in group.Entries)
                                            {
                                                <li class="mb-2">
                                                    <div class="d-flex flex-column flex-lg-row align-items-lg-center gap-2">
                                                        <div class="fw-semibold">@entry.Number</div>
                                                        <div class="text-muted flex-grow-1">@entry.Description</div>
                                                        <div class="text-nowrap">
                                                            <span class="badge bg-success-subtle text-success">مدين: @entry.TotalDebit.ToString("N2")</span>
                                                            <span class="badge bg-danger-subtle text-danger ms-2">دائن: @entry.TotalCredit.ToString("N2")</span>
                                                        </div>
                                                        <div>
                                                            <a asp-controller="JournalEntries"
                                                               asp-action="Details"
                                                               asp-route-id="@entry.JournalEntryId"
                                                               asp-require-permission="journal.view"
                                                               class="btn btn-sm btn-outline-primary">
                                                                <i class="fas fa-eye me-1"></i>
                                                                عرض القيد
                                                            </a>
                                                        </div>
                                                    </div>
                                                </li>
                                            }
                                        </ul>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
