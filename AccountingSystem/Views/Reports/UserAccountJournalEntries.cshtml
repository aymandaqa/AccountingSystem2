@using System.Linq
@model AccountingSystem.ViewModels.UserAccountJournalEntryReportViewModel
@functions {
    protected string GetImpactBadgeClass(decimal amount)
    {
        if (amount > 0)
        {
            return "bg-success-subtle text-success";
        }

        if (amount < 0)
        {
            return "bg-danger-subtle text-danger";
        }

        return "bg-secondary-subtle text-secondary";
    }

    protected string GetImpactIcon(decimal amount)
    {
        if (amount > 0)
        {
            return "fa-arrow-up";
        }

        if (amount < 0)
        {
            return "fa-arrow-down";
        }

        return "fa-minus";
    }
}
@{
    ViewData["Title"] = "تقرير حركات حسابات المستخدم";
    var totalAccountImpact = Model.Items.Sum(i => i.TotalCashImpact);
}

<div class="container-fluid">
    <div class="card">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center flex-wrap gap-2">
            <h5 class="mb-0">
                <i class="fas fa-wallet me-2"></i>
                تقرير حركات الحسابات المخصصة للمستخدمين
            </h5>
            <a asp-action="UserAccountJournalEntriesExcel"
               asp-route-fromDate="@Model.FromDate.ToString("yyyy-MM-dd")"
               asp-route-toDate="@Model.ToDate.ToString("yyyy-MM-dd")"
               asp-route-reference="@Model.ReferenceFilter"
               asp-route-accountId="@Model.SelectedAccountId"
               class="btn btn-success text-white">
                <i class="fas fa-file-excel me-1"></i>
                تصدير إلى Excel
            </a>
        </div>
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-3">
                    <label for="fromDate" class="form-label">من تاريخ</label>
                    <input type="date" id="fromDate" name="fromDate" class="form-control" value="@Model.FromDate.ToString("yyyy-MM-dd")" />
                </div>
                <div class="col-md-3">
                    <label for="toDate" class="form-label">إلى تاريخ</label>
                    <input type="date" id="toDate" name="toDate" class="form-control" value="@Model.ToDate.ToString("yyyy-MM-dd")" />
                </div>
                <div class="col-md-3">
                    <label for="accountId" class="form-label">الحساب</label>
                    <select id="accountId" name="accountId" class="form-select">
                        <option value="">كل الحسابات المخصصة للمستخدمين</option>
                        @foreach (var account in Model.Accounts)
                        {
                            <option value="@account.Value" selected="@account.Selected">@account.Text</option>
                        }
                    </select>
                </div>
                <div class="col-md-3">
                    <label for="reference" class="form-label">المرجع</label>
                    <input type="text" id="reference" name="reference" class="form-control" value="@Model.ReferenceFilter" placeholder="ابحث باستخدام المرجع" />
                </div>
                <div class="col-12 d-flex justify-content-end">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-search me-1"></i>
                        عرض التقرير
                    </button>
                </div>
            </form>

            <div class="mt-4">
                <div class="alert alert-secondary d-flex justify-content-between align-items-center flex-wrap gap-3">
                    <div>
                        <strong>إجمالي المجموعات:</strong>
                        @Model.Items.Count مجموعة
                    </div>
                    <div class="text-nowrap">
                        <span class="badge @GetImpactBadgeClass(totalAccountImpact) fs-6">
                            <i class="fas @GetImpactIcon(totalAccountImpact) me-2"></i>
                            <strong>إجمالي تأثير الحساب:</strong>
                            <span class="ms-2">@totalAccountImpact.ToString("N2")</span>
                        </span>
                    </div>
                </div>
            </div>

            <div class="table-responsive mt-3">
                <table class="table table-striped table-hover align-middle">
                    <thead class="table-dark">
                        <tr>
                            <th style="width: 12%;">التاريخ</th>
                            <th style="width: 20%;">المرجع</th>
                            <th style="width: 25%;">نوع المعاملة</th>
                            <th style="width: 18%;" class="text-end">تأثير الحساب</th>
                            <th style="width: 12%;" class="text-center">التفاصيل</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (!Model.Items.Any())
                        {
                            <tr>
                                <td colspan="5" class="text-center text-muted py-4">
                                    لا توجد حركات مطابقة لمعايير البحث المحددة.
                                </td>
                            </tr>
                        }
                        else
                        {
                            for (var index = 0; index < Model.Items.Count; index++)
                            {
                                var group = Model.Items[index];
                                var collapseId = $"user-account-journal-group-{index}";
                                var accordionId = $"user-account-journal-group-accordion-{index}";
                                var typeNames = group.Entries
                                    .Select(e => e.TransactionTypeName)
                                    .Where(n => !string.IsNullOrWhiteSpace(n))
                                    .Distinct(StringComparer.OrdinalIgnoreCase)
                                    .ToList();

                                var impactClass = GetImpactBadgeClass(group.TotalCashImpact);
                                var impactIcon = GetImpactIcon(group.TotalCashImpact);

                                <tr>
                                    <td>@group.Date.ToString("dd/MM/yyyy")</td>
                                    <td>@group.Reference</td>
                                    <td>
                                        @if (typeNames.Count == 0)
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                        else
                                        {
                                            <div class="d-flex flex-wrap gap-2">
                                                @foreach (var name in typeNames)
                                                {
                                                    <span class="badge bg-info-subtle text-info">@name</span>
                                                }
                                            </div>
                                        }
                                    </td>
                                    <td class="text-end">
                                        <span class="badge @impactClass">
                                            <i class="fas @impactIcon me-2"></i>
                                            @group.TotalCashImpact.ToString("N2")
                                        </span>
                                    </td>
                                    <td class="text-center">
                                        <button class="btn btn-link text-decoration-none journal-group-toggle collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#@collapseId" aria-expanded="false" aria-controls="@collapseId">
                                            <span class="fw-semibold">عرض القيود</span>
                                            <i class="fas fa-chevron-down toggle-icon ms-2"></i>
                                        </button>
                                    </td>
                                </tr>
                                <tr class="collapse" id="@collapseId">
                                    <td colspan="5">
                                        <div class="bg-light border rounded p-3">
                                            @if (!group.Entries.Any())
                                            {
                                                <div class="alert alert-secondary mb-0" role="alert">
                                                    لا توجد قيود ضمن هذه المجموعة.
                                                </div>
                                            }
                                            else
                                            {
                                                <div class="accordion" id="@accordionId">
                                                    @foreach (var entry in group.Entries)
                                                    {
                                                        var entryCollapseId = $"user-account-journal-entry-lines-{entry.JournalEntryId}";
                                                        var headerId = $"user-account-journal-entry-header-{entry.JournalEntryId}";
                                                        var entryImpactClass = GetImpactBadgeClass(entry.CashImpactAmount);
                                                        var entryImpactIcon = GetImpactIcon(entry.CashImpactAmount);

                                                        <div class="accordion-item border shadow-sm mb-3">
                                                            <h2 class="accordion-header" id="@headerId">
                                                                <button class="accordion-button collapsed gap-3" type="button" data-bs-toggle="collapse" data-bs-target="#@entryCollapseId" aria-expanded="false" aria-controls="@entryCollapseId">
                                                                    <div class="d-flex flex-column flex-lg-row align-items-lg-center gap-2 w-100">
                                                                        <div class="fw-semibold">@entry.Number</div>
                                                                        <div class="text-muted flex-grow-1">@entry.Description</div>
                                                                        <div class="d-flex flex-wrap align-items-center gap-2 ms-lg-auto">
                                                                            <span class="badge @entryImpactClass">
                                                                                <i class="fas @entryImpactIcon me-2"></i>
                                                                                تأثير الحساب: @entry.CashImpactAmount.ToString("N2")
                                                                            </span>
                                                                        </div>
                                                                    </div>
                                                                </button>
                                                            </h2>
                                                            <div id="@entryCollapseId" class="accordion-collapse collapse" aria-labelledby="@headerId" data-bs-parent="#@accordionId">
                                                                <div class="accordion-body bg-white">
                                                                    <div class="d-flex justify-content-between align-items-center flex-wrap gap-2 mb-3">
                                                                        <div class="text-muted small">
                                                                            <i class="far fa-calendar-alt me-1"></i>
                                                                            تاريخ ووقت القيد: @entry.Date.ToString("dd/MM/yyyy hh:mm tt")
                                                                        </div>
                                                                        <a asp-controller="JournalEntries"
                                                                           asp-action="Details"
                                                                           asp-route-id="@entry.JournalEntryId"
                                                                           asp-require-permission="journal.view"
                                                                           class="btn btn-sm btn-outline-primary">
                                                                            <i class="fas fa-eye me-1"></i>
                                                                            عرض القيد
                                                                        </a>
                                                                    </div>
                                                                    @if (entry.Lines.Count > 0)
                                                                    {
                                                                        <div class="table-responsive">
                                                                            <table class="table table-sm table-bordered mb-0">
                                                                                <thead class="table-light">
                                                                                    <tr>
                                                                                        <th style="width: 30%;">الحساب</th>
                                                                                        <th style="width: 30%;">الوصف</th>
                                                                                        <th class="text-end" style="width: 20%;">مدين</th>
                                                                                        <th class="text-end" style="width: 20%;">دائن</th>
                                                                                    </tr>
                                                                                </thead>
                                                                                <tbody>
                                                                                    @foreach (var line in entry.Lines)
                                                                                    {
                                                                                        <tr>
                                                                                            <td>
                                                                                                <div class="fw-semibold">@line.AccountName</div>
                                                                                                <div class="text-muted small">@line.AccountCode</div>
                                                                                            </td>
                                                                                            <td>@(string.IsNullOrWhiteSpace(line.Description) ? "-" : line.Description)</td>
                                                                                            <td class="text-end">@line.DebitAmount.ToString("N2")</td>
                                                                                            <td class="text-end">@line.CreditAmount.ToString("N2")</td>
                                                                                        </tr>
                                                                                    }
                                                                                </tbody>
                                                                            </table>
                                                                        </div>
                                                                    }
                                                                    else
                                                                    {
                                                                        <div class="alert alert-secondary mb-0" role="alert">
                                                                            لا توجد تفاصيل للقيود في هذا القيد.
                                                                        </div>
                                                                    }
                                                                </div>
                                                            </div>
                                                        </div>
                                                    }
                                                </div>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<style>
    .journal-group-toggle .toggle-icon {
        transition: transform 0.2s ease;
    }

    .journal-group-toggle.collapsed .toggle-icon {
        transform: rotate(0deg);
    }

    .journal-group-toggle:not(.collapsed) .toggle-icon {
        transform: rotate(180deg);
    }
</style>
