<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AccountingSystem</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AccountingSystem.styles.css" asp-append-version="true" />
    @await RenderSectionAsync("Styles", required: false)
</head>
@{
    var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
    var currentAction = ViewContext.RouteData.Values["action"]?.ToString();
}
<body>
    <div id="wrapper" class="d-flex">
        <nav id="sidebar" class="bg-dark">
            <div class="sidebar-header p-3 mb-3 border-bottom">
                <a class="navbar-brand d-flex align-items-center text-white" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/images/logo.svg" alt="Road-Finity Logo" class="navbar-logo me-2" />
                    <span>AccountingSystem</span>
                </a>
            </div>
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link @(currentController == "Home" && currentAction == "Index" ? "active" : "")" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(currentController == "Home" && currentAction == "Privacy" ? "active" : "")" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(currentController == "Transfers" ? "active" : "")" asp-area="" asp-controller="Transfers" asp-action="Index">الحوالات</a>
                </li>
            </ul>
        </nav>
        <div id="content" class="flex-fill">
            <nav class="navbar navbar-dark bg-dark border-bottom mb-3">
                <div class="container-fluid">
                    <button id="sidebarToggle" class="btn btn-outline-light" type="button">☰</button>
                </div>
            </nav>
            <div class="container">
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            </div>
            <footer class="border-top footer text-muted">
                <div class="container">
                    &copy; 2025 - AccountingSystem - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                </div>
            </footer>
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
