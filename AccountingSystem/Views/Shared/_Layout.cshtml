@using Microsoft.AspNetCore.Authorization
@inject IAuthorizationService AuthorizationService
<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - نظام المحاسبة</title>

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Tajawal:wght@400;500;700&display=swap" rel="stylesheet">

    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" rel="stylesheet" integrity="sha512-1ycn6IcaQQ40/MKBW2W4Rhis/DbILU74C1vSrLJxCq57o941Ym01SwNsOMqvEBFlcgUa6xLiPY/NS7P0YlC4eg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.rtl.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/AccountingSystem.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/accounting.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/minible-theme.css" asp-append-version="true" />
    <link href="https://cdn.syncfusion.com/ej2/bootstrap5.css" rel="stylesheet" />

    <script src="https://cdn.syncfusion.com/ej2/dist/ej2.min.js"></script>

    @await RenderSectionAsync("Styles", required: false)
</head>
<body class="minible-rtl">
    @{
        var canBusinessStatementBulk = (await AuthorizationService.AuthorizeAsync(User, "accountmanagement.businessstatementbulk")).Succeeded;
        var canBusnissStatment = (await AuthorizationService.AuthorizeAsync(User, "accountmanagement.busnissstatment")).Succeeded;
        var canDriverPayment = (await AuthorizationService.AuthorizeAsync(User, "accountmanagement.driverpayment")).Succeeded;
        var canDriverStatment = (await AuthorizationService.AuthorizeAsync(User, "accountmanagement.driverstatment")).Succeeded;
        var canUserPayment = (await AuthorizationService.AuthorizeAsync(User, "accountmanagement.userpayment")).Succeeded;
        var canCurrencies = (await AuthorizationService.AuthorizeAsync(User, "currencies.view")).Succeeded;
        var canSuppliers = (await AuthorizationService.AuthorizeAsync(User, "suppliers.view")).Succeeded;
        var canAgents = (await AuthorizationService.AuthorizeAsync(User, "agents.view")).Succeeded;
        var canSystemSettings = (await AuthorizationService.AuthorizeAsync(User, "systemsettings.view")).Succeeded;
        var canPermissionGroups = (await AuthorizationService.AuthorizeAsync(User, "permissiongroups.view")).Succeeded;
        var canReceiptVouchers = (await AuthorizationService.AuthorizeAsync(User, "receiptvouchers.view")).Succeeded;
        var canDisbursementVouchers = (await AuthorizationService.AuthorizeAsync(User, "disbursementvouchers.view")).Succeeded;
        var canPaymentVouchers = (await AuthorizationService.AuthorizeAsync(User, "paymentvouchers.view")).Succeeded;
        var canWorkflowApprovalsView = (await AuthorizationService.AuthorizeAsync(User, "workflowapprovals.view")).Succeeded;
        var canWorkflowDefinitionsManage = (await AuthorizationService.AuthorizeAsync(User, "workflowdefinitions.manage")).Succeeded;
        var canReceiptVouchersCreate = (await AuthorizationService.AuthorizeAsync(User, "receiptvouchers.create")).Succeeded;
        var canDisbursementVouchersCreate = (await AuthorizationService.AuthorizeAsync(User, "disbursementvouchers.create")).Succeeded;
        var canPaymentVouchersCreate = (await AuthorizationService.AuthorizeAsync(User, "paymentvouchers.create")).Succeeded;
        var showVouchers = canReceiptVouchers || canDisbursementVouchers || canPaymentVouchers || canWorkflowApprovalsView || canWorkflowDefinitionsManage || canReceiptVouchersCreate || canDisbursementVouchersCreate || canPaymentVouchersCreate;
        var showAccountManagement = canBusinessStatementBulk || canBusnissStatment || canDriverPayment || canDriverStatment || canUserPayment;
        var canAssets = (await AuthorizationService.AuthorizeAsync(User, "assets.view")).Succeeded;
        var canAssetTypes = (await AuthorizationService.AuthorizeAsync(User, "assettypes.view")).Succeeded;
        var canAssetExpenses = (await AuthorizationService.AuthorizeAsync(User, "assetexpenses.view")).Succeeded;
        var showAssets = canAssets || canAssetExpenses || canAssetTypes;

        var canDashboardView = (await AuthorizationService.AuthorizeAsync(User, "dashboard.view")).Succeeded;

        var canAccountsView = (await AuthorizationService.AuthorizeAsync(User, "accounts.view")).Succeeded;
        var canAccountsCreate = (await AuthorizationService.AuthorizeAsync(User, "accounts.create")).Succeeded;
        var canAccountsEdit = (await AuthorizationService.AuthorizeAsync(User, "accounts.edit")).Succeeded;
        var showAccounts = canAccountsView || canAccountsCreate || canAccountsEdit;

        var canCashClosuresView = (await AuthorizationService.AuthorizeAsync(User, "cashclosures.view")).Succeeded;
        var canCashClosuresCreate = (await AuthorizationService.AuthorizeAsync(User, "cashclosures.create")).Succeeded;
        var canCashClosuresApprove = (await AuthorizationService.AuthorizeAsync(User, "cashclosures.approve")).Succeeded;
        var canCashClosuresReport = (await AuthorizationService.AuthorizeAsync(User, "cashclosures.report")).Succeeded;
        var canTransfersView = (await AuthorizationService.AuthorizeAsync(User, "transfers.view")).Succeeded;
        var showOperations = canCashClosuresView || canCashClosuresCreate || canCashClosuresApprove || canCashClosuresReport || canTransfersView;

        var canJournalView = (await AuthorizationService.AuthorizeAsync(User, "journal.view")).Succeeded;
        var canJournalCreate = (await AuthorizationService.AuthorizeAsync(User, "journal.create")).Succeeded;
        var canJournalApprove = (await AuthorizationService.AuthorizeAsync(User, "journal.approve")).Succeeded;
        var showJournal = canJournalView || canJournalCreate || canJournalApprove;

        var canReportsView = (await AuthorizationService.AuthorizeAsync(User, "reports.view")).Succeeded;
        var canReportsPending = (await AuthorizationService.AuthorizeAsync(User, "reports.pending")).Succeeded;
        var canReportsDynamic = (await AuthorizationService.AuthorizeAsync(User, "reports.dynamic")).Succeeded;
        var showReports = canReportsView || canReportsPending || canReportsDynamic;

        var canBranches = (await AuthorizationService.AuthorizeAsync(User, "branches.view")).Succeeded;
        var canCostCenters = (await AuthorizationService.AuthorizeAsync(User, "costcenters.view")).Succeeded;
        var canUsers = (await AuthorizationService.AuthorizeAsync(User, "users.view")).Succeeded;
        var showSettings = canBranches || canCostCenters || canCurrencies || canPermissionGroups || canUsers;

        var canEmployeesView = (await AuthorizationService.AuthorizeAsync(User, "employees.view")).Succeeded;
        var canPayrollView = (await AuthorizationService.AuthorizeAsync(User, "payroll.view")).Succeeded;
        var canSalaryPaymentsView = (await AuthorizationService.AuthorizeAsync(User, "salarypayments.view")).Succeeded;
        var canEmployeeAdvancesView = (await AuthorizationService.AuthorizeAsync(User, "employeeadvances.view")).Succeeded;
        var showHr = canEmployeesView || canPayrollView || canSalaryPaymentsView || canEmployeeAdvancesView;

        var currentController = ViewContext.RouteData.Values["controller"]?.ToString()?.ToLower();
        var currentAction = ViewContext.RouteData.Values["action"]?.ToString()?.ToLower();
        var accountsActive = currentController == "accounts";
        var operationsActive = currentController == "cashboxclosures" || currentController == "expenses" || currentController == "transfers";
        var vouchersActive = currentController == "receiptvouchers" || currentController == "disbursementvouchers" || currentController == "paymentvouchers" || currentController == "workflowapprovals" || currentController == "workflowdefinitions";
        var accountMgmtActive = currentController == "accountmanagement";
        var journalActive = currentController == "journalentries";
        var reportsActive = currentController == "reports";
        var settingsActive = currentController == "branches" || currentController == "costcenters" || currentController == "currencies" || currentController == "users" || currentController == "permissiongroups";
        var hrActive = currentController == "employees" || currentController == "payrolls";
        var assetsActive = currentController == "assets" || currentController == "assetexpenses" || currentController == "assettypes";
    }
    <div id="layout-wrapper" class="d-flex">
        <aside id="iconSidebar" class="icon-sidebar d-flex flex-column">
            <div class="sidebar-brand text-center py-3">
                <a class="brand-link d-flex flex-column align-items-center" href="@Url.Action("Index", "Dashboard")">
                    <span class="brand-icon mb-2"><i class="fa-solid fa-calculator"></i></span>
                    <span class="brand-text">RoadFinity</span>
                </a>
            </div>
            <div class="sidebar-menu flex-grow-1 overflow-auto">
                <div class="sidebar-search px-3 pb-3">
                    <label class="form-label visually-hidden" for="sidebarSearch">ابحث في القائمة</label>
                    <div class="input-group sidebar-search-input">
                        <span class="input-group-text"><i class="fa-solid fa-magnifying-glass"></i></span>
                        <input type="search" class="form-control" id="sidebarSearch" placeholder="ابحث في القائمة..." aria-label="ابحث في القائمة">
                        <button type="button" class="btn btn-outline-light sidebar-search-clear" id="sidebarSearchClear" aria-label="مسح البحث">
                            <i class="fa-solid fa-xmark"></i>
                        </button>
                    </div>
                </div>
                <ul class="nav flex-column gap-1" id="sidebarNav">
                    <li class="nav-item">
                        <a class="nav-link @(currentController == "dashboard" && currentAction == "index" ? "active" : "")" href="@Url.Action("Index", "Dashboard")" data-bs-toggle="tooltip" data-bs-placement="left" title="لوحة التحكم">
                            <i class="fa-solid fa-chart-line"></i>
                            <span class="menu-title">لوحة التحكم</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(currentController == "home" && currentAction == "index" ? "active" : "")" href="@Url.Action("Index", "Home")" data-bs-toggle="tooltip" data-bs-placement="left" title="عرض أداء الشركة">
                            <i class="fa-solid fa-gauge-high"></i>
                            <span class="menu-title">عرض أداء الشركة</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link d-flex align-items-center @(accountsActive ? "active" : "collapsed")" data-bs-toggle="collapse" href="#accountsMenu" role="button" aria-expanded="@(accountsActive ? "true" : "false")" title="الحسابات">
                            <i class="fa-solid fa-layer-group"></i>
                            <span class="menu-title">الحسابات</span>
                            <i class="fa-solid fa-angle-left ms-auto submenu-arrow"></i>
                        </a>
                        <ul class="collapse menu-dropdown @(accountsActive ? "show" : "")" id="accountsMenu">
                            <li><a class="dropdown-item" href="@Url.Action("Tree", "Accounts")"><i class="fa-solid fa-sitemap"></i><span>شجرة الحسابات</span></a></li>
                            <li><a class="dropdown-item" href="@Url.Action("Index", "Accounts")"><i class="fa-solid fa-list"></i><span>قائمة الحسابات</span></a></li>
                            <li><a class="dropdown-item" href="@Url.Action("Create", "Accounts")"><i class="fa-solid fa-plus"></i><span>إضافة حساب جديد</span></a></li>
                        </ul>
                    </li>
                    @if (canAgents)
                    {
                        <li class="nav-item">
                            <a class="nav-link @(currentController == "agents" ? "active" : "")" href="@Url.Action("Index", "Agents")" data-bs-toggle="tooltip" data-bs-placement="left" title="الوكلاء">
                                <i class="fa-solid fa-user-tie"></i>
                                <span class="menu-title">الوكلاء</span>
                            </a>
                        </li>
                    }
                    @if (canSuppliers)
                    {
                        <li class="nav-item">
                            <a class="nav-link @(currentController == "suppliers" ? "active" : "")" href="@Url.Action("Index", "Suppliers")" data-bs-toggle="tooltip" data-bs-placement="left" title="الموردين">
                                <i class="fa-solid fa-truck"></i>
                                <span class="menu-title">الموردين</span>
                            </a>
                        </li>
                    }
                    @if (canSystemSettings)
                    {
                        <li class="nav-item">
                            <a class="nav-link @(currentController == "systemsettings" ? "active" : "")" href="@Url.Action("Index", "SystemSettings")" data-bs-toggle="tooltip" data-bs-placement="left" title="إعدادات النظام">
                                <i class="fa-solid fa-sliders"></i>
                                <span class="menu-title">إعدادات النظام</span>
                            </a>
                        </li>
                    }
                    @if (showOperations)
                    {
                        <li class="nav-item">
                            <a class="nav-link d-flex align-items-center @(operationsActive ? "active" : "collapsed")" data-bs-toggle="collapse" href="#operationsMenu" role="button" aria-expanded="@(operationsActive ? "true" : "false")" title="العمليات">
                                <i class="fa-solid fa-arrows-spin"></i>
                                <span class="menu-title">العمليات</span>
                                <i class="fa-solid fa-angle-left ms-auto submenu-arrow"></i>
                            </a>
                            <ul class="collapse menu-dropdown @(operationsActive ? "show" : "")" id="operationsMenu">
                                @if (canCashClosuresView)
                                {
                                    <li><a class="dropdown-item" href="@Url.Action("MyClosures", "CashBoxClosures")"><i class="fa-solid fa-box-archive"></i><span>جرد الصندوق قائمة</span></a></li>
                                }
                                @if (canCashClosuresApprove)
                                {
                                    <li><a class="dropdown-item" href="@Url.Action("Pending", "CashBoxClosures")"><i class="fa-solid fa-hourglass-half"></i><span>جرد الصندوق موقعة</span></a></li>
                                }
                                @if (canCashClosuresCreate)
                                {
                                    <li><a class="dropdown-item" href="@Url.Action("Create", "CashBoxClosures")"><i class="fa-solid fa-plus"></i><span>جرد الصندوق</span></a></li>
                                }
                                @if (canCashClosuresReport || canCashClosuresView)
                                {
                                    <li><a class="dropdown-item" href="@Url.Action("Report", "CashBoxClosures")"><i class="fa-solid fa-file-lines"></i><span>تقرير إغلاقات الصندوق</span></a></li>
                                }
                                @if (canTransfersView)
                                {
                                    <li><a class="dropdown-item" href="@Url.Action("Index", "Transfers")"><i class="fa-solid fa-right-left"></i><span>الحوالات</span></a></li>
                                }
                            </ul>
                        </li>
                    }
                    @if (showAssets)
                    {
                        <li class="nav-item">
                            <a class="nav-link d-flex align-items-center @(assetsActive ? "active" : "collapsed")" data-bs-toggle="collapse" href="#assetsMenu" role="button" aria-expanded="@(assetsActive ? "true" : "false")" title="الأصول الثابتة">
                                <i class="fa-solid fa-cubes"></i>
                                <span class="menu-title">الأصول الثابتة</span>
                                <i class="fa-solid fa-angle-left ms-auto submenu-arrow"></i>
                            </a>
                            <ul class="collapse menu-dropdown @(assetsActive ? "show" : "")" id="assetsMenu">
                                @if (canAssets)
                                {
                                    <li><a class="dropdown-item" href="@Url.Action("Index", "Assets")"><i class="fa-solid fa-list"></i><span>قائمة الأصول الثابتة</span></a></li>
                                }
                                @if (canAssetTypes)
                                {
                                    <li><a class="dropdown-item" href="@Url.Action("Index", "AssetTypes")"><i class="fa-solid fa-tags"></i><span>أنواع الأصول</span></a></li>
                                }
                                @if (canAssetExpenses)
                                {
                                    <li><a class="dropdown-item" href="@Url.Action("Index", "AssetExpenses")"><i class="fa-solid fa-money-bill"></i><span>مصاريف الأصول الثابتة</span></a></li>
                                }
                            </ul>
                        </li>
                    }
                    @if (showVouchers)
                    {
                        <li class="nav-item">
                            <a class="nav-link d-flex align-items-center @(vouchersActive ? "active" : "collapsed")" data-bs-toggle="collapse" href="#vouchersMenu" role="button" aria-expanded="@(vouchersActive ? "true" : "false")" title="السندات">
                                <i class="fa-solid fa-file-invoice-dollar"></i>
                                <span class="menu-title">السندات</span>
                                <i class="fa-solid fa-angle-left ms-auto submenu-arrow"></i>
                            </a>
                            <ul class="collapse menu-dropdown @(vouchersActive ? "show" : "")" id="vouchersMenu">
                                @if (canDisbursementVouchers)
                                {
                                    <li><a class="dropdown-item" href="@Url.Action("Index", "DisbursementVouchers")"><i class="fa-solid fa-list"></i><span>سندات دفع</span></a></li>
                                }
                                @if (canDisbursementVouchersCreate)
                                {
                                    <li><a class="dropdown-item" href="@Url.Action("Create", "DisbursementVouchers")"><i class="fa-solid fa-plus"></i><span>إضافة سند دفع</span></a></li>
                                }
                                @if (canPaymentVouchers)
                                {
                                    <li><a class="dropdown-item" href="@Url.Action("Index", "PaymentVouchers")"><i class="fa-solid fa-list"></i><span>سندات المصاريف</span></a></li>
                                }
                                @if (canPaymentVouchersCreate)
                                {
                                    <li><a class="dropdown-item" href="@Url.Action("Create", "PaymentVouchers")"><i class="fa-solid fa-plus"></i><span>إضافة سند صرف</span></a></li>
                                    <li><a class="dropdown-item" href="@Url.Action("CreateFromAgent", "PaymentVouchers")"><i class="fa-solid fa-user-tie"></i><span>سند صرف من حساب وكيل</span></a></li>
                                }
                                @if (canWorkflowApprovalsView)
                                {
                                    <li><a class="dropdown-item" href="@Url.Action("Index", "WorkflowApprovals")"><i class="fa-solid fa-check-to-slot"></i><span>موافقات سندات الدفع</span></a></li>
                                }
                                @if (canWorkflowDefinitionsManage)
                                {
                                    <li><a class="dropdown-item" href="@Url.Action("Index", "WorkflowDefinitions")"><i class="fa-solid fa-diagram-project"></i><span>سير عمل السندات</span></a></li>
                                }
                            </ul>
                        </li>
                    }
                    @if (showAccountManagement)
                    {
                        <li class="nav-item">
                            <a class="nav-link d-flex align-items-center @(accountMgmtActive ? "active" : "collapsed")" data-bs-toggle="collapse" href="#accountMgmtMenu" role="button" aria-expanded="@(accountMgmtActive ? "true" : "false")" title="إدارة الحسابات">
                                <i class="fa-solid fa-briefcase"></i>
                                <span class="menu-title">إدارة الحسابات</span>
                                <i class="fa-solid fa-angle-left ms-auto submenu-arrow"></i>
                            </a>
                            <ul class="collapse menu-dropdown @(accountMgmtActive ? "show" : "")" id="accountMgmtMenu">
                                @if (canBusinessStatementBulk)
                                {
                                    <li><a class="dropdown-item" href="@Url.Action("BusinessStatementBulk", "AccountManagement")"><i class="fa-solid fa-file-circle-check"></i><span>حساب العميل كلي</span></a></li>
                                }
                                @if (canBusnissStatment)
                                {
                                    <li><a class="dropdown-item" href="@Url.Action("BusnissStatment", "AccountManagement")"><i class="fa-solid fa-file-invoice"></i><span>حساب العميل</span></a></li>
                                }
                                @if (canDriverPayment)
                                {
                                    <li><a class="dropdown-item" href="@Url.Action("DriverPayment", "AccountManagement")"><i class="fa-solid fa-money-check-dollar"></i><span>دفعات السائق</span></a></li>
                                }
                                @if (canDriverStatment)
                                {
                                    <li><a class="dropdown-item" href="@Url.Action("DriverStatment", "AccountManagement")"><i class="fa-solid fa-id-card"></i><span>حساب السائق</span></a></li>
                                }
                                @if (canUserPayment)
                                {
                                    <li><a class="dropdown-item" href="@Url.Action("UserPayment", "AccountManagement")"><i class="fa-solid fa-sack-dollar"></i><span>دفعات العميل</span></a></li>
                                }
                            </ul>
                        </li>
                    }
                    @if (showJournal)
                    {
                        <li class="nav-item">
                            <a class="nav-link d-flex align-items-center @(journalActive ? "active" : "collapsed")" data-bs-toggle="collapse" href="#journalMenu" role="button" aria-expanded="@(journalActive ? "true" : "false")" title="القيود المالية">
                                <i class="fa-solid fa-file-pen"></i>
                                <span class="menu-title">القيود المالية</span>
                                <i class="fa-solid fa-angle-left ms-auto submenu-arrow"></i>
                            </a>
                            <ul class="collapse menu-dropdown @(journalActive ? "show" : "")" id="journalMenu">
                                @if (canJournalView)
                                {
                                    <li><a class="dropdown-item" href="@Url.Action("Index", "JournalEntries")"><i class="fa-solid fa-list"></i><span>قائمة القيود</span></a></li>
                                    <li><a class="dropdown-item" href="@Url.Action("Draft", "JournalEntries")"><i class="fa-solid fa-pen-to-square"></i><span>المسودات</span></a></li>
                                }
                                @if (canJournalApprove)
                                {
                                    <li><a class="dropdown-item" href="@Url.Action("Posted", "JournalEntries")"><i class="fa-solid fa-circle-check"></i><span>المرحلة</span></a></li>
                                }
                                @if (canJournalCreate)
                                {
                                    <li><a class="dropdown-item" href="@Url.Action("Create", "JournalEntries")"><i class="fa-solid fa-plus"></i><span>إضافة قيد جديد</span></a></li>
                                    <li><a class="dropdown-item" href="@Url.Action("Index", "CompoundJournalDefinitions")"><i class="fa-solid fa-diagram-project"></i><span>القيود المركبة</span></a></li>
                                }
                            </ul>
                        </li>
                    }
                    @if (showHr)
                    {
                        <li class="nav-item">
                            <a class="nav-link d-flex align-items-center @(hrActive ? "active" : "collapsed")" data-bs-toggle="collapse" href="#hrMenu" role="button" aria-expanded="@(hrActive ? "true" : "false")" title="شؤون الموظفين">
                                <i class="fa-solid fa-users-gear"></i>
                                <span class="menu-title">شؤون الموظفين</span>
                                <i class="fa-solid fa-angle-left ms-auto submenu-arrow"></i>
                            </a>
                            <ul class="collapse menu-dropdown @(hrActive ? "show" : "")" id="hrMenu">
                                @if (canEmployeesView)
                                {
                                    <li><a class="dropdown-item" href="@Url.Action("Index", "Employees")"><i class="fa-solid fa-user"></i><span>إدارة الموظفين</span></a></li>
                                }
                                @if (canPayrollView)
                                {
                                    <li><a class="dropdown-item" href="@Url.Action("Index", "Payrolls")"><i class="fa-solid fa-money-check-alt"></i><span>إدارة الرواتب</span></a></li>
                                }
                                @if (canSalaryPaymentsView)
                                {
                                    <li><a class="dropdown-item" href="@Url.Action("Index", "SalaryPayments")"><i class="fa-solid fa-file-invoice-dollar"></i><span>سندات صرف الرواتب</span></a></li>
                                }
                                @if (canEmployeeAdvancesView)
                                {
                                    <li><a class="dropdown-item" href="@Url.Action("Index", "EmployeeAdvances")"><i class="fa-solid fa-hand-holding-dollar"></i><span>سندات صرف السلف</span></a></li>
                                }
                            </ul>
                        </li>
                    }
                    @if (showReports)
                    {
                        <li class="nav-item">
                            <a class="nav-link d-flex align-items-center @(reportsActive ? "active" : "collapsed")" data-bs-toggle="collapse" href="#reportsMenu" role="button" aria-expanded="@(reportsActive ? "true" : "false")" title="التقارير">
                                <i class="fa-solid fa-chart-column"></i>
                                <span class="menu-title">التقارير</span>
                                <i class="fa-solid fa-angle-left ms-auto submenu-arrow"></i>
                            </a>
                            <div class="collapse menu-dropdown @(reportsActive ? "show" : "")" id="reportsMenu">
                                <div class="px-3 pb-2">
                                    <input type="text" class="form-control form-control-sm" id="reportSearch" placeholder="ابحث عن تقرير...">
                                </div>
                                <ul class="list-unstyled mb-0" id="reportsList">
