    <div class="modal fade" id="accountModal" tabindex="-1">
        <div class="modal-dialog modal-lg">
            <div class="modal-content"></div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/sweetalert.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <div id="loadingOverlay" class="loading-overlay" style="display: none;">
        <div class="loading-spinner">
            <i class="fas fa-spinner fa-spin fa-3x"></i>
            <p class="mt-3">جاري التحميل...</p>
        </div>
    </div>

    @await RenderSectionAsync("Scripts", required: false)

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
            tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl);
            });

            var sidebar = document.getElementById('iconSidebar');
            var toggleButton = document.getElementById('sidebarToggle');
            var mobileToggle = document.getElementById('mobileMenuToggle');

            toggleButton?.addEventListener('click', function () {
                sidebar.classList.toggle('collapsed');
                var icon = this.querySelector('i');
                if (icon) {
                    icon.classList.toggle('fa-angles-right');
                    icon.classList.toggle('fa-angles-left');
                }
            });

            mobileToggle?.addEventListener('click', function () {
                var isOpen = sidebar.classList.toggle('open');
                document.body.classList.toggle('sidebar-open', isOpen);
            });

            document.querySelectorAll('#sidebarNav .nav-link').forEach(function (link) {
                link.addEventListener('click', function () {
                    if (window.innerWidth < 992 && this.getAttribute('data-bs-toggle') !== 'collapse') {
                        sidebar.classList.remove('open');
                        document.body.classList.remove('sidebar-open');
                    }
                });
            });

            document.addEventListener('click', function (event) {
                if (window.innerWidth >= 992) {
                    return;
                }
                var clickedInsideSidebar = sidebar.contains(event.target);
                var clickedToggle = mobileToggle && mobileToggle.contains(event.target);
                if (!clickedInsideSidebar && !clickedToggle && sidebar.classList.contains('open')) {
                    sidebar.classList.remove('open');
                    document.body.classList.remove('sidebar-open');
                }
            });

            window.addEventListener('resize', function () {
                if (window.innerWidth >= 992) {
                    sidebar.classList.remove('open');
                    document.body.classList.remove('sidebar-open');
                }
            });

            var sidebarSearchInput = document.getElementById('sidebarSearch');
            var sidebarSearchClear = document.getElementById('sidebarSearchClear');
            if (sidebarSearchInput) {
                var navItems = Array.from(document.querySelectorAll('#sidebarNav > li.nav-item'));
                var collapseInitialState = new Map();
                var isSearchFiltering = false;

                document.querySelectorAll('#sidebarNav .collapse').forEach(function (collapseEl) {
                    collapseInitialState.set(collapseEl, collapseEl.classList.contains('show'));
                    collapseEl.addEventListener('shown.bs.collapse', function () {
                        if (!isSearchFiltering) {
                            collapseInitialState.set(collapseEl, true);
                        }
                    });
                    collapseEl.addEventListener('hidden.bs.collapse', function () {
                        if (!isSearchFiltering) {
                            collapseInitialState.set(collapseEl, false);
                        }
                    });
                });

                var toggleClearButton = function () {
                    if (!sidebarSearchClear) {
                        return;
                    }
                    if (sidebarSearchInput.value.trim().length > 0) {
                        sidebarSearchClear.classList.add('show');
                    } else {
                        sidebarSearchClear.classList.remove('show');
                    }
                };

                var resetNavItem = function (item) {
                    item.classList.remove('d-none');
                    var navLink = item.querySelector('.nav-link');
                    if (navLink) {
                        navLink.classList.remove('search-highlight');
                    }

                    item.querySelectorAll('.menu-dropdown .dropdown-item').forEach(function (dropdownItem) {
                        dropdownItem.classList.remove('search-highlight');
                        var parentLi = dropdownItem.closest('li');
                        if (parentLi) {
                            parentLi.classList.remove('d-none');
                        }
                    });

                    item.querySelectorAll('.menu-dropdown li').forEach(function (li) {
                        li.classList.remove('d-none');
                    });

                    var collapseEl = item.querySelector('.collapse');
                    if (collapseEl) {
                        var collapseInstance = bootstrap.Collapse.getOrCreateInstance(collapseEl, { toggle: false });
                        if (collapseInitialState.get(collapseEl)) {
                            collapseInstance.show();
                        } else {
                            collapseInstance.hide();
                        }
                    }
                };

                var filterSidebarMenu = function () {
                    var query = sidebarSearchInput.value.trim().toLowerCase();
                    if (!query) {
                        isSearchFiltering = true;
                        navItems.forEach(resetNavItem);
                        isSearchFiltering = false;
                        return;
                    }

                    isSearchFiltering = true;
                    navItems.forEach(function (item) {
                        var navLink = item.querySelector('.nav-link');
                        var titleElement = navLink ? navLink.querySelector('.menu-title') : null;
                        var navTitle = titleElement ? titleElement.textContent.trim().toLowerCase() : (navLink ? navLink.textContent.trim().toLowerCase() : '');
                        var navMatch = navTitle.indexOf(query) > -1;
                        var hasSubMatch = false;
                        var dropdownItems = item.querySelectorAll('.menu-dropdown .dropdown-item');
                        var hasDropdown = dropdownItems.length > 0;

                        dropdownItems.forEach(function (dropdownItem) {
                            var text = dropdownItem.textContent.trim().toLowerCase();
                            var isMatch = text.indexOf(query) > -1;
                            var parentLi = dropdownItem.closest('li');

                            dropdownItem.classList.toggle('search-highlight', isMatch);

                            if (navMatch) {
                                if (parentLi) {
                                    parentLi.classList.remove('d-none');
                                }
                            } else if (parentLi) {
                                parentLi.classList.toggle('d-none', !isMatch);
                            }

                            if (isMatch) {
                                hasSubMatch = true;
                            }
                        });

                        if (query) {
                            item.querySelectorAll('.menu-dropdown li').forEach(function (li) {
                                if (!li.querySelector('.dropdown-item')) {
                                    li.classList.toggle('d-none', !(navMatch || hasSubMatch));
                                }
                            });
                        }

                        var shouldShow = navMatch || (hasDropdown && hasSubMatch);
                        item.classList.toggle('d-none', !shouldShow);

                        if (navLink) {
                            navLink.classList.toggle('search-highlight', shouldShow && query.length > 0);
                        }

                        var collapseEl = item.querySelector('.collapse');
                        if (collapseEl) {
                            var collapseInstance = bootstrap.Collapse.getOrCreateInstance(collapseEl, { toggle: false });
                            if (shouldShow) {
                                collapseInstance.show();
                            } else {
                                collapseInstance.hide();
                            }
                        }
                    });
                    isSearchFiltering = false;
                };

                sidebarSearchInput.addEventListener('input', function () {
                    filterSidebarMenu();
                    toggleClearButton();
                });

                sidebarSearchClear?.addEventListener('click', function () {
                    sidebarSearchInput.value = '';
                    filterSidebarMenu();
                    toggleClearButton();
                    sidebarSearchInput.focus();
                });

                filterSidebarMenu();
                toggleClearButton();
            }

            $('#reportSearch').on('input', function () {
                var value = $(this).val().toLowerCase();
                $('#reportsList .report-item').each(function () {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1);
                });
            });

            setTimeout(function () {
                document.querySelectorAll('.alert').forEach(function (alert) {
                    var fade = new bootstrap.Alert(alert);
                    fade.close();
                });
            }, 5000);
        });

        function showLoading() {
            $('#loadingOverlay').show();
        }

        function hideLoading() {
            $('#loadingOverlay').hide();
        }

        $.ajaxSetup({
            beforeSend: function (xhr, settings) {
                if (settings.type === 'POST' || settings.type === 'PUT' || settings.type === 'DELETE') {
                    xhr.setRequestHeader("RequestVerificationToken", $('input[name="__RequestVerificationToken"]').val());
                }
            }
        });
    </script>

    <ejs-scripts></ejs-scripts>
</body>
</html>
