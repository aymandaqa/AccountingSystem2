@model IReadOnlyList<AccountingSystem.ViewModels.UserAccountBalanceViewModel>

@if (Model == null || Model.Count == 0)
{
    <li class="nav-item dropdown user-balance-dropdown">
        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false" title="أرصدة حساباتي">
            <i class="fa-solid fa-wallet"></i>
        </a>
        <div class="dropdown-menu dropdown-menu-end p-3 user-balance-menu text-center text-muted">
            لا توجد حسابات معرفة.
        </div>
    </li>
}
else
{
    <li class="nav-item dropdown user-balance-dropdown">
        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false" title="أرصدة حساباتي">
            <i class="fa-solid fa-wallet"></i>
        </a>
        <div class="dropdown-menu dropdown-menu-end p-3 user-balance-menu">
            <div class="user-balance-header d-flex align-items-center justify-content-between">
                <div>
                    <h6 class="dropdown-header px-0 mb-1">أرصدة الصناديق</h6>
                    <p class="text-muted small mb-0">عرض سريع للحسابات المرتبطة بك</p>
                </div>
                <span class="balance-count badge bg-primary-subtle text-primary">@Model.Count</span>
            </div>
            <div class="user-balance-grid mt-3">
                @foreach (var account in Model)
                {
                    <div class="user-balance-card">
                        <div class="user-balance-card-body">
                            <div class="d-flex align-items-start justify-content-between gap-3">
                                <div class="flex-grow-1">
                                    <div class="user-balance-name" title="@($"{account.AccountCode} - {account.AccountName}")">
                                        <span class="account-code">@account.AccountCode</span>
                                        <span class="account-name">@account.AccountName</span>
                                    </div>
                                    @if (account.IsAgentAccount)
                                    {
                                        <span class="badge bg-warning text-dark mt-2">حساب الوكيل</span>
                                    }
                                </div>
                                <div class="text-end">
                                    <div class="user-balance-amount">@account.CurrentBalance</div>
                                    <div class="user-balance-currency">@account.CurrencyCode</div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </li>
}
