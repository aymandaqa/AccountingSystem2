@using AccountingSystem.ViewComponents
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Identity
@using Microsoft.EntityFrameworkCore
@inject IAuthorizationService AuthorizationService
@inject UserManager<User> UserManager
@inject AccountingSystem.Data.ApplicationDbContext DbContext
<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - نظام المحاسبة</title>

    <!-- Bootstrap RTL -->
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <!-- Site styles -->
    <link rel="stylesheet" href="~/AccountingSystem.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/accounting.css" asp-append-version="true" />
    <link href="https://cdn.syncfusion.com/ej2/bootstrap5.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.rtl.min.css" rel="stylesheet">

    <script src="https://cdn.syncfusion.com/ej2/dist/ej2.min.js"></script>

    @await RenderSectionAsync("Styles", required: false)
    <Style>
        .container, .container-fluid, .container-lg, .container-md, .container-sm, .container-xl, .container-xxl {
            --bs-gutter-x: 0.5rem;
        }

        #sidebarMenu .nav-link {
            cursor: grab;
        }

            #sidebarMenu .nav-link:active {
                cursor: grabbing;
            }

        #sidebarMenu .sortable-ghost {
            opacity: 0.4;
        }

        #sidebarMenu .sortable-chosen {
            background-color: rgba(255, 255, 255, 0.05);
        }

        .nav-link {
            color: #e2e6eb;
        }
    </Style>
</head>
<body>
    @{
        var canBusinessStatementBulk = (await AuthorizationService.AuthorizeAsync(User, "accountmanagement.businessstatementbulk")).Succeeded;
        var canBusnissStatment = (await AuthorizationService.AuthorizeAsync(User, "accountmanagement.busnissstatment")).Succeeded;
        var canDriverPayment = (await AuthorizationService.AuthorizeAsync(User, "accountmanagement.driverpayment")).Succeeded;
        var canDriverStatment = (await AuthorizationService.AuthorizeAsync(User, "accountmanagement.driverstatment")).Succeeded;
        var canUserPayment = (await AuthorizationService.AuthorizeAsync(User, "accountmanagement.userpayment")).Succeeded;
        var canCurrencies = (await AuthorizationService.AuthorizeAsync(User, "currencies.view")).Succeeded;
        var canSuppliers = (await AuthorizationService.AuthorizeAsync(User, "suppliers.view")).Succeeded;
        var canAgents = (await AuthorizationService.AuthorizeAsync(User, "agents.view")).Succeeded;
        var canSystemSettings = (await AuthorizationService.AuthorizeAsync(User, "systemsettings.view")).Succeeded;
        var canPermissionGroups = (await AuthorizationService.AuthorizeAsync(User, "permissiongroups.view")).Succeeded;
        var canReceiptVouchers = (await AuthorizationService.AuthorizeAsync(User, "receiptvouchers.view")).Succeeded;
        var canDisbursementVouchers = (await AuthorizationService.AuthorizeAsync(User, "disbursementvouchers.view")).Succeeded;
        var canPaymentVouchers = (await AuthorizationService.AuthorizeAsync(User, "paymentvouchers.view")).Succeeded;
        var canWorkflowApprovalsView = (await AuthorizationService.AuthorizeAsync(User, "workflowapprovals.view")).Succeeded;
        var canWorkflowDefinitionsManage = (await AuthorizationService.AuthorizeAsync(User, "workflowdefinitions.manage")).Succeeded;
        var canReceiptVouchersCreate = (await AuthorizationService.AuthorizeAsync(User, "receiptvouchers.create")).Succeeded;
        var canDisbursementVouchersCreate = (await AuthorizationService.AuthorizeAsync(User, "disbursementvouchers.create")).Succeeded;
        var canPaymentVouchersCreate = (await AuthorizationService.AuthorizeAsync(User, "paymentvouchers.create")).Succeeded;
        var canDynamicScreensManage = (await AuthorizationService.AuthorizeAsync(User, "dynamicscreens.manage")).Succeeded;
        var showVouchers = canReceiptVouchers || canDisbursementVouchers || canPaymentVouchers || canWorkflowApprovalsView || canWorkflowDefinitionsManage || canReceiptVouchersCreate || canDisbursementVouchersCreate || canPaymentVouchersCreate;
        var showAccountManagement = canBusinessStatementBulk || canBusnissStatment || canDriverPayment || canDriverStatment || canUserPayment;
        var canAssets = (await AuthorizationService.AuthorizeAsync(User, "assets.view")).Succeeded;
        var canAssetTypes = (await AuthorizationService.AuthorizeAsync(User, "assettypes.view")).Succeeded;
        var canAssetExpenses = (await AuthorizationService.AuthorizeAsync(User, "assetexpenses.view")).Succeeded;
        var showAssets = canAssets || canAssetExpenses || canAssetTypes;

        var canDashboardView = (await AuthorizationService.AuthorizeAsync(User, "dashboard.view")).Succeeded;

        var canAccountsView = (await AuthorizationService.AuthorizeAsync(User, "accounts.view")).Succeeded;
        var canAccountsCreate = (await AuthorizationService.AuthorizeAsync(User, "accounts.create")).Succeeded;
        var canAccountsEdit = (await AuthorizationService.AuthorizeAsync(User, "accounts.edit")).Succeeded;
        var showAccounts = canAccountsView || canAccountsCreate || canAccountsEdit;

        var canCashClosuresView = (await AuthorizationService.AuthorizeAsync(User, "cashclosures.view")).Succeeded;
        var canCashClosuresCreate = (await AuthorizationService.AuthorizeAsync(User, "cashclosures.create")).Succeeded;
        var canCashClosuresApprove = (await AuthorizationService.AuthorizeAsync(User, "cashclosures.approve")).Succeeded;
        var canCashClosuresReport = (await AuthorizationService.AuthorizeAsync(User, "cashclosures.report")).Succeeded;
        var canTransfersView = (await AuthorizationService.AuthorizeAsync(User, "transfers.view")).Succeeded;
        var canTransfersManage = (await AuthorizationService.AuthorizeAsync(User, "transfers.manage")).Succeeded;
        var showOperations = canCashClosuresView || canCashClosuresCreate || canCashClosuresApprove || canCashClosuresReport || canTransfersView || canTransfersManage;

        var canJournalView = (await AuthorizationService.AuthorizeAsync(User, "journal.view")).Succeeded;
        var canJournalCreate = (await AuthorizationService.AuthorizeAsync(User, "journal.create")).Succeeded;
        var canJournalApprove = (await AuthorizationService.AuthorizeAsync(User, "journal.approve")).Succeeded;
        var showJournal = canJournalView || canJournalCreate || canJournalApprove;

        var canReportsView = (await AuthorizationService.AuthorizeAsync(User, "reports.view")).Succeeded;
        var canReportsPending = (await AuthorizationService.AuthorizeAsync(User, "reports.pending")).Succeeded;
        var canReportsDynamic = (await AuthorizationService.AuthorizeAsync(User, "reports.dynamic")).Succeeded;
        var canQuickAccountStatementShortcut = (await AuthorizationService.AuthorizeAsync(User, "reports.quickaccountstatement")).Succeeded;
        var showReports = canReportsView || canReportsPending || canReportsDynamic;

        var hasCashBox = false;
        if (User.Identity?.IsAuthenticated ?? false)
        {
            var currentUser = await UserManager.GetUserAsync(User);
            if (currentUser != null)
            {
                hasCashBox = currentUser.PaymentAccountId.HasValue;
                if (!hasCashBox)
                {
                    hasCashBox = await DbContext.UserPaymentAccounts
                    .AsNoTracking()
                    .AnyAsync(upa => upa.UserId == currentUser.Id);
                }
            }
        }

        var isSuperAdmin = User.IsInRole("SuperAdmin") || User.IsInRole("Admin");
        var showQuickAccountStatement = (isSuperAdmin && canReportsView) || canQuickAccountStatementShortcut;

        var canBranches = (await AuthorizationService.AuthorizeAsync(User, "branches.view")).Succeeded;
        var canCostCenters = (await AuthorizationService.AuthorizeAsync(User, "costcenters.view")).Succeeded;
        var canUsers = (await AuthorizationService.AuthorizeAsync(User, "users.view")).Succeeded;
        var showSettings = canBranches || canCostCenters || canCurrencies || canPermissionGroups || canUsers;

        var canEmployeesView = (await AuthorizationService.AuthorizeAsync(User, "employees.view")).Succeeded;
        var canPayrollView = (await AuthorizationService.AuthorizeAsync(User, "payroll.view")).Succeeded;
        var canPayrollProcess = (await AuthorizationService.AuthorizeAsync(User, "payroll.process")).Succeeded;
        var canSalaryPaymentsView = (await AuthorizationService.AuthorizeAsync(User, "salarypayments.view")).Succeeded;
        var canEmployeeAdvancesView = (await AuthorizationService.AuthorizeAsync(User, "employeeadvances.view")).Succeeded;
        var canEmployeesEdit = (await AuthorizationService.AuthorizeAsync(User, "employees.edit")).Succeeded;
        var showHr = canEmployeesView || canPayrollView || canSalaryPaymentsView || canEmployeeAdvancesView || canPayrollProcess || canEmployeesEdit;

        var currentController = ViewContext.RouteData.Values["controller"]?.ToString()?.ToLower();
        var currentAction = ViewContext.RouteData.Values["action"]?.ToString()?.ToLower();
        var accountsActive = currentController == "accounts";
        var operationsActive = currentController == "cashboxclosures" || currentController == "expenses" || currentController == "transfers";
        var vouchersActive = currentController == "receiptvouchers" || currentController == "disbursementvouchers" || currentController == "paymentvouchers" || currentController == "workflowapprovals" || currentController == "workflowdefinitions";
        var accountMgmtActive = currentController == "accountmanagement";
        var journalActive = currentController == "journalentries";
        var reportsActive = currentController == "reports";
        var settingsActive = currentController == "branches" || currentController == "costcenters" || currentController == "currencies" || currentController == "users" || currentController == "permissiongroups";
        var hrActive = currentController == "employees" || currentController == "payrolls" || currentController == "deductiontypes" || currentController == "employeedeductions";
        var assetsActive = currentController == "assets" || currentController == "assetexpenses" || currentController == "assettypes";
    }
    <div id="wrapper" class="d-flex">
        <nav id="sidebar" class="d-flex flex-column">
            <div class="sidebar-header p-3 mb-3 border-bottom">
                <a class="navbar-brand d-flex align-items-center text-white" href="@Url.Action("Index", "Dashboard")">
                    <i class="fas fa-calculator me-2"></i> RoadFinity
                </a>
            </div>
            <div class="sidebar-search px-3 mb-3">
                <div class="input-group input-group-sm">
                    <span class="input-group-text"><i class="fas fa-search"></i></span>
                    <input type="search" id="menuSearch" class="form-control" placeholder="ابحث في القائمة..." aria-label="بحث في القائمة">
                </div>
            </div>
            <div class="sidebar-menu flex-grow-1 overflow-auto px-2">
                <ul class="nav flex-column" id="sidebarMenu">
                    <li class="nav-item" data-menu-key="dashboard">
                        <a class="nav-link @(currentController == "dashboard" && currentAction == "index" ? "active" : "")"
                           asp-controller="Dashboard"
                           asp-action="Index"
                           asp-require-permission="dashboard.view">
                            <i class="fas fa-tachometer-alt"></i> لوحة التحكم
                        </a>
                    </li>
                    <li class="nav-item" data-menu-key="company-performance">
                        <a class="nav-link @(currentController == "home" && currentAction == "index" ? "active" : "")"
                           asp-controller="Home"
                           asp-action="Index"
                           asp-require-permission="dashboard.companyperformance">
                            <i class="fas fa-tachometer-alt"></i> عرض اداء الشركة
                        </a>
                    </li>
                    <li class="nav-item" data-menu-key="accounts">
                        <a class="nav-link nav-link-toggle d-flex align-items-center justify-content-between" data-bs-toggle="collapse" href="#accountsMenu" data-bs-target="#accountsMenu" role="button" aria-expanded="@(accountsActive ? "true" : "false")" aria-controls="accountsMenu">
                            <span class="nav-link-label"><i class="fas fa-list-alt"></i> الحسابات</span>
                            <i class="fas fa-angle-down toggle-icon"></i>
                        </a>
                        <ul class="submenu collapse nav flex-column @(accountsActive ? "show" : "")" id="accountsMenu">
                            <li class="nav-item">
                                <a class="nav-link"
                                   asp-controller="Accounts"
                                   asp-action="Tree"
                                   asp-require-permission="accounts.view">
                                    <i class="fas fa-sitemap"></i> شجرة الحسابات
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link"
                                   asp-controller="Accounts"
                                   asp-action="ManageTree"
                                   asp-require-permission="accounts.edit">
                                    <i class="fas fa-diagram-project"></i> إدارة شجرة الحسابات
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link"
                                   asp-controller="Accounts"
                                   asp-action="Index"
                                   asp-require-permission="accounts.view">
                                    <i class="fas fa-list"></i> قائمة الحسابات
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link"
                                   asp-controller="Accounts"
                                   asp-action="Create"
                                   asp-require-permission="accounts.create">
                                    <i class="fas fa-plus"></i> إضافة حساب جديد
                                </a>
                            </li>
                        </ul>
                    </li>
                    @if (canAgents)
                    {
                        <li class="nav-item" data-menu-key="agents">
                            <a class="nav-link @(currentController == "agents" ? "active" : "")"
                               asp-controller="Agents"
                               asp-action="Index"
                               asp-require-permission="agents.view">
                                <i class="fas fa-user-tie"></i> الوكلاء
                            </a>
                        </li>
                    }
                    @if (canSuppliers)
                    {
                        <li class="nav-item" data-menu-key="suppliers">
                            <a class="nav-link @(currentController == "suppliers" ? "active" : "")"
                               asp-controller="Suppliers"
                               asp-action="Index"
                               asp-require-permission="suppliers.view">
                                <i class="fas fa-truck"></i> الموردين
                            </a>
                        </li>
                    }
                    @if (canSystemSettings)
                    {
                        <li class="nav-item" data-menu-key="system-settings">
                            <a class="nav-link @(currentController == "systemsettings" ? "active" : "")"
                               asp-controller="SystemSettings"
                               asp-action="Index"
                               asp-require-permission="systemsettings.view">
                                <i class="fas fa-cog"></i> إعدادات النظام
                            </a>
                        </li>
                    }
                    @if (showOperations)
                    {
                        <li class="nav-item" data-menu-key="operations">
                            <a class="nav-link nav-link-toggle d-flex align-items-center justify-content-between" data-bs-toggle="collapse" href="#operationsMenu" data-bs-target="#operationsMenu" role="button" aria-expanded="@(operationsActive ? "true" : "false")" aria-controls="operationsMenu">
                                <span class="nav-link-label"><i class="fas fa-list-alt"></i> العمليات</span>
                                <i class="fas fa-angle-down toggle-icon"></i>
                            </a>
                            <ul class="submenu collapse nav flex-column @(operationsActive ? "show" : "")" id="operationsMenu">
                                @if (canCashClosuresCreate)
                                {
                                    <li class="nav-item">
                                        <a class="nav-link"
                                           asp-controller="CashBoxClosures"
                                           asp-action="Create"
                                           asp-require-permission="cashclosures.create">
                                            <i class="fas fa-sitemap"></i> جرد الصندوق
                                        </a>
                                    </li>
                                }
                                @if (canTransfersView)
                                {
                                    <li class="nav-item">
                                        <a class="nav-link"
                                           asp-controller="Transfers"
                                           asp-action="Index"
                                           asp-require-permission="transfers.view">
                                            <i class="fas fa-exchange"></i> حوالاتي
                                        </a>
                                    </li>
                                }

                                @if (canCashClosuresView)
                                {
                                    <li class="nav-item">
                                        <a class="nav-link"
                                           asp-controller="CashBoxClosures"
                                           asp-action="MyClosures"
                                           asp-require-permission="cashclosures.view">
                                            <i class="fas fa-sitemap"></i> تقرير جرد صندوقي
                                        </a>
                                    </li>

                                }
                                <li class="nav-item">
                                    <a class="nav-link"
                                       asp-controller="Reports"
                                       asp-action="UserDailyJournalEntries"
                                       asp-require-permission="cashclosures.view">
                                        <i class="fas fa-sitemap"></i> قيود الصندوق اليومية
                                    </a>
                                </li>


                                @if (canCashClosuresApprove)
                                {
                                    <li class="nav-item">
                                        <a class="nav-link"
                                           asp-controller="CashBoxClosures"
                                           asp-action="Pending"
                                           asp-require-permission="cashclosures.approve">
                                            <i class="fas fa-sitemap"></i> طلبات إغلاق الصندوق
                                        </a>
                                    </li>
                                }

                                @if (canCashClosuresReport || canCashClosuresView)
                                {
                                    <li class="nav-item">
                                        <a class="nav-link"
                                           asp-controller="CashBoxClosures"
                                           asp-action="Report"
                                           asp-require-permission="@(canCashClosuresReport ? "cashclosures.report" : "cashclosures.view")">
                                            <i class="fas fa-file-alt"></i> تقرير إغلاقات الصندوق
                                        </a>
                                    </li>
                                }

                                @if (canTransfersManage)
                                {
                                    <li class="nav-item">
                                        <a class="nav-link"
                                           asp-controller="Transfers"
                                           asp-action="Manage"
                                           asp-require-permission="transfers.manage">
                                            <i class="fas fa-project-diagram"></i> إدارة الحوالات
                                        </a>
                                    </li>
                                }
                            </ul>
                        </li>
                    }
                    @if (showAssets)
                    {
                        <li class="nav-item" data-menu-key="assets">
                            <a class="nav-link nav-link-toggle d-flex align-items-center justify-content-between" data-bs-toggle="collapse" href="#assetsMenu" data-bs-target="#assetsMenu" role="button" aria-expanded="@(assetsActive ? "true" : "false")" aria-controls="assetsMenu">
                                <span class="nav-link-label"><i class="fas fa-boxes"></i> الاصول الثابته</span>
                                <i class="fas fa-angle-down toggle-icon"></i>
                            </a>
                            <ul class="submenu collapse nav flex-column @(assetsActive ? "show" : "")" id="assetsMenu">
                                @if (canAssets)
                                {
                                    <li class="nav-item">
                                        <a class="nav-link"
                                           asp-controller="Assets"
                                           asp-action="Index"
                                           asp-require-permission="assets.view">
                                            <i class="fas fa-list"></i> قائمة الأصول الثابته
                                        </a>
                                    </li>
                                }
                                @if (canAssetTypes)
                                {
                                    <li class="nav-item">
                                        <a class="nav-link"
                                           asp-controller="AssetTypes"
                                           asp-action="Index"
                                           asp-require-permission="assettypes.view">
                                            <i class="fas fa-tags"></i> أنواع الأصول
                                        </a>
                                    </li>
                                }
                                @if (canAssetExpenses)
                                {
                                    <li class="nav-item">
                                        <a class="nav-link"
                                           asp-controller="AssetExpenses"
                                           asp-action="Index"
                                           asp-require-permission="assetexpenses.view">
                                            <i class="fas fa-money-bill"></i> مصاريف الأصول الثابته
                                        </a>
                                    </li>
                                }
                            </ul>
                        </li>
                    }
                    @if (showVouchers)
                    {
                        <li class="nav-item" data-menu-key="vouchers">
                            <a class="nav-link nav-link-toggle d-flex align-items-center justify-content-between" data-bs-toggle="collapse" href="#vouchersMenu" data-bs-target="#vouchersMenu" role="button" aria-expanded="@(vouchersActive ? "true" : "false")" aria-controls="vouchersMenu">
                                <span class="nav-link-label"><i class="fas fa-file-invoice-dollar"></i> السندات</span>
                                <i class="fas fa-angle-down toggle-icon"></i>
                            </a>
                            <ul class="submenu collapse nav flex-column @(vouchersActive ? "show" : "")" id="vouchersMenu">
                                @if (canReceiptVouchers)
                                {
                                    <li class="nav-item">
                                        <a class="nav-link"
                                           asp-controller="ReceiptVouchers"
                                           asp-action="Index"
                                           asp-require-permission="receiptvouchers.view">
                                            <i class="fas fa-list"></i> سندات القبض
                                        </a>
                                    </li>
                                }
                                @if (canReceiptVouchersCreate)
                                {
                                    <li class="nav-item">
                                        <a class="nav-link"
                                           asp-controller="ReceiptVouchers"
                                           asp-action="Create"
                                           asp-require-permission="receiptvouchers.create">
                                            <i class="fas fa-plus"></i> إضافة سند قبض
                                        </a>
                                    </li>
                                }
                                @if (canDisbursementVouchers)
                                {
                                    <li class="nav-item">
                                        <a class="nav-link"
                                           asp-controller="DisbursementVouchers"
                                           asp-action="Index"
                                           asp-require-permission="disbursementvouchers.view">
                                            <i class="fas fa-list"></i> سندات دفع
                                        </a>
                                    </li>
                                }
                                @if (canDisbursementVouchersCreate)
                                {
                                    <li class="nav-item">
                                        <a class="nav-link"
                                           asp-controller="DisbursementVouchers"
                                           asp-action="Create"
                                           asp-require-permission="disbursementvouchers.create">
                                            <i class="fas fa-plus"></i> إضافة سند دفع
                                        </a>
                                    </li>
                                }
                                @if (canPaymentVouchers)
                                {
                                    <li class="nav-item">
                                        <a class="nav-link"
                                           asp-controller="PaymentVouchers"
                                           asp-action="Index"
                                           asp-require-permission="paymentvouchers.view">
                                            <i class="fas fa-list"></i> سندات المصاريف
                                        </a>
                                    </li>
                                }
                                @if (canPaymentVouchersCreate)
                                {
                                    <li class="nav-item">
                                        <a class="nav-link"
                                           asp-controller="PaymentVouchers"
                                           asp-action="Create"
                                           asp-require-permission="paymentvouchers.create">
                                            <i class="fas fa-plus"></i> إضافة سند صرف
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link"
                                           asp-controller="PaymentVouchers"
                                           asp-action="CreateFromAgent"
                                           asp-require-permission="paymentvouchers.create">
                                            <i class="fas fa-user-tie"></i> سند دفع وكيل


                                        </a>
                                    </li>
                                }
                                @if (canWorkflowApprovalsView)
                                {
                                    <li class="nav-item">
                                        <a class="nav-link"
                                           asp-controller="WorkflowApprovals"
                                           asp-action="Index"
                                           asp-require-permission="workflowapprovals.view">
                                            <i class="fas fa-check-circle"></i> موافقات سندات الدفع
                                        </a>
                                    </li>
                                }
                                @if (canWorkflowDefinitionsManage)
                                {
                                    <li class="nav-item">
                                        <a class="nav-link"
                                           asp-controller="WorkflowDefinitions"
                                           asp-action="Index"
                                           asp-require-permission="workflowdefinitions.manage">
                                            <i class="fas fa-project-diagram"></i> سير عمل السندات
                                        </a>
                                    </li>
                                }
                                @if (canDynamicScreensManage)
                                {
                                    <li class="nav-item">
                                        <a class="nav-link"
                                           asp-controller="DynamicScreens"
                                           asp-action="Index"
                                           asp-require-permission="dynamicscreens.manage">
                                            <i class="fas fa-layer-group"></i> إدارة الشاشات الديناميكية
                                        </a>
                                    </li>
                                }
                            </ul>
                        </li>
                    }
                    @await Component.InvokeAsync("DynamicScreensMenu")
                    @if (showAccountManagement)
                    {
                        <li class="nav-item" data-menu-key="account-management">
                            <a class="nav-link nav-link-toggle d-flex align-items-center justify-content-between" data-bs-toggle="collapse" href="#accountMgmtMenu" data-bs-target="#accountMgmtMenu" role="button" aria-expanded="@(accountMgmtActive ? "true" : "false")" aria-controls="accountMgmtMenu">
                                <span class="nav-link-label"><i class="fas fa-briefcase"></i> إدارة الحسابات</span>
                                <i class="fas fa-angle-down toggle-icon"></i>
