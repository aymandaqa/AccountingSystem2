                        @await RenderSectionAsync("Scripts", required: false)

                        <script>
                            // Global functions
                            function showLoading() {
                                $('#loadingOverlay').show();
                            }

                            function hideLoading() {
                                $('#loadingOverlay').hide();
                            }

                            // Auto-hide alerts after 5 seconds
                            setTimeout(function() {
                                $('.alert').fadeOut();
                            }, 5000);

                            // AJAX setup for CSRF token
                            $.ajaxSetup({
                                beforeSend: function(xhr, settings) {
                                    if (settings.type === 'POST' || settings.type === 'PUT' || settings.type === 'DELETE') {
                                        xhr.setRequestHeader("RequestVerificationToken",
                                            $('input[name="__RequestVerificationToken"]').val());
                                    }
                                }
                            });

                            // Filter account options based on selected currency in voucher forms
                            document.addEventListener('DOMContentLoaded', function () {
                                var currencySelect = document.querySelector('select[name="CurrencyId"]');
                                var accountSelect = document.querySelector('select[name="AccountId"]');
                                if (currencySelect && accountSelect) {
                                    function filterAccounts() {
                                        var currency = currencySelect.value;
                                        Array.from(accountSelect.options).forEach(function (opt) {
                                            opt.hidden = opt.getAttribute('data-currency') !== currency;
                                        });
                                        var firstVisible = Array.from(accountSelect.options).find(function (opt) { return !opt.hidden; });
                                        if (firstVisible) accountSelect.value = firstVisible.value;
                                    }
                                    filterAccounts();
                                    currencySelect.addEventListener('change', filterAccounts);
                                }

                                var menuSearchInput = document.getElementById('menuSearch');
                                if (!menuSearchInput) {
                                    return;
                                }

                                var topLevelItems = Array.from(document.querySelectorAll('#sidebarMenu > li.nav-item'));
                                var collapseElements = Array.from(document.querySelectorAll('#sidebarMenu .collapse'));
                                var hasBootstrap = window.bootstrap && window.bootstrap.Collapse;
                                var collapseInstances = new Map();
                                var initialStates = new Map();

                                function findToggle(id) {
                                    return document.querySelector('[data-bs-toggle="collapse"][href="#' + id + '"]') ||
                                        document.querySelector('[data-bs-toggle="collapse"][data-bs-target="#' + id + '"]');
                                }

                                collapseElements.forEach(function (collapseEl) {
                                    initialStates.set(collapseEl.id, collapseEl.classList.contains('show'));
                                    if (hasBootstrap) {
                                        var instance = window.bootstrap.Collapse.getOrCreateInstance(collapseEl, { toggle: false });
                                        collapseInstances.set(collapseEl.id, instance);

                                        collapseEl.addEventListener('shown.bs.collapse', function () {
                                            var toggle = findToggle(collapseEl.id);
                                            if (toggle) {
                                                toggle.classList.add('open');
                                            }
                                        });

                                        collapseEl.addEventListener('hidden.bs.collapse', function () {
                                            var toggle = findToggle(collapseEl.id);
                                            if (toggle) {
                                                toggle.classList.remove('open');
                                            }
                                        });
                                    }

                                    if (collapseEl.classList.contains('show')) {
                                        var initialToggle = findToggle(collapseEl.id);
                                        if (initialToggle) {
                                            initialToggle.classList.add('open');
                                        }
                                    }
                                });

                                menuSearchInput.addEventListener('input', function () {
                                    var query = this.value.trim().toLowerCase();

                                    if (!query) {
                                        topLevelItems.forEach(function (item) {
                                            item.style.display = '';
                                            var collapseEl = item.querySelector(':scope > .collapse');
                                            if (!collapseEl) {
                                                return;
                                            }

                                            Array.from(collapseEl.querySelectorAll(':scope > li')).forEach(function (child) {
                                                child.style.display = '';
                                            });

                                            var shouldShow = initialStates.get(collapseEl.id);
                                            if (hasBootstrap && collapseInstances.get(collapseEl.id)) {
                                                if (shouldShow) {
                                                    collapseInstances.get(collapseEl.id).show();
                                                } else {
                                                    collapseInstances.get(collapseEl.id).hide();
                                                }
                                            } else {
                                                collapseEl.classList.toggle('show', !!shouldShow);
                                                var toggle = findToggle(collapseEl.id);
                                                if (toggle) {
                                                    toggle.classList.toggle('open', !!shouldShow);
                                                    toggle.setAttribute('aria-expanded', shouldShow ? 'true' : 'false');
                                                }
                                            }
                                        });
                                        return;
                                    }

                                    topLevelItems.forEach(function (item) {
                                        var collapseEl = item.querySelector(':scope > .collapse');
                                        var toggle = item.querySelector(':scope > a.nav-link');
                                        var directText = toggle ? toggle.textContent.trim().toLowerCase() : '';
                                        var directMatch = directText.indexOf(query) > -1;
                                        var itemMatch = directMatch;

                                        if (collapseEl) {
                                            var collapseId = collapseEl.id;
                                            var collapseInstance = collapseInstances.get(collapseId);
                                            var childMatch = false;

                                            Array.from(collapseEl.querySelectorAll(':scope > li')).forEach(function (child) {
                                                var childLink = child.querySelector('a.nav-link');
                                                if (!childLink) {
                                                    child.style.display = directMatch ? '' : 'none';
                                                    return;
                                                }

                                                var childText = childLink.textContent.trim().toLowerCase();
                                                var isMatch = childText.indexOf(query) > -1;
                                                child.style.display = directMatch || isMatch ? '' : 'none';
                                                if (isMatch) {
                                                    childMatch = true;
                                                }
                                            });

                                            itemMatch = itemMatch || childMatch;

                                            if (hasBootstrap && collapseInstance) {
                                                if (itemMatch) {
                                                    collapseInstance.show();
                                                } else {
                                                    collapseInstance.hide();
                                                }
                                            } else {
                                                collapseEl.classList.toggle('show', itemMatch);
                                                var collapseToggle = findToggle(collapseId);
                                                if (collapseToggle) {
                                                    collapseToggle.classList.toggle('open', itemMatch);
                                                    collapseToggle.setAttribute('aria-expanded', itemMatch ? 'true' : 'false');
                                                }
                                            }
                                        }

                                        item.style.display = itemMatch ? '' : 'none';
                                    });
                                });
                            });
                        </script>

