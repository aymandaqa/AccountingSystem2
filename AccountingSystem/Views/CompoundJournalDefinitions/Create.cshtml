        <a class="btn btn-secondary" asp-action="Index">إلغاء</a>
        <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i> حفظ</button>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
