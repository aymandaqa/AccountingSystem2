@model AccountingSystem.ViewModels.CompoundJournalDefinitionFormViewModel
@{
    ViewData["Title"] = "تعريف قيد مركب جديد";
}

<h2 class="mb-4">@ViewData["Title"]</h2>

<form asp-action="Create" method="post">
