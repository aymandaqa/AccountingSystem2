@model AccountingSystem.ViewModels.CompoundJournalExecutionViewModel
@using AccountingSystem.Models
@{
    ViewData["Title"] = $"تشغيل القيد: {Model.DefinitionName}";
}

<h2 class="mb-4">@ViewData["Title"]</h2>

<form asp-action="Execute" method="post">
    <input type="hidden" asp-for="DefinitionId" />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="row">
        <div class="col-md-4">
            <div class="mb-3">
                <label asp-for="JournalDate" class="form-label"></label>
                <input asp-for="JournalDate" class="form-control" type="date" />
                <span asp-validation-for="JournalDate" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-4">
            <div class="mb-3">
                <label asp-for="BranchIdOverride" class="form-label"></label>
                <select asp-for="BranchIdOverride" class="form-select">
                    <option value="">-- بدون تغيير --</option>
                    @foreach (var branch in Model.Branches)
                    {
                        <option value="@branch.Key" selected="@(Model.BranchIdOverride == branch.Key ? "selected" : null)">@branch.Value</option>
                    }
                </select>
                <span asp-validation-for="BranchIdOverride" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-4">
            <div class="mb-3">
                <label asp-for="StatusOverride" class="form-label"></label>
                <select asp-for="StatusOverride" class="form-select" asp-items="Html.GetEnumSelectList<JournalEntryStatus>()">
                    <option value="">-- بدون تغيير --</option>
                </select>
                <span asp-validation-for="StatusOverride" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="mb-3">
        <label asp-for="DescriptionOverride" class="form-label"></label>
        <input asp-for="DescriptionOverride" class="form-control" />
        <span asp-validation-for="DescriptionOverride" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="ReferenceOverride" class="form-label"></label>
        <input asp-for="ReferenceOverride" class="form-control" />
        <span asp-validation-for="ReferenceOverride" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="ContextJson" class="form-label"></label>
        <textarea asp-for="ContextJson" class="form-control" rows="12" spellcheck="false" style="direction:ltr"></textarea>
        <div class="form-text">أدخل قيم السياق بصيغة JSON. سيتم دمجها مع القيم الافتراضية للقالب.</div>
        <span asp-validation-for="ContextJson" class="text-danger"></span>
    </div>

    <div class="d-flex justify-content-between">
        <a class="btn btn-secondary" asp-action="Details" asp-route-id="@Model.DefinitionId">إلغاء</a>
        <button type="submit" class="btn btn-success"><i class="fas fa-play"></i> تشغيل الآن</button>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
