@model AccountingSystem.ViewModels.CreateExpenseViewModel
@{
    ViewData["Title"] = "إضافة مصروف";
    Layout = "_AccountingLayout";
}
<div class="container-fluid">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">إضافة مصروف</h3>
        </div>
        <form asp-action="Create" method="post">
            <div class="card-body">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="mb-3">
                    <label class="form-label">حساب الدفع</label>
                    <input type="text" class="form-control" value="@Model.PaymentAccountName" readonly />
                </div>
                <div class="mb-3">
                    <label class="form-label">الفرع</label>
                    <input type="text" class="form-control" value="@Model.BranchName" readonly />
                </div>
                <div class="mb-3">
                    <label asp-for="ExpenseAccountId" class="form-label"></label>
                    <select asp-for="ExpenseAccountId" asp-items="Model.ExpenseAccounts" class="form-select">
                        <option value="">-- اختر حساب المصروف --</option>
                    </select>
                    <span asp-validation-for="ExpenseAccountId" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Amount" class="form-label"></label>
                    <input asp-for="Amount" class="form-control" />
                    <span asp-validation-for="Amount" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Notes" class="form-label"></label>
                    <textarea asp-for="Notes" class="form-control"></textarea>
                </div>
            </div>
            <div class="card-footer">
                <button type="submit" class="btn btn-primary">حفظ</button>
                <a href="@Url.Action("Index")" class="btn btn-secondary">إلغاء</a>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
