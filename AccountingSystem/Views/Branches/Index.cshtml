@model List<AccountingSystem.ViewModels.BranchViewModel>

@{
    ViewData["Title"] = "إدارة الفروع";
    Layout = "_AccountingLayout";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h3 class="card-title">إدارة الفروع</h3>
                    <a href="@Url.Action("Create")" class="btn btn-primary" asp-require-permission="branches.create">
                        <i class="fas fa-plus"></i> إضافة فرع جديد
                    </a>
                </div>
                <div class="card-body">
                    @if (Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>الكود</th>
                                        <th>الاسم العربي</th>
                                        <th>الاسم الإنجليزي</th>
                                        <th>الهاتف</th>
                                        <th>البريد الإلكتروني</th>
                                        <th>حساب الموظفين</th>
                                        <th>عدد المستخدمين</th>
                                        <th>الحالة</th>
                                        <th>تاريخ الإنشاء</th>
                                        <th>الإجراءات</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var branch in Model)
                                    {
                                        <tr>
                                            <td><strong>@branch.Code</strong></td>
                                            <td>@branch.NameAr</td>
                                            <td>@branch.NameEn</td>
                                            <td>@branch.Phone</td>
                                            <td>@branch.Email</td>
                                            <td>
                                                @if (!string.IsNullOrWhiteSpace(branch.EmployeeParentAccountName))
                                                {
                                                    @branch.EmployeeParentAccountName
                                                }
                                                else
                                                {
                                                    <span class="text-muted">غير محدد</span>
                                                }
                                            </td>
                                            <td>
                                                <span class="badge bg-info">@branch.UserCount</span>
                                            </td>
                                            <td>
                                                @if (branch.IsActive)
                                                {
                                                    <span class="badge bg-success">نشط</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-danger">غير نشط</span>
                                                }
                                            </td>
                                            <td>@branch.CreatedAt.ToString("yyyy-MM-dd")</td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <a href="@Url.Action("Details", new { id = branch.Id })" 
                                                       class="btn btn-info btn-sm" title="التفاصيل">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    <a href="@Url.Action("Edit", new { id = branch.Id })"
                                                       class="btn btn-warning btn-sm" title="تعديل"
                                                       asp-require-permission="branches.edit">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    <button type="button" class="btn btn-danger btn-sm"
                                                            onclick="deleteBranch(@branch.Id)" title="حذف"
                                                            asp-require-permission="branches.delete">
                                                        <i class="fas fa-trash"></i>
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info text-center">
                            <i class="fas fa-info-circle"></i>
                            لا توجد فروع مسجلة في النظام
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function deleteBranch(id) {
            if (confirm('هل أنت متأكد من حذف هذا الفرع؟')) {
                $.post('@Url.Action("Delete")', { id: id }, function(result) {
                    if (result.success) {
                        location.reload();
                    } else {
                        alert(result.message || 'حدث خطأ أثناء الحذف');
                    }
                });
            }
        }
    </script>
}

