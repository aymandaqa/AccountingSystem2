@model IEnumerable<AccountingSystem.ViewModels.AssetListViewModel>

@{
    ViewData["Title"] = "الأصول الثابته";
    var importSuccess = TempData["ImportSuccess"] as string;
    var importErrorsRaw = TempData["ImportErrors"] as string;
    var importErrors = !string.IsNullOrWhiteSpace(importErrorsRaw)
        ? importErrorsRaw.Split(";;", StringSplitOptions.RemoveEmptyEntries)
        : Array.Empty<string>();
}

<div class="container-fluid">
    @if (!string.IsNullOrEmpty(importSuccess))
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-1"></i> @importSuccess
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (importErrors.Length > 0)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-triangle me-1"></i>
            <ul class="mb-0">
                @foreach (var message in importErrors)
                {
                    <li>@message</li>
                }
            </ul>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card">
        <div class="card-header d-flex flex-wrap justify-content-between align-items-center gap-2">
            <h3 class="card-title"> إدارة الأصول الثابته</h3>
            <div class="btn-toolbar gap-2">
                <a asp-action="Create" class="btn btn-primary" asp-require-permission="assets.create">
                    <i class="fas fa-plus"></i> إضافة أصل ثابت
                </a>
                <div class="btn-group">
                    <a asp-action="ExportExcel" class="btn btn-success" asp-require-permission="assets.view">
                        <i class="fas fa-file-excel me-1"></i> تصدير Excel
                    </a>
                    <button type="button" class="btn btn-outline-success" data-bs-toggle="collapse" data-bs-target="#assetImportForm" aria-expanded="false" aria-controls="assetImportForm" asp-require-permission="assets.create">
                        <i class="fas fa-file-import me-1"></i> استيراد Excel
                    </button>
                </div>
            </div>
        </div>
        <div class="collapse border-top" id="assetImportForm">
            <div class="card-body bg-light">
                <form asp-action="ImportExcel" method="post" enctype="multipart/form-data" class="row g-3 align-items-end">
                    @Html.AntiForgeryToken()
                    <div class="col-md-6">
                        <label class="form-label">ملف Excel</label>
                        <input type="file" name="file" class="form-control" accept=".xlsx" required />
                        <div class="form-text">استخدم ملف Excel يحتوي على الأعمدة: اسم الأصل، نوع الأصل، الفرع، رقم الأصل، الرصيد الافتتاحي، الملاحظات.</div>
                    </div>
                    <div class="col-md-3">
                        <button type="submit" class="btn btn-success" asp-require-permission="assets.create">
                            <i class="fas fa-upload me-1"></i> بدء الاستيراد
                        </button>
                    </div>
                </form>
            </div>
        </div>
        <div class="card-body">
            @if (Model.Any())
            {
                <div id="bulkDepreciationSelectionAlert" class="alert alert-warning d-none" role="alert" tabindex="-1">
                    الرجاء اختيار أصل واحد على الأقل قبل متابعة المعاينة.
                </div>
                <form asp-controller="AssetDepreciations" asp-action="BulkPreview" method="post" id="bulkDepreciationForm">
                    @Html.AntiForgeryToken()
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th class="text-center" style="width: 40px;">
                                        <input type="checkbox" class="form-check-input" id="selectAllAssets" title="تحديد الكل" />
                                    </th>
                                    <th>الاسم</th>
                                    <th>نوع الأصل</th>
                                    <th>الفرع</th>
                                    <th>رقم الأصل</th>
                                    <th>الرصيد الافتتاحي</th>
                                    <th>مجمع الإهلاك</th>
                                    <th>القيمة الدفترية</th>
                                    <th>ملاحظات</th>
                                    <th>تاريخ الإنشاء</th>
                                    <th>الإجراءات</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var asset in Model)
                                {
                                    var checkboxDisabled = !asset.IsDepreciable;
                                    <tr>
                                        <td class="text-center">
                                            <input type="checkbox"
                                                   class="form-check-input asset-select"
                                                   name="assetIds"
                                                   value="@asset.Id"
                                                   @(checkboxDisabled ? "disabled" : null)
                                                   title="@("اختيار الأصل " + asset.Name)" />
                                        </td>
                                        <td>
                                            <div class="fw-bold">@asset.Name</div>
                                            @if (!asset.IsDepreciable)
                                            {
                                                <div class="badge bg-secondary mt-1">غير قابل للإهلاك</div>
                                            }
                                        </td>
                                        <td>@asset.AssetTypeName</td>
                                        <td>@asset.BranchName</td>
                                        <td>@asset.AssetNumber</td>
                                        <td>@asset.OpeningBalance</td>
                                        <td>@asset.AccumulatedDepreciation</td>
                                        <td>@asset.BookValue</td>
                                        <td>@asset.Notes</td>
                                        <td>@asset.CreatedAt.ToString("dd/MM/yyyy")</td>
                                        <td>
                                            <div class="btn-group btn-group-sm" role="group">
                                                @if (asset.AccountId.HasValue)
                                                {
                                                    <a asp-controller="Reports"
                                                       asp-action="AccountStatement"
                                                       asp-route-accountId="@asset.AccountId"
                                                       class="btn btn-success"
                                                       target="_blank"
                                                       asp-require-permission="reports.accountstatement"
                                                       title="كشف الحساب">
                                                        <i class="fas fa-file-alt"></i>
                                                    </a>
                                                }
                                                @if (asset.IsDepreciable)
                                                {
                                                    <a asp-controller="AssetDepreciations"
                                                       asp-action="Index"
                                                       asp-route-assetId="@asset.Id"
                                                       class="btn btn-info"
                                                       asp-require-permission="assetdepreciations.view"
                                                       title="إدارة الإهلاك">
                                                        <i class="fas fa-calculator"></i>
                                                    </a>
                                                }
                                                <a asp-action="Edit" asp-route-id="@asset.Id" class="btn btn-warning" asp-require-permission="assets.edit">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                <a asp-action="Delete" asp-route-id="@asset.Id" class="btn btn-danger" asp-require-permission="assets.delete">
                                                    <i class="fas fa-trash"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <div class="d-flex flex-wrap justify-content-between align-items-center gap-2 mt-3">
                        <div class="text-muted small">
                            الأصول غير القابلة للإهلاك معطلة ولا يمكن اختيارها.
                        </div>
                        <div class="btn-group">
                            <button type="submit" name="processAll" value="false" class="btn btn-primary" data-requires-selection="true" asp-require-permission="assetdepreciations.create">
                                <i class="fas fa-eye me-1"></i> معاينة إهلاك الأصول المحددة
                            </button>
                            <button type="submit" name="processAll" value="true" class="btn btn-outline-primary" asp-require-permission="assetdepreciations.create">
                                <i class="fas fa-layer-group me-1"></i> معاينة إهلاك جميع الأصول القابلة
                            </button>
                        </div>
                    </div>
                </form>
            }
            else
            {
                <div class="alert alert-info text-center">
                    لا توجد أصول مسجلة حالياً.
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var form = document.getElementById('bulkDepreciationForm');
            if (!form) {
                return;
            }

            var selectAll = document.getElementById('selectAllAssets');
            var alertBox = document.getElementById('bulkDepreciationSelectionAlert');

            var getSelectableCheckboxes = function () {
                return Array.prototype.slice.call(form.querySelectorAll('.asset-select')).filter(function (checkbox) {
                    return !checkbox.disabled;
                });
            };

            if (selectAll) {
                selectAll.addEventListener('change', function () {
                    var checkboxes = getSelectableCheckboxes();
                    checkboxes.forEach(function (checkbox) {
                        checkbox.checked = selectAll.checked;
                    });
                });
            }

            form.addEventListener('submit', function (event) {
                var submitter = event.submitter;
                if (submitter && submitter.dataset.requiresSelection === 'true') {
                    var hasSelection = getSelectableCheckboxes().some(function (checkbox) {
                        return checkbox.checked;
                    });

                    if (!hasSelection) {
                        event.preventDefault();
                        if (alertBox) {
                            alertBox.classList.remove('d-none');
                            alertBox.focus();
                        }
                    }
                }
            });
        });
    </script>
}
