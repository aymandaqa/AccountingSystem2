@model AccountingSystem.ViewModels.AssetFormViewModel
@using System.Text.Json

@{
    ViewData["Title"] = "تعديل أصل";
    var assetTypeDataJson = JsonSerializer.Serialize(Model.AssetTypeOptions.Select(o => new { id = o.Id, isDepreciable = o.IsDepreciable }));
}

<div class="container-fluid">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">تعديل أصل ثابت</h3>
        </div>
        <div class="card-body">
            <form asp-action="Edit" method="post" class="row g-3">
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="AccountId" />
                <div class="col-md-6">
                    <label asp-for="Name" class="form-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="AssetTypeId" class="form-label"></label>
                    <select asp-for="AssetTypeId" asp-items="Model.AssetTypes" class="form-select"></select>
                    <span asp-validation-for="AssetTypeId" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="BranchId" class="form-label"></label>
                    <select asp-for="BranchId" asp-items="Model.Branches" class="form-select"></select>
                    <span asp-validation-for="BranchId" class="text-danger"></span>
                </div>
                <div class="col-md-6" id="opening-balance-group">
                    <label asp-for="OpeningBalance" class="form-label"></label>
                    <input asp-for="OpeningBalance" class="form-control" />
                    <span asp-validation-for="OpeningBalance" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="SupplierId" class="form-label"></label>
                    <select asp-for="SupplierId" asp-items="Model.Suppliers" class="form-select">
                        <option value="">اختر المورد</option>
                    </select>
                    <span asp-validation-for="SupplierId" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="DriverId" class="form-label"></label>
                    <select asp-for="DriverId" asp-items="Model.Drivers" class="form-select">
                        <option value="">اختر السائق (اختياري)</option>
                    </select>
                    <span asp-validation-for="DriverId" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <div class="form-check form-switch mt-4">
                        <input asp-for="AllowAssetExpenses" class="form-check-input" />
                        <label asp-for="AllowAssetExpenses" class="form-check-label"></label>
                    </div>
                    <span asp-validation-for="AllowAssetExpenses" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="PurchaseAmount" class="form-label"></label>
                    <input asp-for="PurchaseAmount" class="form-control" />
                    <span asp-validation-for="PurchaseAmount" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="AccountCode" class="form-label"></label>
                    <input asp-for="AccountCode" class="form-control" readonly />
                </div>
                <div class="col-md-6">
                    <label asp-for="AssetNumber" class="form-label"></label>
                    <input asp-for="AssetNumber" class="form-control" />
                    <span asp-validation-for="AssetNumber" class="text-danger"></span>
                </div>
                <div class="row g-3 d-none" id="depreciation-fields">
                    <div class="col-md-6">
                        <label asp-for="OriginalCost" class="form-label"></label>
                        <input asp-for="OriginalCost" class="form-control" />
                        <span asp-validation-for="OriginalCost" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="SalvageValue" class="form-label"></label>
                        <input asp-for="SalvageValue" class="form-control" />
                        <span asp-validation-for="SalvageValue" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="DepreciationPeriods" class="form-label"></label>
                        <input asp-for="DepreciationPeriods" class="form-control" />
                        <span asp-validation-for="DepreciationPeriods" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="DepreciationFrequency" class="form-label"></label>
                        <select asp-for="DepreciationFrequency" asp-items="Model.DepreciationFrequencies" class="form-select">
                            <option value="">اختر دورية الإهلاك</option>
                        </select>
                        <span asp-validation-for="DepreciationFrequency" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="PurchaseDate" class="form-label"></label>
                        <input asp-for="PurchaseDate" class="form-control" />
                        <span asp-validation-for="PurchaseDate" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-12">
                    <label asp-for="Notes" class="form-label"></label>
                    <textarea asp-for="Notes" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Notes" class="text-danger"></span>
                </div>
                <div class="col-12">
                    <button type="submit" class="btn btn-primary">حفظ</button>
                    <a asp-action="Index" class="btn btn-secondary">إلغاء</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        (function () {
            const assetTypeMeta = @Html.Raw(assetTypeDataJson);
            const assetTypeSelect = document.getElementById('AssetTypeId');
            const depreciationSection = document.getElementById('depreciation-fields');
            const openingBalanceInput = document.getElementById('OpeningBalance');
            const originalCostInput = document.getElementById('OriginalCost');

            function isDepreciable(id) {
                const value = parseInt(id, 10);
                if (isNaN(value)) {
                    return false;
                }
                return assetTypeMeta.some(t => t.id === value && t.isDepreciable);
            }

            function syncOpeningBalance() {
                if (openingBalanceInput && originalCostInput && openingBalanceInput.readOnly) {
                    openingBalanceInput.value = originalCostInput.value ?? '';
                }
            }

            function updateDepreciationFields() {
                if (!assetTypeSelect) {
                    return;
                }
                const depreciable = isDepreciable(assetTypeSelect.value);
                if (depreciable) {
                    depreciationSection?.classList.remove('d-none');
                    if (openingBalanceInput) {
                        openingBalanceInput.readOnly = true;
                        syncOpeningBalance();
                    }
                } else {
                    depreciationSection?.classList.add('d-none');
                    if (openingBalanceInput) {
                        openingBalanceInput.readOnly = false;
                    }
                }
            }

            assetTypeSelect?.addEventListener('change', updateDepreciationFields);
            originalCostInput?.addEventListener('input', syncOpeningBalance);
            updateDepreciationFields();
        })();
    </script>
}
