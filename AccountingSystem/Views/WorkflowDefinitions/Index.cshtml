@model IEnumerable<AccountingSystem.Models.Workflows.WorkflowDefinition>
@{
    ViewData["Title"] = "سير عمل سندات الدفع";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="mb-0">سير عمل سندات الدفع</h2>
    <a class="btn btn-primary" asp-action="Create"><i class="fa fa-plus ms-1"></i> مخطط جديد</a>
</div>

<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>الاسم</th>
                        <th>الفرع</th>
                        <th>الحالة</th>
                        <th>عدد الخطوات</th>
                        <th>تم التحديث</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="6" class="text-center text-muted">لم يتم تعريف أي سير عمل بعد</td>
                        </tr>
                    }
                    else
                    {
                        foreach (var definition in Model)
                        {
                            <tr>
                                <td>@definition.Name</td>
                                <td>@(definition.Branch?.NameAr ?? "كافة الفروع")</td>
                                <td>
                                    @if (definition.IsActive)
                                    {
                                        <span class="badge bg-success">مفعل</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">موقوف</span>
                                    }
                                </td>
                                <td>@definition.Steps.Count()</td>
                                <td>@definition.UpdatedAt?.ToString("yyyy/MM/dd HH:mm") ?? definition.CreatedAt.ToString("yyyy/MM/dd HH:mm")</td>
                                <td class="text-end">
                                    <a class="btn btn-sm btn-outline-primary" asp-action="Edit" asp-route-id="@definition.Id"><i class="fa fa-pen ms-1"></i> تعديل</a>
                                    <form asp-action="ToggleStatus" asp-route-id="@definition.Id" method="post" class="d-inline">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-sm @(definition.IsActive ? "btn-outline-danger" : "btn-outline-success")">
                                            <i class="fa @(definition.IsActive ? "fa-ban" : "fa-check") ms-1"></i>
                                            @(definition.IsActive ? "إيقاف" : "تفعيل")
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
