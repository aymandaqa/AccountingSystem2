@model IEnumerable<AccountingSystem.Models.SalaryPayment>
@{
    ViewData["Title"] = "سندات صرف الرواتب";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0">سندات صرف الرواتب</h2>
        <a asp-action="Create" class="btn btn-primary" asp-require-permission="salarypayments.create">سند صرف راتب جديد</a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-hover align-middle">
            <thead class="table-dark">
                <tr>
                    <th>التاريخ</th>
                    <th>الموظف</th>
                    <th>الفرع</th>
                    <th>المبلغ</th>
                    <th>الحساب الدافع</th>
                    <th>رقم القيد</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Date.ToString("yyyy-MM-dd")</td>
                        <td>@item.Employee.Name</td>
                        <td>@item.Branch.NameAr</td>
                        <td>@item.Amount.ToString("N2") @item.Currency.Code</td>
                        <td>@item.PaymentAccount.NameAr</td>
                        <td>@item.ReferenceNumber</td>
                        <td class="text-end">
                            <a asp-action="Print" asp-route-id="@item.Id" class="btn btn-sm btn-secondary">طباعة</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
