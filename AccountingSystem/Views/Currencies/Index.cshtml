@model List<AccountingSystem.ViewModels.CurrencyViewModel>

@{
    ViewData["Title"] = "إدارة العملات";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h3 class="card-title">إدارة العملات</h3>
                    <a href="@Url.Action("Create")" class="btn btn-primary" asp-require-permission="currencies.create">
                        <i class="fas fa-plus"></i> إضافة عملة جديدة
                    </a>
                </div>
                <div class="card-body">
                    @if (Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>الاسم</th>
                                        <th>الكود</th>
                                        <th>سعر الصرف</th>
                                        <th>أساسية</th>
                                        <th>الإجراءات</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var currency in Model)
                                    {
                                        <tr>
                                            <td>@currency.Name</td>
                                            <td>@currency.Code</td>
                                            <td>@currency.ExchangeRate</td>
                                            <td>
                                                @if (currency.IsBase)
                                                {
                                                    <span class="badge bg-success">نعم</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">لا</span>
                                                }
                                            </td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <a href="@Url.Action("Edit", new { id = currency.Id })" class="btn btn-warning btn-sm" title="تعديل"
                                                       asp-require-permission="currencies.edit">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    <button type="button" class="btn btn-danger btn-sm" onclick="deleteCurrency(@currency.Id)" title="حذف"
                                                            asp-require-permission="currencies.delete">
                                                        <i class="fas fa-trash"></i>
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info text-center">
                            <i class="fas fa-info-circle"></i>
                            لا توجد عملات مسجلة في النظام
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function deleteCurrency(id) {
            if (confirm('هل أنت متأكد من حذف هذه العملة؟')) {
                $.post('@Url.Action("Delete")', { id: id }, function () {
                    location.reload();
                });
            }
        }
    </script>
}
