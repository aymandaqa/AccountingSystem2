@model IEnumerable<AccountingSystem.ViewModels.Workflows.WorkflowApprovalViewModel>
@{
    ViewData["Title"] = "الموافقات المعلقة";
}

<h2 class="mb-4">الموافقات المعلقة</h2>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

@if (!Model.Any())
{
    <div class="alert alert-info">لا توجد أي طلبات موافقة حالياً.</div>
}
else
{
    foreach (var request in Model)
    {
        <div class="card mb-3">
            <div class="card-header d-flex justify-content-between align-items-center">
                <div>
                    <strong>@request.Title</strong>
                    <div class="text-muted small">تاريخ الإنشاء: @request.CreatedAt.ToString("dd/MM/yyyy HH:mm")</div>
                </div>
                <div>
                    <form asp-action="Approve" method="post" class="d-inline">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="actionId" value="@request.ActionId" />
                        <button type="submit" class="btn btn-success btn-sm"><i class="fa fa-check ms-1"></i> موافقة</button>
                    </form>
                    <button class="btn btn-outline-danger btn-sm" type="button" data-bs-toggle="collapse" data-bs-target="#reject-@request.ActionId"><i class="fa fa-times ms-1"></i> رفض</button>
                </div>
            </div>
            <div class="card-body">
                @if (request.Amount != 0 || request.AmountInBase != 0)
                {
                    <div class="mb-3">
                        <div class="fw-bold">المبلغ المطلوب</div>
                        <div>
                            @if (!string.IsNullOrEmpty(request.CurrencyCode))
                            {
                                @request.Amount.ToString("N2") @request.CurrencyCode
                            }
                            else
                            {
                                @request.Amount.ToString("N2")
                            }

                            @if (request.AmountInBase != 0)
                            {
                                <span class="text-muted">(ما يعادل @request.AmountInBase.ToString("N2") بالعملة الأساسية)</span>
                            }
                        </div>
                    </div>
                }
                <p>@request.Description</p>
                @if (request.Attachments.Any())
                {
                    <div class="mb-3">
                        <div class="fw-bold">المرفقات</div>
                        <ul class="list-unstyled mb-0">
                            @foreach (var attachment in request.Attachments)
                            {
                                <li>
                                    <a href="@Url.ContentFromAttachmentPath(attachment.FilePath)" target="_blank" rel="noopener">
                                        @attachment.FileName
                                    </a>
                                </li>
                            }
                        </ul>
                    </div>
                }
                @if (request.JournalLines.Any())
                {
                    <div class="mb-3">
                        <div class="fw-bold">تفاصيل القيد المحاسبي</div>
                        <div class="table-responsive">
                            <table class="table table-sm table-bordered align-middle mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th scope="col">الحساب</th>
                                        <th scope="col" class="text-end">مدين</th>
                                        <th scope="col" class="text-end">دائن</th>
                                        <th scope="col">الوصف</th>
                                        <th scope="col">مركز التكلفة</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var line in request.JournalLines)
                                    {
                                        <tr>
                                            <td>
                                                <div>@line.AccountName</div>
                                                <div class="text-muted small">@line.AccountCode</div>
                                            </td>
                                            <td class="text-end">@(line.Debit == 0 ? "-" : line.Debit.ToString("N2"))</td>
                                            <td class="text-end">@(line.Credit == 0 ? "-" : line.Credit.ToString("N2"))</td>
                                            <td>@(string.IsNullOrWhiteSpace(line.Description) ? "-" : line.Description)</td>
                                            <td>@(string.IsNullOrWhiteSpace(line.CostCenter) ? "-" : line.CostCenter)</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                }
                else if (!string.IsNullOrWhiteSpace(request.JournalPreviewError))
                {
                    <div class="alert alert-warning">
                        تعذر عرض تفاصيل القيد: @request.JournalPreviewError
                    </div>
                }
                @if (request.PaymentVoucher != null)
                {
                    <div class="row g-3">
                        <div class="col-md-4">
                            <div class="fw-bold">المورد</div>
                            <div>@(request.PaymentVoucher.Supplier?.NameAr ?? "-")</div>
                        </div>
                        <div class="col-md-4">
                            <div class="fw-bold">أنشئ بواسطة</div>
                            <div>@(request.PaymentVoucher.CreatedBy?.FullName ?? request.PaymentVoucher.CreatedById)</div>
                        </div>
                        <div class="col-12">
                            <div class="fw-bold">ملاحظات</div>
                            <div>@(string.IsNullOrWhiteSpace(request.PaymentVoucher.Notes) ? "لا يوجد" : request.PaymentVoucher.Notes)</div>
                        </div>
                    </div>
                }
                else if (request.DynamicEntry != null)
                {
                    <div class="row g-3">
                        <div class="col-md-4">
                            <div class="fw-bold">الشاشة</div>
                            <div>@request.DynamicEntry.Screen.DisplayName</div>
                        </div>
                        <div class="col-md-4">
                            <div class="fw-bold">أنشئ بواسطة</div>
                            <div>@(request.DynamicEntry.CreatedBy?.FullName ?? request.DynamicEntry.CreatedById)</div>
                        </div>
                        <div class="col-md-6">
                            <div class="fw-bold">المورد</div>
                            <div>@(request.DynamicEntry.Supplier?.NameAr ?? "-" )</div>
                        </div>
                        <div class="col-md-6">
                            <div class="fw-bold">الوصف</div>
                            <div>@(string.IsNullOrWhiteSpace(request.DynamicEntry.Description) ? "-" : request.DynamicEntry.Description)</div>
                        </div>
                    </div>
                }
                else if (request.ReceiptVoucher != null)
                {
                    <div class="row g-3">
                        <div class="col-md-4">
                            <div class="fw-bold">المورد</div>
                            <div>@(request.ReceiptVoucher.Supplier?.NameAr ?? "-")</div>
                        </div>
                        <div class="col-md-4">
                            <div class="fw-bold">حساب المورد</div>
                            <div>@request.ReceiptVoucher.Account.NameAr</div>
                        </div>
                        <div class="col-md-4">
                            <div class="fw-bold">حساب الدفع</div>
                            <div>@request.ReceiptVoucher.PaymentAccount.NameAr</div>
                        </div>
                        <div class="col-md-4">
                            <div class="fw-bold">العملة</div>
                            <div>@request.ReceiptVoucher.Currency.Code</div>
                        </div>
                        <div class="col-md-8">
                            <div class="fw-bold">أنشئ بواسطة</div>
                            <div>@(request.ReceiptVoucher.CreatedBy?.FullName ?? request.ReceiptVoucher.CreatedById)</div>
                        </div>
                        <div class="col-12">
                            <div class="fw-bold">ملاحظات</div>
                            <div>@(string.IsNullOrWhiteSpace(request.ReceiptVoucher.Notes) ? "لا يوجد" : request.ReceiptVoucher.Notes)</div>
                        </div>
                    </div>
                }
                else if (request.DisbursementVoucher != null)
                {
                    <div class="row g-3">
                        <div class="col-md-4">
                            <div class="fw-bold">المورد</div>
                            <div>@(request.DisbursementVoucher.Supplier?.NameAr ?? "-")</div>
                        </div>
                        <div class="col-md-4">
                            <div class="fw-bold">العملة</div>
                            <div>@request.DisbursementVoucher.Currency.Code</div>
                        </div>
                        <div class="col-md-4">
                            <div class="fw-bold">أنشئ بواسطة</div>
                            <div>@(request.DisbursementVoucher.CreatedBy?.FullName ?? request.DisbursementVoucher.CreatedById)</div>
                        </div>
                        <div class="col-12">
                            <div class="fw-bold">ملاحظات</div>
                            <div>@(string.IsNullOrWhiteSpace(request.DisbursementVoucher.Notes) ? "لا يوجد" : request.DisbursementVoucher.Notes)</div>
                        </div>
                    </div>
                }
                else if (request.AssetExpense != null)
                {
                    <div class="row g-3">
                        <div class="col-md-4">
                            <div class="fw-bold">الأصل</div>
                            <div>@request.AssetExpense.Asset.Name</div>
                        </div>
                        <div class="col-md-4">
                            <div class="fw-bold">الفرع</div>
                            <div>@(request.AssetExpense.Asset.Branch?.NameAr ?? "-")</div>
                        </div>
                        <div class="col-md-4">
                            <div class="fw-bold">الحساب</div>
                            <div>@request.AssetExpense.ExpenseAccount.NameAr</div>
                        </div>
                        <div class="col-md-4">
                            <div class="fw-bold">المورد</div>
                            <div>@request.AssetExpense.Supplier.NameAr</div>
                        </div>
                        <div class="col-md-4">
                            <div class="fw-bold">نوع الدفع</div>
                            <div>@(request.AssetExpense.IsCash ? "نقدي" : "غير نقدي")</div>
                        </div>
                        <div class="col-md-4">
                            <div class="fw-bold">أنشئ بواسطة</div>
                            <div>@(request.AssetExpense.CreatedBy?.FullName ?? request.AssetExpense.CreatedById)</div>
                        </div>
                        <div class="col-12">
                            <div class="fw-bold">ملاحظات</div>
                            <div>@(string.IsNullOrWhiteSpace(request.AssetExpense.Notes) ? "لا يوجد" : request.AssetExpense.Notes)</div>
                        </div>
                    </div>
                }
            </div>
            <div class="collapse" id="reject-@request.ActionId">
                <div class="card-body border-top">
                    <form asp-action="Reject" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="actionId" value="@request.ActionId" />
                        <div class="mb-3">
                            <label class="form-label">سبب الرفض</label>
                            <textarea name="notes" class="form-control" rows="3"></textarea>
                        </div>
                        <button type="submit" class="btn btn-danger"><i class="fa fa-times ms-1"></i> تأكيد الرفض</button>
                    </form>
                </div>
            </div>
        </div>
    }
}
