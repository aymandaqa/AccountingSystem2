@model AccountingSystem.ViewModels.PayrollBatchPrintViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="ar">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>طباعة قسائم الرواتب</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body { direction: rtl; font-family: 'Tajawal', 'Segoe UI', sans-serif; }
        .page-container { padding: 2rem; }
        .payroll-slip { page-break-after: always; border: 1px solid #dee2e6; border-radius: 12px; padding: 1.5rem; margin-bottom: 1.5rem; }
        .payroll-slip:last-child { page-break-after: auto; }
        .slip-header { border-bottom: 2px solid #0d6efd; padding-bottom: .75rem; margin-bottom: 1rem; }
        .detail-label { color: #6c757d; font-size: .9rem; }
    </style>
</head>
<body>
    <div class="page-container">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h4 class="mb-1">قسائم الرواتب</h4>
                <div class="text-muted">@Model.BranchName - @Model.PeriodDisplay</div>
            </div>
            <button class="btn btn-primary" onclick="window.print()">
                <i class="fas fa-print ms-1"></i>
                طباعة الكل
            </button>
        </div>

        @foreach (var employee in Model.Employees)
        {
            <div class="payroll-slip">
                <div class="slip-header d-flex justify-content-between align-items-center">
                    <div>
                        <h5 class="mb-1">@employee.Name</h5>
                        <div class="text-muted">@(string.IsNullOrWhiteSpace(employee.JobTitle) ? "---" : employee.JobTitle)</div>
                    </div>
                    <div class="text-end">
                        <div class="detail-label">الشهر</div>
                        <div class="fw-bold">@Model.PeriodDisplay</div>
                    </div>
                </div>

                <div class="row g-3 mb-3">
                    <div class="col-md-3">
                        <div class="detail-label">الراتب الأساسي</div>
                        <div class="fw-bold">@employee.BaseSalary.ToString("N2")</div>
                    </div>
                    <div class="col-md-3">
                        <div class="detail-label">إجمالي البدلات</div>
                        <div class="fw-bold text-success">@employee.AllowanceTotal.ToString("N2")</div>
                    </div>
                    <div class="col-md-3">
                        <div class="detail-label">إجمالي الخصومات</div>
                        <div class="fw-bold text-danger">@employee.DeductionTotal.ToString("N2")</div>
                    </div>
                    <div class="col-md-3">
                        <div class="detail-label">صافي الراتب</div>
                        <div class="fw-bold text-primary">@employee.NetAmount.ToString("N2")</div>
                    </div>
                </div>

                <div class="row g-3">
                    <div class="col-md-6">
                        <h6 class="text-success">البدلات</h6>
                        @if (!employee.Allowances.Any())
                        {
                            <div class="text-muted small">لا توجد بدلات</div>
                        }
                        else
                        {
                            <table class="table table-sm align-middle">
                                <thead class="table-light">
                                    <tr>
                                        <th>النوع</th>
                                        <th>الوصف</th>
                                        <th class="text-end">المبلغ</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var allowance in employee.Allowances)
                                    {
                                        <tr>
                                            <td>@allowance.Type</td>
                                            <td>@allowance.Description</td>
                                            <td class="text-end">@allowance.Amount.ToString("N2")</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        }
                    </div>
                    <div class="col-md-6">
                        <h6 class="text-danger">الخصومات</h6>
                        @if (!employee.Deductions.Any())
                        {
                            <div class="text-muted small">لا توجد خصومات</div>
                        }
                        else
                        {
                            <table class="table table-sm align-middle">
                                <thead class="table-light">
                                    <tr>
                                        <th>النوع</th>
                                        <th>الوصف</th>
                                        <th class="text-end">المبلغ</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var deduction in employee.Deductions)
                                    {
                                        <tr>
                                            <td>@deduction.Type</td>
                                            <td>@deduction.Description</td>
                                            <td class="text-end">@deduction.Amount.ToString("N2")</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        }
                    </div>
                </div>

                <div class="mt-3 text-muted small">
                    تم إعداد القسيمة عبر نظام إدارة الرواتب - الحالة الحالية: @Model.StatusDisplay
                </div>
            </div>
        }
    </div>
    <script src="https://kit.fontawesome.com/a2e0e9c6c1.js" crossorigin="anonymous"></script>
</body>
</html>
