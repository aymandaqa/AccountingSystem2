@model AccountingSystem.ViewModels.Notifications.NotificationsIndexViewModel
@{
    ViewData["Title"] = "الإشعارات";
}

<div class="container-fluid">
    <div class="card shadow-sm">
        <div class="card-header d-flex flex-column flex-md-row align-items-md-center justify-content-between gap-3">
            <div>
                <h5 class="mb-1">الإشعارات</h5>
                <small class="text-muted">تابع آخر التحديثات الخاصة بحسابك</small>
            </div>
            <div class="d-flex align-items-center flex-wrap gap-2 gap-md-3">
                <span class="badge bg-primary fs-6">@Model.UnreadCount إشعار غير مقروء</span>
                @if (Model.WorkflowNotifications.Any())
                {
                    <span class="badge bg-info-subtle text-info">@Model.WorkflowUnreadCount غير مقروء في الموافقات</span>
                }
                @if (Model.LoginNotifications.Any())
                {
                    <span class="badge bg-secondary-subtle text-secondary">@Model.LoginUnreadCount غير مقروء للحساب</span>
                }
                <form asp-action="MarkAllRead" method="post" class="m-0">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-outline-secondary">
                        <i class="fa-solid fa-envelope-open-text me-2"></i>
                        تحديد الكل كمقروء
                    </button>
                </form>
            </div>
        </div>
        <div class="card-body p-0">
            @if (!Model.WorkflowNotifications.Any() && !Model.LoginNotifications.Any())
            {
                <div class="text-center text-muted py-5">
                    <i class="fa-regular fa-bell fa-2x mb-3"></i>
                    <p class="mb-0">لا توجد إشعارات متاحة حالياً</p>
                </div>
            }
            else
            {
                <ul class="list-group list-group-flush">
                    @if (Model.WorkflowNotifications.Any())
                    {
                        <li class="list-group-item bg-body-tertiary fw-semibold d-flex justify-content-between align-items-center">
                            <span>إشعارات الموافقات</span>
                            @if (Model.WorkflowUnreadCount > 0)
                            {
                                <span class="badge bg-info text-white">@Model.WorkflowUnreadCount غير مقروء</span>
                            }
                        </li>
                        @await Html.PartialAsync("_NotificationList", Model.WorkflowNotifications)
                    }
                    @if (Model.LoginNotifications.Any())
                    {
                        <li class="list-group-item bg-body-tertiary fw-semibold d-flex justify-content-between align-items-center">
                            <span>إشعارات الحساب والدخول</span>
                            @if (Model.LoginUnreadCount > 0)
                            {
                                <span class="badge bg-secondary text-white">@Model.LoginUnreadCount غير مقروء</span>
                            }
                        </li>
                        @await Html.PartialAsync("_NotificationList", Model.LoginNotifications)
                    }
                </ul>
            }
        </div>
    </div>
</div>
