@using AccountingSystem.Models
@model IEnumerable<AccountingSystem.Models.PaymentVoucher>
@{
    ViewData["Title"] = "سندات الدفع";
}

<div class="container-fluid">
    <div class="d-flex flex-column flex-md-row justify-content-between gap-2 mb-3">
        <div class="d-flex gap-2">
            <a asp-action="Create" class="btn btn-primary" asp-require-permission="paymentvouchers.create">سند صرف جديد</a>
            <a asp-action="CreateFromAgent" class="btn btn-outline-primary" asp-require-permission="paymentvouchers.create">سند صرف من حساب وكيل</a>
        </div>
        <a asp-action="ExportExcel"
           class="btn btn-success"
           asp-route-fromDate="@ViewBag.FromDate"
           asp-route-toDate="@ViewBag.ToDate"
           asp-require-permission="paymentvouchers.view">تصدير Excel</a>
    </div>

    <form method="get" class="row g-3 mb-3">
        <div class="col-md-3">
            <label for="fromDate" class="form-label">من تاريخ</label>
            <input type="date" id="fromDate" name="fromDate" class="form-control" value="@ViewBag.FromDate" />
        </div>
        <div class="col-md-3">
            <label for="toDate" class="form-label">إلى تاريخ</label>
            <input type="date" id="toDate" name="toDate" class="form-control" value="@ViewBag.ToDate" />
        </div>
        <div class="col-md-6 d-flex align-items-end gap-2 justify-content-md-end">
            <button type="submit" class="btn btn-secondary">بحث</button>
            <a asp-action="Index" class="btn btn-outline-secondary">مسح</a>
        </div>
    </form>

    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>التاريخ</th>
                <th>المورد</th>
                <th>الوكيل</th>
                <th>العملة</th>
                <th>سعر الصرف</th>
                <th>المبلغ</th>
                <th>الحالة</th>
                <th>ملاحظات</th>
                <th>الفرع</th>
                <th class="text-end">إجراءات</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var v in Model)
            {
                <tr>
                    <td>@v.Date.ToString("dd/MM/yyyy")</td>
                    <td>@(v.Supplier != null ? v.Supplier.NameAr : "-")</td>
                    <td>@(v.Agent != null ? v.Agent.Name : "-")</td>
                    <td>@v.Currency.Code</td>
                    <td>@v.ExchangeRate.ToString("N6")</td>
                    <td>@v.Amount.ToString("N2")</td>
                    <td>
                        @switch (v.Status)
                        {
                            case PaymentVoucherStatus.PendingApproval:
                                <span class="badge bg-warning text-dark">بانتظار الموافقة</span>
                                break;
                            case PaymentVoucherStatus.Approved:
                                <span class="badge bg-success">معتمد</span>
                                break;
                            case PaymentVoucherStatus.Rejected:
                                <span class="badge bg-danger">مرفوض</span>
                                break;
                            default:
                                <span class="badge bg-secondary">مسودة</span>
                                break;
                        }
                    </td>
                    <td>@(string.IsNullOrWhiteSpace(v.Notes) ? "-" : v.Notes)</td>
                    <td>@(v.CreatedBy?.PaymentBranch?.NameAr ?? "-")</td>
                    <td class="text-end">
                        <form asp-action="Delete" asp-route-id="@v.Id" method="post" class="d-inline" asp-require-permission="paymentvouchers.delete" onsubmit="return confirm('هل أنت متأكد من حذف سند الصرف؟');">
                            <input type="hidden" name="fromDate" value="@ViewBag.FromDate" />
                            <input type="hidden" name="toDate" value="@ViewBag.ToDate" />
                            <button type="submit" class="btn btn-sm btn-danger">حذف</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
