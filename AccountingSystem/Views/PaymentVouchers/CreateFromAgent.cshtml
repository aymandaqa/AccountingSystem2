@model AccountingSystem.Models.PaymentVoucher
@{
    ViewData["Title"] = "سند دفع من حساب وكيل";
}

<div class="container-fluid">
    <form asp-action="CreateFromAgent" method="post" class="row g-3" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input asp-for="AgentId" type="hidden" />
        <input asp-for="AccountId" type="hidden" />
        <input asp-for="CurrencyId" type="hidden" />
        <input asp-for="SupplierId" type="hidden" />
        <input asp-for="ExchangeRate" type="hidden" value="1" />

        <div class="col-md-6">
            <label class="form-label">الوكيل</label>
            <input type="text" class="form-control" value="@ViewBag.Agent?.Name" readonly />
            <span asp-validation-for="AgentId" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label class="form-label">حساب الدفع</label>
            <input type="text" class="form-control" value="@(ViewBag.PaymentAccount != null ? ($"{ViewBag.PaymentAccount.Code} - {ViewBag.PaymentAccount.NameAr}") : string.Empty)" readonly />
            <span asp-validation-for="AccountId" class="text-danger"></span>
        </div>

        <div class="col-md-6">
            <label class="form-label">العملة</label>
            <input type="text" class="form-control" value="@ViewBag.CurrencyCode" readonly />
        </div>

        <div class="col-md-6">
            <label class="form-label">المبلغ</label>
            <input asp-for="Amount" class="form-control" />
            <span asp-validation-for="Amount" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label class="form-label">التاريخ</label>
            <input asp-for="Date" type="date" class="form-control" />
            <span asp-validation-for="Date" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label class="form-label">ملاحظات</label>
            <textarea asp-for="Notes" class="form-control"></textarea>
            <span asp-validation-for="Notes" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label class="form-label">المرفق (اختياري)</label>
            <input type="file" name="attachment" class="form-control" />
            <div class="form-text">أرفق صورة أو ملف مرتبط بالسند إذا لزم الأمر.</div>
        </div>
        <div class="col-12">
            <button type="submit" class="btn btn-primary">حفظ</button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
