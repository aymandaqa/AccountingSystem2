@model AccountingSystem.ViewModels.AgentsIndexViewModel
@{
    ViewData["Title"] = "الوكلاء";
    var startItem = Model.TotalCount == 0 ? 0 : ((Model.CurrentPage - 1) * Model.PageSize) + 1;
    var endItem = Math.Min(Model.CurrentPage * Model.PageSize, Model.TotalCount);
    var pageSizes = new[] { 10, 20, 50, 100 };
    var hasCustomPageSize = Array.IndexOf(pageSizes, Model.PageSize) >= 0;
}

<h1 class="mb-3">الوكلاء</h1>

@if (TempData["Success"] is string successMessage)
{
    <div class="alert alert-success">@successMessage</div>
}

@if (TempData["Error"] is string errorMessage)
{
    <div class="alert alert-danger">@errorMessage</div>
}

<div class="d-flex flex-column flex-lg-row align-items-lg-center justify-content-between gap-3 mb-3">
    <a class="btn btn-primary" href="@Url.Action("Create")" asp-require-permission="agents.create">إضافة وكيل</a>
    <div class="d-flex flex-column flex-md-row align-items-md-center gap-2 text-md-end w-100 justify-content-md-end">
        <form method="get" asp-action="Index" class="d-flex align-items-center gap-2">
            <input type="hidden" name="page" value="1" />
            <label class="form-label mb-0" for="pageSize">عدد العناصر</label>
            <select id="pageSize" name="pageSize" class="form-select form-select-sm" onchange="this.form.submit()">
                @if (!hasCustomPageSize)
                {
                    <option value="@Model.PageSize" selected>@Model.PageSize</option>
                }
                @foreach (var size in pageSizes)
                {
                    if (size == Model.PageSize)
                    {
                        <option value="@size" selected>@size</option>
                    }
                    else
                    {
                        <option value="@size">@size</option>
                    }
                }
            </select>
        </form>
        <div class="text-muted small">
            @if (Model.TotalCount > 0)
            {
                <span>عرض @startItem - @endItem من @Model.TotalCount وكيل</span>
            }
            else
            {
                <span>لا توجد بيانات لعرضها</span>
            }
        </div>
    </div>
</div>

<div class="table-responsive">
    <table class="table table-bordered table-striped align-middle mb-0">
        <thead class="table-light">
            <tr>
                <th>اسم الوكيل</th>
                <th>الفرع</th>
                <th>العنوان</th>
                <th>الحساب</th>
                <th class="text-end">رصيد الحساب</th>
                <th class="text-center">الإجراءات</th>
            </tr>
        </thead>
        <tbody>
        @if (!Model.Agents.Any())
        {
            <tr>
                <td colspan="6" class="text-center text-muted py-4">لا توجد بيانات لعرضها.</td>
            </tr>
        }
        else
        {
            foreach (var agent in Model.Agents)
            {
                <tr>
                    <td>@agent.Name</td>
                    <td>@(string.IsNullOrWhiteSpace(agent.BranchName) ? "-" : agent.BranchName)</td>
                    <td>@(string.IsNullOrWhiteSpace(agent.Address) ? "-" : agent.Address)</td>
                    <td>
                        @if (!string.IsNullOrWhiteSpace(agent.AccountCode) || !string.IsNullOrWhiteSpace(agent.AccountName))
                        {
                            @(string.IsNullOrWhiteSpace(agent.AccountCode)
                                ? agent.AccountName
                                : $"{agent.AccountCode} - {agent.AccountName}")
                        }
                        else
                        {
                            @("-")
                        }
                    </td>
                    <td class="text-end">
                        @if (agent.AccountBalance.HasValue)
                        {
                            var balanceText = agent.AccountBalance.Value.ToString("N2");
                            if (!string.IsNullOrWhiteSpace(agent.AccountCurrencyCode))
                            {
                                balanceText += $" {agent.AccountCurrencyCode}";
                            }
                            @balanceText
                        }
                        else
                        {
                            @("-")
                        }
                    </td>
                    <td class="text-center">
                        <div class="btn-group btn-group-sm" role="group">
                            @if (agent.AccountId.HasValue)
                            {
                                <a class="btn btn-info" href="@Url.Action("AccountStatement", "Reports", new { accountId = agent.AccountId })" target="_blank" asp-require-permission="reports.accountstatement">كشف حساب</a>
                            }
                            <a class="btn btn-warning" href="@Url.Action("Edit", new { id = agent.Id })" asp-require-permission="agents.edit">تعديل</a>
                            <form asp-action="Delete" asp-route-id="@agent.Id" method="post" class="d-inline" asp-require-permission="agents.delete" onsubmit="return confirm('هل أنت متأكد من حذف الوكيل؟');">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-danger">حذف</button>
                            </form>
                        </div>
                    </td>
                </tr>
            }
        }
        </tbody>
    </table>
</div>

@if (Model.TotalCount > Model.PageSize)
{
    <nav aria-label="صفحات الوكلاء" class="mt-3">
        <ul class="pagination justify-content-center">
            <li class="page-item @(Model.CurrentPage <= 1 ? "disabled" : null)">
                <a class="page-link" asp-action="Index" asp-route-page="@(Model.CurrentPage > 1 ? Model.CurrentPage - 1 : 1)" asp-route-pageSize="@Model.PageSize">
                    <span aria-hidden="true">&laquo;</span> السابق
                </a>
            </li>
            @{
                var startPage = Math.Max(1, Model.CurrentPage - 2);
                var endPage = Math.Min(Model.TotalPages, Model.CurrentPage + 2);
                if (endPage - startPage < 4)
                {
                    var adjustment = 4 - (endPage - startPage);
                    startPage = Math.Max(1, startPage - adjustment);
                    endPage = Math.Min(Model.TotalPages, startPage + 4);
                }
                for (var pageNumber = startPage; pageNumber <= endPage; pageNumber++)
                {
                    <li class="page-item @(pageNumber == Model.CurrentPage ? "active" : null)">
                        <a class="page-link" asp-action="Index" asp-route-page="@pageNumber" asp-route-pageSize="@Model.PageSize">@pageNumber</a>
                    </li>
                }
            }
            <li class="page-item @(Model.CurrentPage >= Model.TotalPages ? "disabled" : null)">
                <a class="page-link" asp-action="Index" asp-route-page="@(Model.CurrentPage < Model.TotalPages ? Model.CurrentPage + 1 : Model.TotalPages)" asp-route-pageSize="@Model.PageSize">
                    التالي <span aria-hidden="true">&raquo;</span>
                </a>
            </li>
        </ul>
    </nav>
}
