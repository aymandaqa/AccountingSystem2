@{
    var defaultanimationlogs = new Syncfusion.EJ2.Popups.DialogAnimationSettings { Effect = Syncfusion.EJ2.Popups.DialogEffect.Fade };
    List<object> logscols = new List<object>();
    logscols.Add(new { field = "Idate", direction = "Descending" });
}
<ejs-dialog id="default_dialog_logs"
            allowDragging="false" isModal="true"
            enableResize="false" created="onCreatedlogs"
            animationSettings="defaultanimationlogs"
            width="80%" target="#bodytarg"
            open="dialogOpenlogs"
            close="dialogCloselogs"
            showCloseIcon="true"
            header="Logs">
    <e-content-template>

        <div>
            <ejs-grid id="GridLogs" gridLines="Both" enableRtl="@rtl" allowPaging="false" allowSorting="true" allowFiltering="true" showColumnChooser="true" allowResizing="true" enableStickyHeader="true" allowTextWrap="true">
                <e-data-manager url="/RoadfnLogs/UrlDatasource" adaptor="UrlAdaptor"></e-data-manager>
                <e-grid-pagesettings pageSize="30" pageSizes="true"></e-grid-pagesettings>
                <e-grid-sortsettings columns="logscols"></e-grid-sortsettings>
                <e-grid-filterSettings type=Excel immediateModeDelay="100"></e-grid-filterSettings>
                <e-grid-columns>
                    <e-grid-column field="Id" width="30" headerText="Id" allowEditing="false" Visible="false" isPrimaryKey="true"></e-grid-column>
                    <e-grid-column field="TableName" headerText="اسم التطبيق" width="120"></e-grid-column>
                    <e-grid-column field="EntityId" headerText="معرف السجل" width="120"></e-grid-column>
                    <e-grid-column field="PropName" headerText="اسم الخاصية" width="120"></e-grid-column>
                    <e-grid-column field="OldValue" headerText="القيمة القديمة" width="120"></e-grid-column>
                    <e-grid-column field="NewValue" headerText="القيمة الجديدة" width="120"></e-grid-column>
                    <e-grid-column field="IUser" headerText="اسم المستخدم" width="120"></e-grid-column>
                    <e-grid-column field="Idate" format="yyyy-MM-dd HH:MM" type="date" headerText="تاريخ التعديل" width="120"></e-grid-column>
                </e-grid-columns>
            </ejs-grid>
        </div>
    </e-content-template>
</ejs-dialog>

<!-- /.content -->




