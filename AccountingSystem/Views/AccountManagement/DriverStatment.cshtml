        if (city.value == null) {
            swal("الرجاء اختيار المدينة");
            // swal("Here's a message!");
            return;
        }
        if (SenderName.value == null) {
            swal("الرجاء اختيار المرسل");
            return;
        }
        $.ajax({
            type: "Get",
            url: "/Shipments/GetShipmentFee?UserId=" + SenderName.value + "&CityId=" + city.value,
            data: ''
        }).done(function (data) {
            if (data == "NotFound") {
                swal("لا يوجد تسعيرة شحن");
