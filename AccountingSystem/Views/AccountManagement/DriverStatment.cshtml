                $("#ShipmentExtraFeesq").val("1");
                $("#ShipmentExtraFees").val("0");
                $("#rangeVal").text("1");
                $("#ShipmentPrice").val("");

                $("#ShipmentFees").val(obj.Fees);
                $("#ShipmentPrice").val($("#ShipmentTotal").val() - obj.Fees);
            }
        });
    }
    function GetShipmentExtFee() {


        var ShipmentFees = $("#ShipmentFees").val();
