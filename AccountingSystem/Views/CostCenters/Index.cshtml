@model List<AccountingSystem.ViewModels.CostCenterViewModel>

@{
    ViewData["Title"] = "إدارة مراكز التكلفة";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h3 class="card-title">إدارة مراكز التكلفة</h3>
                    <a href="@Url.Action("Create")" class="btn btn-primary">
                        <i class="fas fa-plus"></i> إضافة مركز تكلفة جديد
                    </a>
                </div>
                <div class="card-body">
                    @if (Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>الكود</th>
                                        <th>الاسم العربي</th>
                                        <th>الاسم الإنجليزي</th>
                                        <th>الوصف</th>
                                        <th>عدد المعاملات</th>
                                        <th>الحالة</th>
                                        <th>تاريخ الإنشاء</th>
                                        <th>الإجراءات</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var costCenter in Model)
                                    {
                                        <tr>
                                            <td><strong>@costCenter.Code</strong></td>
                                            <td>@costCenter.NameAr</td>
                                            <td>@costCenter.NameEn</td>
                                            <td>@costCenter.Description</td>
                                            <td>
                                                <span class="badge bg-info">@costCenter.TransactionCount</span>
                                            </td>
                                            <td>
                                                @if (costCenter.IsActive)
                                                {
                                                    <span class="badge bg-success">نشط</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-danger">غير نشط</span>
                                                }
                                            </td>
                                            <td>@costCenter.CreatedAt.ToString("yyyy-MM-dd")</td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <a href="@Url.Action("Details", new { id = costCenter.Id })" 
                                                       class="btn btn-info btn-sm" title="التفاصيل">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    <a href="@Url.Action("Edit", new { id = costCenter.Id })" 
                                                       class="btn btn-warning btn-sm" title="تعديل">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    <a href="@Url.Action("GetCostCenterReport", new { id = costCenter.Id })" 
                                                       class="btn btn-success btn-sm" title="التقرير">
                                                        <i class="fas fa-chart-bar"></i>
                                                    </a>
                                                    <button type="button" class="btn btn-danger btn-sm" 
                                                            onclick="deleteCostCenter(@costCenter.Id)" title="حذف">
                                                        <i class="fas fa-trash"></i>
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info text-center">
                            <i class="fas fa-info-circle"></i>
                            لا توجد مراكز تكلفة مسجلة في النظام
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function deleteCostCenter(id) {
            if (confirm('هل أنت متأكد من حذف مركز التكلفة هذا؟')) {
                $.post('@Url.Action("Delete")', { id: id }, function(result) {
                    if (result.success) {
                        location.reload();
                    } else {
                        alert(result.message || 'حدث خطأ أثناء الحذف');
                    }
                });
            }
        }
    </script>
}

