@model AccountingSystem.ViewModels.EditCostCenterViewModel

@{
    ViewData["Title"] = "تعديل مركز التكلفة";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">تعديل مركز التكلفة: @Model.NameAr</h3>
                    <div class="card-tools">
                        <a href="@Url.Action("Details", new { id = Model.Id })" class="btn btn-info">
                            <i class="fas fa-eye"></i> عرض التفاصيل
                        </a>
                        <a href="@Url.Action("Index")" class="btn btn-secondary">
                            <i class="fas fa-arrow-right"></i> العودة للقائمة
                        </a>
                    </div>
                </div>
                <form asp-action="Edit" method="post">
                    <input asp-for="Id" type="hidden" />
                    <div class="card-body">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="Code" class="form-label">كود مركز التكلفة <span class="text-danger">*</span></label>
                                    <input asp-for="Code" class="form-control" placeholder="أدخل كود مركز التكلفة" />
                                    <span asp-validation-for="Code" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="NameAr" class="form-label">الاسم العربي <span class="text-danger">*</span></label>
                                    <input asp-for="NameAr" class="form-control" placeholder="أدخل الاسم العربي" />
                                    <span asp-validation-for="NameAr" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="NameEn" class="form-label">الاسم الإنجليزي</label>
                                    <input asp-for="NameEn" class="form-control" placeholder="أدخل الاسم الإنجليزي" />
                                    <span asp-validation-for="NameEn" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <div class="form-check mt-4">
                                        <input asp-for="IsActive" class="form-check-input" type="checkbox" />
                                        <label asp-for="IsActive" class="form-check-label">نشط</label>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-12">
                                <div class="form-group mb-3">
                                    <label asp-for="Description" class="form-label">الوصف</label>
                                    <textarea asp-for="Description" class="form-control" rows="4" placeholder="أدخل وصف مركز التكلفة"></textarea>
                                    <span asp-validation-for="Description" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save"></i> حفظ التغييرات
                        </button>
                        <a href="@Url.Action("Details", new { id = Model.Id })" class="btn btn-secondary">
                            <i class="fas fa-times"></i> إلغاء
                        </a>
                        <button type="button" class="btn btn-danger float-end" onclick="deleteCostCenter(@Model.Id)">
                            <i class="fas fa-trash"></i> حذف مركز التكلفة
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        function deleteCostCenter(id) {
            if (confirm('هل أنت متأكد من حذف مركز التكلفة هذا؟ سيتم حذف جميع البيانات المرتبطة به.')) {
                $.post('@Url.Action("Delete")', { id: id }, function(result) {
                    if (result.success) {
                        window.location.href = '@Url.Action("Index")';
                    } else {
                        alert(result.message || 'حدث خطأ أثناء الحذف');
                    }
                });
            }
        }
    </script>
}

