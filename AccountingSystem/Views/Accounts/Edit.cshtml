@model AccountingSystem.ViewModels.EditAccountViewModel

@{
    ViewData["Title"] = "تعديل الحساب";
    Layout = "_AccountingLayout";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">تعديل الحساب: @Model.NameAr</h3>
                    <div class="card-tools">
                        <a href="@Url.Action("Details", new { id = Model.Id })" class="btn btn-info">
                            <i class="fas fa-eye"></i> عرض التفاصيل
                        </a>
                        <a href="@Url.Action("Index")" class="btn btn-secondary">
                            <i class="fas fa-arrow-right"></i> العودة للقائمة
                        </a>
                    </div>
                </div>
                <form asp-action="Edit" method="post">
                    <input asp-for="Id" type="hidden" />
                    <div class="card-body">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                        
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="Code" class="form-label">كود الحساب <span class="text-danger">*</span></label>
                                    <input asp-for="Code" class="form-control" placeholder="أدخل كود الحساب" />
                                    <span asp-validation-for="Code" class="text-danger"></span>
                                    <small class="form-text text-muted">تغيير الكود قد يؤثر على التقارير</small>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="NameAr" class="form-label">الاسم العربي <span class="text-danger">*</span></label>
                                    <input asp-for="NameAr" class="form-control" placeholder="أدخل الاسم العربي للحساب" />
                                    <span asp-validation-for="NameAr" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="NameEn" class="form-label">الاسم الإنجليزي</label>
                                    <input asp-for="NameEn" class="form-control" placeholder="أدخل الاسم الإنجليزي للحساب" />
                                    <span asp-validation-for="NameEn" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="ParentAccountId" class="form-label">الحساب الأب</label>
                                    <select asp-for="ParentAccountId" asp-items="Model.ParentAccounts" class="form-select">
                                        <option value="">-- اختر الحساب الأب --</option>
                                    </select>
                                    <span asp-validation-for="ParentAccountId" class="text-danger"></span>
                                    <small class="form-text text-muted">تغيير الحساب الأب قد يؤثر على الهيكل</small>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group mb-3">
                                    <label asp-for="AccountType" class="form-label">نوع الحساب <span class="text-danger">*</span></label>
                                    <select asp-for="AccountType" class="form-select" id="accountTypeSelect">
                                        <option value="">-- اختر نوع الحساب --</option>
                                        <option value="Assets">الأصول</option>
                                        <option value="Liabilities">الخصوم</option>
                                        <option value="Equity">حقوق الملكية</option>
                                        <option value="Revenue">الإيرادات</option>
                                        <option value="Expenses">المصروفات</option>
                                    </select>
                                    <span asp-validation-for="AccountType" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group mb-3">
                                    <label asp-for="SubClassification" class="form-label">التصنيف الفرعي <span class="text-danger">*</span></label>
                                    <select asp-for="SubClassification" class="form-select" id="subClassificationSelect">
                                        <option value="">-- اختر التصنيف الفرعي --</option>
                                    </select>
                                    <span asp-validation-for="SubClassification" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group mb-3">
                                    <label asp-for="Nature" class="form-label">طبيعة الحساب <span class="text-danger">*</span></label>
                                    <select asp-for="Nature" class="form-select">
                                        <option value="">-- اختر طبيعة الحساب --</option>
                                        <option value="Debit">مدين</option>
                                        <option value="Credit">دائن</option>
                                    </select>
                                    <span asp-validation-for="Nature" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="OpeningBalance" class="form-label">الرصيد الافتتاحي</label>
                                    <input asp-for="OpeningBalance" class="form-control" type="number" step="0.01" />
                                    <span asp-validation-for="OpeningBalance" class="text-danger"></span>
                                    <small class="form-text text-muted">الرصيد الحالي: @Model.CurrentBalance.ToString("N0")</small>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="Level" class="form-label">المستوى</label>
                                    <input asp-for="Level" class="form-control" type="number" readonly />
                                    <span asp-validation-for="Level" class="text-danger"></span>
                                    <small class="form-text text-muted">يتم حساب المستوى تلقائياً</small>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-12">
                                <div class="form-group mb-3">
                                    <label asp-for="Description" class="form-label">الوصف</label>
                                    <textarea asp-for="Description" class="form-control" rows="3" placeholder="أدخل وصف الحساب"></textarea>
                                    <span asp-validation-for="Description" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-check mb-3">
                                    <input asp-for="IsActive" class="form-check-input" type="checkbox" />
                                    <label asp-for="IsActive" class="form-check-label">نشط</label>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-check mb-3">
                                    <input asp-for="CanPostTransactions" class="form-check-input" type="checkbox" />
                                    <label asp-for="CanPostTransactions" class="form-check-label">قابل للترحيل</label>
                                    <small class="form-text text-muted">الحسابات الفرعية فقط قابلة للترحيل</small>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-check mb-3">
                                    <input asp-for="RequiresCostCenter" class="form-check-input" type="checkbox" />
                                    <label asp-for="RequiresCostCenter" class="form-check-label">يتطلب مركز تكلفة</label>
                                </div>
                            </div>
                        </div>

                        @if (Model.HasTransactions)
                        {
                            <div class="alert alert-warning">
                                <i class="fas fa-exclamation-triangle"></i>
                                <strong>تحذير:</strong> هذا الحساب يحتوي على معاملات مالية. تغيير بعض الخصائص قد يؤثر على التقارير المالية.
                            </div>
                        }
                    </div>
                    <div class="card-footer">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save"></i> حفظ التغييرات
                        </button>
                        <a href="@Url.Action("Details", new { id = Model.Id })" class="btn btn-secondary">
                            <i class="fas fa-times"></i> إلغاء
                        </a>
                        @if (!Model.HasTransactions)
                        {
                            <button type="button" class="btn btn-danger float-end" onclick="deleteAccount(@Model.Id)">
                                <i class="fas fa-trash"></i> حذف الحساب
                            </button>
                        }
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $(document).ready(function() {
            // تحديث التصنيف الفرعي عند تحميل الصفحة
            updateSubClassification();
            
            // تحديث التصنيف الفرعي عند تغيير نوع الحساب
            $('#accountTypeSelect').change(function() {
                updateSubClassification();
            });

            // تحديث المستوى عند تغيير الحساب الأب
            $('#ParentAccountId').change(function() {
                var parentId = $(this).val();
                if (parentId) {
                    $.get('@Url.Action("GetAccountLevel")', { parentId: parentId }, function(level) {
                        $('#Level').val(level + 1);
                    });
                } else {
                    $('#Level').val(1);
                }
            });
        });

        function updateSubClassification() {
            var accountType = $('#accountTypeSelect').val();
            var currentValue = '@Model.SubClassification';
            var subClassificationSelect = $('#subClassificationSelect');
            
            subClassificationSelect.empty().append('<option value="">-- اختر التصنيف الفرعي --</option>');
            
            if (accountType) {
                var options = getSubClassificationOptions(accountType);
                $.each(options, function(value, text) {
                    var selected = value === currentValue ? 'selected' : '';
                    subClassificationSelect.append('<option value="' + value + '" ' + selected + '>' + text + '</option>');
                });
            }
        }

        function getSubClassificationOptions(accountType) {
            var options = {};
            
            switch(accountType) {
                case 'Assets':
                    options = {
                        'CurrentAssets': 'الأصول المتداولة',
                        'FixedAssets': 'الأصول الثابتة',
                        'IntangibleAssets': 'الأصول غير الملموسة'
                    };
                    break;
                case 'Liabilities':
                    options = {
                        'CurrentLiabilities': 'الخصوم المتداولة',
                        'LongTermLiabilities': 'الخصوم طويلة الأجل'
                    };
                    break;
                case 'Equity':
                    options = {
                        'Capital': 'رأس المال',
                        'RetainedEarnings': 'الأرباح المحتجزة',
                        'Reserves': 'الاحتياطيات'
                    };
                    break;
                case 'Revenue':
                    options = {
                        'OperatingRevenue': 'الإيرادات التشغيلية',
                        'NonOperatingRevenue': 'الإيرادات غير التشغيلية'
                    };
                    break;
                case 'Expenses':
                    options = {
                        'OperatingExpenses': 'المصروفات التشغيلية',
                        'AdministrativeExpenses': 'المصروفات الإدارية',
                        'FinancialExpenses': 'المصروفات المالية'
                    };
                    break;
            }
            
            return options;
        }

        function deleteAccount(id) {
            if (confirm('هل أنت متأكد من حذف هذا الحساب؟ سيتم حذف جميع الحسابات الفرعية أيضاً.')) {
                $.post('@Url.Action("Delete")', { id: id }, function(result) {
                    if (result.success) {
                        window.location.href = '@Url.Action("Index")';
                    } else {
                        alert(result.message || 'حدث خطأ أثناء الحذف');
                    }
                });
            }
        }
    </script>
}

