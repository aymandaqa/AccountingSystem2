@model AccountingSystem.ViewModels.CreateAccountViewModel

@{
    ViewData["Title"] = "إضافة حساب جديد";
    Layout = "_AccountingLayout";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">إضافة حساب جديد</h3>
                    <div class="card-tools">
                        <a href="@Url.Action("Index")" class="btn btn-secondary">
                            <i class="fas fa-arrow-right"></i> العودة للقائمة
                        </a>
                        <a href="@Url.Action("Tree")" class="btn btn-success">
                            <i class="fas fa-sitemap"></i> عرض الشجرة
                        </a>
                    </div>
                </div>
                <form asp-action="Create" method="post">
                    <div class="card-body">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                        <input asp-for="Classification" type="hidden" id="Classification" />

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="Code" class="form-label">كود الحساب <span class="text-danger">*</span></label>
                                    <input asp-for="Code" class="form-control" placeholder="أدخل كود الحساب" />
                                    <span asp-validation-for="Code" class="text-danger"></span>
                                    <small class="form-text text-muted">يجب أن يكون الكود فريداً ومتسلسلاً</small>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="NameAr" class="form-label">الاسم العربي <span class="text-danger">*</span></label>
                                    <input asp-for="NameAr" class="form-control" placeholder="أدخل الاسم العربي للحساب" />
                                    <span asp-validation-for="NameAr" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="NameEn" class="form-label">الاسم الإنجليزي</label>
                                    <input asp-for="NameEn" class="form-control" placeholder="أدخل الاسم الإنجليزي للحساب" />
                                    <span asp-validation-for="NameEn" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="ParentId" class="form-label">الحساب الأب</label>
                                    <select asp-for="ParentId" asp-items="Model.ParentAccounts" class="form-select">
                                        <option value="">-- اختر الحساب الأب --</option>
                                    </select>
                                    <span asp-validation-for="ParentId" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="AccountType" class="form-label">نوع الحساب <span class="text-danger">*</span></label>
                                    <select asp-for="AccountType" class="form-select" id="accountTypeSelect">
                                        <option value="">-- اختر نوع الحساب --</option>
                                        <option value="Assets">الأصول</option>
                                        <option value="Liabilities">الخصوم</option>
                                        <option value="Equity">حقوق الملكية</option>
                                        <option value="Revenue">الإيرادات</option>
                                        <option value="Expenses">المصروفات</option>
                                    </select>
                                    <span asp-validation-for="AccountType" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="Nature" class="form-label">طبيعة الحساب <span class="text-danger">*</span></label>
                                    <select asp-for="Nature" class="form-select" id="natureSelect">
                                        <option value="">-- اختر طبيعة الحساب --</option>
                                        <option value="Debit">مدين</option>
                                        <option value="Credit">دائن</option>
                                    </select>
                                    <span asp-validation-for="Nature" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-12">
                                <div class="form-group mb-3">
                                    <label asp-for="OpeningBalance" class="form-label">الرصيد الافتتاحي</label>
                                    <input asp-for="OpeningBalance" class="form-control" type="number" step="0.01" placeholder="0.00" />
                                    <span asp-validation-for="OpeningBalance" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-check mb-3">
                                    <input asp-for="IsActive" class="form-check-input" type="checkbox" checked />
                                    <label asp-for="IsActive" class="form-check-label">نشط</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-check mb-3">
                                    <input asp-for="CanPostTransactions" class="form-check-input" type="checkbox" />
                                    <label asp-for="CanPostTransactions" class="form-check-label">قابل للترحيل</label>
                                    <small class="form-text text-muted">الحسابات الفرعية فقط قابلة للترحيل</small>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save"></i> حفظ الحساب
                        </button>
                        <a href="@Url.Action("Index")" class="btn btn-secondary">
                            <i class="fas fa-times"></i> إلغاء
                        </a>
                        <button type="button" class="btn btn-info" onclick="generateCode()">
                            <i class="fas fa-magic"></i> توليد كود تلقائي
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $(document).ready(function() {
            $('#accountTypeSelect').change(function() {
                var accountType = $(this).val();
                var defaultNature = getDefaultNature(accountType);
                $('#natureSelect').val(defaultNature);
                $('#Classification').val(getClassification(accountType));
            }).change();
        });

        function getClassification(accountType) {
            switch(accountType) {
                case 'Assets':
                case 'Liabilities':
                case 'Equity':
                    return 'BalanceSheet';
                case 'Revenue':
                case 'Expenses':
                    return 'IncomeStatement';
                default:
                    return '';
            }
        }

        function getDefaultNature(accountType) {
            switch(accountType) {
                case 'Assets':
                case 'Expenses':
                    return 'Debit';
                case 'Liabilities':
                case 'Equity':
                case 'Revenue':
                    return 'Credit';
                default:
                    return '';
            }
        }

        function generateCode() {
            var accountType = $('#accountTypeSelect').val();
            var parentId = $('#ParentId').val();
            
            if (!accountType) {
                alert('يرجى اختيار نوع الحساب أولاً');
                return;
            }
            
            $.post('@Url.Action("GenerateAccountCode")', { 
                accountType: accountType, 
                parentId: parentId 
            }, function(result) {
                if (result.success) {
                    $('#Code').val(result.code);
                } else {
                    alert(result.message || 'حدث خطأ في توليد الكود');
                }
            });
        }
    </script>
}

