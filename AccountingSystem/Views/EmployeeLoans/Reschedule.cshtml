@model AccountingSystem.ViewModels.EmployeeLoanRescheduleViewModel
@{
    ViewData["Title"] = "إعادة جدولة القرض";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0">إعادة جدولة القرض</h2>
        <a asp-action="Index" class="btn btn-outline-secondary"><i class="fas fa-arrow-left"></i> العودة</a>
    </div>

    <div class="card shadow-sm mb-3">
        <div class="card-body">
            <div class="row g-3">
                <div class="col-md-4">
                    <div class="fw-bold">الموظف</div>
                    <div>@Model.EmployeeName</div>
                </div>
                <div class="col-md-4">
                    <div class="fw-bold">الرصيد المتبقي</div>
                    <div>@Model.OutstandingAmount.ToString("N2")</div>
                </div>
                <div class="col-md-4">
                    <div class="fw-bold">الأقساط المتبقية</div>
                    <div>@Model.RemainingInstallments</div>
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <form asp-action="Reschedule" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Id" />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="row g-3">
                    <div class="col-md-4">
                        <label asp-for="StartDate" class="form-label"></label>
                        <input asp-for="StartDate" class="form-control" type="date" />
                        <span asp-validation-for="StartDate" class="text-danger"></span>
                    </div>
                    <div class="col-md-4">
                        <label asp-for="InstallmentAmount" class="form-label"></label>
                        <input asp-for="InstallmentAmount" class="form-control" type="number" min="0" step="0.01" />
                        <span asp-validation-for="InstallmentAmount" class="text-danger"></span>
                    </div>
                    <div class="col-md-4">
                        <label asp-for="InstallmentCount" class="form-label"></label>
                        <input asp-for="InstallmentCount" class="form-control" type="number" min="1" step="1" />
                        <span asp-validation-for="InstallmentCount" class="text-danger"></span>
                    </div>
                </div>

                <div class="row g-3 mt-1">
                    <div class="col-md-4">
                        <label asp-for="Frequency" class="form-label"></label>
                        <select asp-for="Frequency" class="form-select" asp-items="Html.GetEnumSelectList<AccountingSystem.Models.LoanInstallmentFrequency>()"></select>
                    </div>
                    <div class="col-md-8">
                        <label asp-for="Notes" class="form-label"></label>
                        <textarea asp-for="Notes" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="Notes" class="text-danger"></span>
                    </div>
                </div>

                <div class="mt-4">
                    <button type="submit" class="btn btn-primary"><i class="fas fa-sync"></i> تحديث الجدول</button>
                    <a asp-action="Index" class="btn btn-outline-secondary ms-2">إلغاء</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
