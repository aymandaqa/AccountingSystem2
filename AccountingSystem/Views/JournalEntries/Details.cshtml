@model AccountingSystem.ViewModels.JournalEntryDetailsViewModel
@{
    ViewData["Title"] = "تفاصيل القيد المالي";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h3 class="card-title mb-0">
                        <i class="fas fa-eye me-2"></i>
                        تفاصيل القيد المالي: @Model.Number
                    </h3>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-right"></i> العودة للقائمة
                    </a>
                </div>
                <div class="card-body">
                    <div class="mb-4">
                        <h5 class="fw-bold mb-3"><i class="fas fa-cogs me-2"></i>العمليات</h5>
                        <div class="d-flex flex-wrap gap-2">
                            @if (Model.Status == "Draft")
                            {
                                <form asp-action="Post" asp-route-id="@Model.Id" method="post" class="d-inline" asp-require-permission="journal.edit" onsubmit="return confirm('هل تريد ترحيل القيد رقم @Model.Number؟');">
                                    <button type="submit" class="btn btn-success">
                                        <i class="fas fa-share"></i> ترحيل
                                    </button>
                                </form>
                                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary" asp-require-permission="journal.edit">
                                    <i class="fas fa-edit"></i> تعديل
                                </a>
                            }
                            <a asp-action="Print" asp-route-id="@Model.Id" target="_blank" rel="noopener" class="btn btn-outline-secondary" asp-require-permission="journal.view">
                                <i class="fas fa-print"></i> طباعة
                            </a>
                            @if (Model.Status == "Draft" || Model.Status == "Posted")
                            {
                                <form asp-action="Delete" asp-route-id="@Model.Id" method="post" class="d-inline" asp-require-permission="journal.delete" onsubmit="return confirm('هل تريد إلغاء القيد رقم @Model.Number؟');">
                                    <button type="submit" class="btn btn-danger">
                                        <i class="fas fa-trash"></i> إلغاء
                                    </button>
                                </form>
                            }
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-3">
                            <strong>رقم القيد:</strong> @Model.Number
                        </div>
                        <div class="col-md-3">
                            <strong>التاريخ:</strong> @Model.Date.ToString("dd/MM/yyyy")
                        </div>
                        <div class="col-md-3">
                            <strong>الفرع:</strong> @Model.BranchName
                        </div>
                        <div class="col-md-3">
                            <strong>الحالة:</strong>
                            @switch (Model.Status)
                            {
                                case "Draft":
                                    <span class="badge bg-secondary">مسودة</span>
                                    break;
                                case "Posted":
                                    <span class="badge bg-success">مرحل</span>
                                    break;
                                case "Approved":
                                    <span class="badge bg-primary">معتمد</span>
                                    break;
                                case "Cancelled":
                                    <span class="badge bg-danger">ملغي</span>
                                    break;
                                default:
                                    <span class="badge bg-secondary">@Model.Status</span>
                                    break;
                            }
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <strong>البيان:</strong>
                            <p>@Model.Description</p>
                        </div>
                        <div class="col-md-6">
                            <strong>المرجع:</strong>
                            <p>@(string.IsNullOrWhiteSpace(Model.Reference) ? "-" : Model.Reference)</p>
                        </div>
                    </div>

                    @if (!string.IsNullOrWhiteSpace(Model.Notes))
                    {
                        <div class="row mb-3">
                            <div class="col-12">
                                <strong>ملاحظات إضافية:</strong>
                                <p class="mb-0">@Model.Notes</p>
                            </div>
                        </div>
                    }

                    <div class="row mb-3">
                        <div class="col-md-3">
                            <strong>أنشئ بواسطة:</strong>
                            <p class="mb-1">@(!string.IsNullOrWhiteSpace(Model.CreatedByName) ? Model.CreatedByName : "-")</p>
                            @if (!string.IsNullOrWhiteSpace(Model.CreatedByUserName))
                            {
                                <p class="text-muted small mb-0">اسم المستخدم: @Model.CreatedByUserName</p>
                            }
                        </div>
                        <div class="col-md-3">
                            <strong>تاريخ الإنشاء:</strong>
                            <p>@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</p>
                        </div>
                        <div class="col-md-3">
                            <strong>آخر تحديث:</strong>
                            <p>@(Model.UpdatedAt.HasValue ? Model.UpdatedAt.Value.ToString("dd/MM/yyyy HH:mm") : "-")</p>
                        </div>
                        <div class="col-md-3">
                            <strong>الاعتماد:</strong>
                            <p class="mb-1">@(!string.IsNullOrWhiteSpace(Model.ApprovedByName) ? Model.ApprovedByName : "-")</p>
                            @if (!string.IsNullOrWhiteSpace(Model.ApprovedByUserName))
                            {
                                <p class="text-muted small mb-1">اسم المستخدم: @Model.ApprovedByUserName</p>
                            }
                            <p class="text-muted small mb-0">تاريخ الاعتماد: @(Model.ApprovedAt.HasValue ? Model.ApprovedAt.Value.ToString("dd/MM/yyyy HH:mm") : "-")</p>
                        </div>
                    </div>

                    <div class="table-responsive">
                        <table class="table table-bordered">
                            <thead class="table-dark">
                                <tr>
                                    <th>الكود</th>
                                    <th>اسم الحساب</th>
                                    <th>البيان</th>
                                    <th>مركز التكلفة</th>
                                    <th>مدين</th>
                                    <th>دائن</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var line in Model.Lines)
                                {
                                    <tr>
                                        <td>@line.AccountCode</td>
                                        <td>@line.AccountName</td>
                                        <td>@line.Description</td>
                                        <td>@(string.IsNullOrWhiteSpace(line.CostCenterName) ? "-" : line.CostCenterName)</td>
                                        <td>@line.DebitAmount.ToString("N2")</td>
                                        <td>@line.CreditAmount.ToString("N2")</td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr class="table-info">
                                    <td colspan="4"><strong>الإجمالي:</strong></td>
                                    <td><strong>@Model.TotalDebit.ToString("N2")</strong></td>
                                    <td><strong>@Model.TotalCredit.ToString("N2")</strong></td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
