@using AccountingSystem.ViewModels
@model UsersIndexViewModel

@{
    ViewData["Title"] = "المستخدمون";
    var startItem = Model.TotalCount == 0 ? 0 : ((Model.CurrentPage - 1) * Model.PageSize) + 1;
    var endItem = Math.Min(Model.CurrentPage * Model.PageSize, Model.TotalCount);
    var pageSizes = new[] { 10, 20, 50, 100 };
    var hasCustomPageSize = Array.IndexOf(pageSizes, Model.PageSize) >= 0;
}

<h1 class="mb-4">المستخدمون</h1>
<div class="mb-3">
    <a class="btn btn-success" asp-action="Create" asp-require-permission="users.create"><i class="fas fa-plus"></i> مستخدم جديد</a>
</div>

<form id="usersAntiForgery" method="post" class="d-none">
    @Html.AntiForgeryToken()
</form>

<div class="card shadow-sm">
    <div class="card-body" dir="rtl">
        <form id="usersFilterForm" method="get" asp-action="Index" class="mb-4">
            <input type="hidden" name="page" value="1" />
            <div class="row gy-2 gx-3 align-items-center">
                <div class="col-lg-6">
                    <div class="input-group">
                        <input type="text" name="searchTerm" value="@Model.SearchTerm" class="form-control" placeholder="ابحث بالبريد الإلكتروني أو الاسم..." />
                        <button type="submit" class="btn btn-primary" title="بحث">
                            <i class="fas fa-search"></i>
                        </button>
                        <a class="btn btn-outline-secondary" href="@Url.Action("Index")" title="إعادة تعيين البحث">
                            <i class="fas fa-times"></i>
                        </a>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6">
                    <div class="input-group">
                        <span class="input-group-text">عدد العناصر</span>
                        <select class="form-select" name="pageSize" onchange="this.form.submit()">
                            @if (!hasCustomPageSize)
                            {
                                <option value="@Model.PageSize" selected>@Model.PageSize</option>
                            }
                            @foreach (var size in pageSizes)
                            {
                                if (size == Model.PageSize)
                                {
                                    <option value="@size" selected="selected">@size</option>
                                }
                                else
                                {
                                    <option value="@size">@size</option>
                                }
                            }
                        </select>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6 text-lg-end text-md-start">
                    <div class="text-muted small">
                        @if (Model.TotalCount > 0)
                        {
                            <span>عرض @startItem - @endItem من @Model.TotalCount مستخدم</span>
                        }
                        else
                        {
                            <span>لا توجد بيانات لعرضها</span>
                        }
                    </div>
                </div>
            </div>
        </form>

        <div class="table-responsive">
            <table class="table table-striped table-hover align-middle" id="usersTable">
                <thead class="table-light">
                    <tr>
                        <th scope="col">البريد الإلكتروني</th>
                        <th scope="col">الاسم</th>
                        <th scope="col" class="text-center">نشط</th>
                        <th scope="col">آخر تسجيل دخول</th>
                        <th scope="col" class="text-center">الإجراءات</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Users.Count > 0)
                    {
                        foreach (var user in Model.Users)
                        {
                            <tr>
                                <td>@user.Email</td>
                                <td>@user.FullName</td>
                                <td class="text-center">
                                    <span class="badge @(user.IsActive ? "bg-success" : "bg-secondary") js-user-status">@(user.IsActive ? "نعم" : "لا")</span>
                                </td>
                                <td>
                                    @(user.LastLoginAt.HasValue ? user.LastLoginAt.Value.ToString("dd/MM/yyyy HH:mm") : "-")
                                </td>
                                <td class="text-center">
                                    <div class="btn-group btn-group-sm user-actions" role="group">
                                        <a class="btn btn-warning" asp-action="Edit" asp-route-id="@user.Id" title="تعديل" asp-require-permission="users.edit"><i class="fas fa-edit"></i></a>
                                        <a class="btn btn-primary" asp-action="ManagePermissions" asp-route-id="@user.Id" title="الصلاحيات" asp-require-permission="users.edit"><i class="fas fa-key"></i></a>
                                        <a class="btn btn-secondary" asp-action="ResetPassword" asp-route-id="@user.Id" title="إعادة ضبط كلمة المرور" asp-require-permission="users.edit"><i class="fas fa-lock"></i></a>
                                        <button type="button" class="btn @(user.IsActive ? "btn-danger" : "btn-success") js-toggle-user" data-id="@user.Id" asp-require-permission="users.edit">
                                            <i class="fas @(user.IsActive ? "fa-user-slash" : "fa-user")"></i> @(user.IsActive ? "إيقاف" : "تفعيل")
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5" class="text-center text-muted py-5">لا توجد بيانات لعرضها.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <nav aria-label="صفحات المستخدمين" class="mt-3">
            <ul class="pagination justify-content-center">
                <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : null)">
                    <a class="page-link" asp-action="Index" asp-route-page="@(Model.CurrentPage - 1)" asp-route-searchTerm="@Model.SearchTerm" asp-route-pageSize="@Model.PageSize">
                        <span aria-hidden="true">&laquo;</span> السابق
                    </a>
                </li>
                @{
                    var startPage = Math.Max(1, Model.CurrentPage - 2);
                    var endPage = Math.Min(Model.TotalPages, Model.CurrentPage + 2);
                    if (endPage - startPage < 4)
                    {
                        var adjustment = 4 - (endPage - startPage);
                        startPage = Math.Max(1, startPage - adjustment);
                        endPage = Math.Min(Model.TotalPages, startPage + 4);
                    }
                    for (var pageNumber = startPage; pageNumber <= endPage; pageNumber++)
                    {
                        <li class="page-item @(pageNumber == Model.CurrentPage ? "active" : null)">
                            <a class="page-link" asp-action="Index" asp-route-page="@pageNumber" asp-route-searchTerm="@Model.SearchTerm" asp-route-pageSize="@Model.PageSize">@pageNumber</a>
                        </li>
                    }
                }
                <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : null)">
                    <a class="page-link" asp-action="Index" asp-route-page="@(Model.CurrentPage + 1)" asp-route-searchTerm="@Model.SearchTerm" asp-route-pageSize="@Model.PageSize">
                        التالي <span aria-hidden="true">&raquo;</span>
                    </a>
                </li>
            </ul>
        </nav>
    </div>
</div>

@section Styles {
    <style>
        #usersTable tbody tr td {
            vertical-align: middle;
        }

        #usersTable .user-actions .btn {
            min-width: 36px;
        }
    </style>
}

@section Scripts {
    <script src="~/js/users.table.js" asp-append-version="true"></script>
}
