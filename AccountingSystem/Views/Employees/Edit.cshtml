@model AccountingSystem.ViewModels.EditEmployeeViewModel
@{
    ViewData["Title"] = "تعديل بيانات الموظف";
    Layout = "_AccountingLayout";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h3 class="card-title">تعديل بيانات: @Model.Name</h3>
                    <a href="@Url.Action("Index")" class="btn btn-secondary">
                        <i class="fas fa-arrow-right"></i> العودة للقائمة
                    </a>
                </div>
                <form asp-action="Edit" method="post">
                    <input asp-for="Id" type="hidden" />
                    <div class="card-body">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="Name" class="form-label">اسم الموظف<span class="text-danger">*</span></label>
                                <input asp-for="Name" class="form-control" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="JobTitle" class="form-label">المسمى الوظيفي</label>
                                <input asp-for="JobTitle" class="form-control" />
                                <span asp-validation-for="JobTitle" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="BranchId" class="form-label">الفرع<span class="text-danger">*</span></label>
                                <select asp-for="BranchId" asp-items="Model.Branches" class="form-select">
                                    <option value="">اختر الفرع</option>
                                </select>
                                <span asp-validation-for="BranchId" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="HireDate" class="form-label">تاريخ التعيين</label>
                                <input asp-for="HireDate" type="date" class="form-control" />
                                <span asp-validation-for="HireDate" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Salary" class="form-label">الراتب</label>
                                <input asp-for="Salary" class="form-control" />
                                <span asp-validation-for="Salary" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="PhoneNumber" class="form-label">رقم الهاتف</label>
                                <input asp-for="PhoneNumber" class="form-control" />
                                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                            </div>
                            <div class="col-12">
                                <label asp-for="Address" class="form-label">العنوان</label>
                                <textarea asp-for="Address" class="form-control" rows="3"></textarea>
                                <span asp-validation-for="Address" class="text-danger"></span>
                            </div>
                            <div class="col-12">
                                <div class="form-check">
                                    <input asp-for="IsActive" class="form-check-input" />
                                    <label asp-for="IsActive" class="form-check-label">نشط</label>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer d-flex justify-content-between align-items-center">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save"></i> حفظ التعديلات
                        </button>
                        <span class="text-muted">كود الحساب: <strong>@Model.AccountCode</strong></span>
                    </div>
                </form>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="alert alert-warning">
                <h5 class="alert-heading"><i class="fas fa-exclamation-triangle"></i> تنبيه</h5>
                <p>تغيير الفرع سيؤدي إلى نقل حساب الموظف تحت حساب الموظفين للفرع الجديد.</p>
                <p class="mb-0">تأكد من إعداد الحساب الرئيسي للموظفين في الفرع الجديد قبل حفظ التغييرات.</p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
